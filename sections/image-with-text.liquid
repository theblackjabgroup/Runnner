          line-height: var(--t-h-2-line-height) !important;
        }
      }
    {% endif %}

    @media screen and (max-width: 750px){
      .image-with-text-button-text, .image-with-text-button-text-hover{
        font-size: var(--tm-b-2-size) !important;
      }
      .image-with-text-text-content{
        font-size: var(--tm-b-1-size) !important;
        line-height: 2rem !important;
      }
    }

    /* Heading background color - separate blocks per line like the image */
    {% if section.settings.enable_heading_background %}
      /* Base styles for heading container: Set the look */
      .image-with-text-heading {
        font-weight: bold;
        text-transform: uppercase;
        line-height: 1.2;
      }

      /* Class to apply the inline background/padding wrap */
      .heading-background-block-style {
        display: inline; /* CRITICAL: Allows background to wrap lines */
        padding: 0 var(--space-xs); /* 5px padding left and right */
        background: linear-gradient(to bottom, transparent 22%, {{ section.settings.heading_background_color | default: '#000000' }} 22%);
        background-size: 100% 100%;
        background-origin: border-box;
        -webkit-box-decoration-break: clone;
        box-decoration-break: clone;
        color: inherit !important; /* Inherit color from parent h2 */
      }

      /* Ensure the inner animation container respects the inline display */
      .image-with-text-heading > .image-with-text-letter-animation-container.animation-ready {
          display: inline;
      }

    {% endif %}

    @media screen and (min-width: 750px) {
      .image-with-text-section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
    @keyframes letterAppear {
      0% {
        transform: translateX(10000%);
        opacity: 0;
      }
      100% {
        transform: translateX(0);
        opacity: 1;
      }
    }

    /* Animation styling for word-level control */
    .image-with-text-image-with-text-letter-animation-container {
      display: inline-block;
      width: 100%;
      /* max-width: 550px; */
      overflow: visible;
      position: relative;
    }

    /* Style for each word container */
    .animated-word {
      display: inline-block;
      white-space: nowrap; /* Ensure words don't break */
      margin-right: 0.2em; /* Optional: slight spacing between words */
    }

    /* Style for individual letters */
    .animated-letter {
      display: inline-block;
      opacity: 0;
      transform: translateX(500%);
      position: relative;
    }

    /* Style for spaces between words */
    .animated-space {
      display: inline-block;
      opacity: 0;
      transform: translateX(500%);
      position: relative;
      /* Adjust this if needed for proper spacing */
    }

    /* Ensure headings don't break words at boundaries */
    .image-with-text-heading {
      word-break: keep-all; /* Prevent breaking words */
      overflow-wrap: break-word;
      line-height: 1.2; /* Allow wrapping between words */
    }

    /* Make heading flush with edges when positioned at left or right */
    {% if section.settings.horizontal_position == 'flex-start' or section.settings.horizontal_position == 'flex-end' %}
      .image-with-text-heading {
        margin-left: -{{ section.settings.content_padding }}px;
      }

      @media screen and (max-width: 749px) {
        .image-with-text-heading {
          margin-left: -{{ section.settings.content_padding_mobile | plus: 10 }}px;
        }
      }
    {% endif %}

