    {
      "type": "range",
      "id": "height_mobile",
      "min": 200,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "Section height (mobile)",
      "default": 350
    }
  ],
  "blocks": [
    {
      "type": "caption",
      "name": "Caption",
      "settings": [
        {
          "type": "text",
          "id": "caption",
          "label": "Caption text",
          "default": "Caption"
        },
        {
          "type": "select",
          "id": "caption_style",
          "label": "Caption style",
          "options": [
            {
              "value": "uppercase tracking-widest text-sm",
              "label": "Small with letter spacing"
            },
            {
              "value": "italic text-base",
              "label": "Italic"
            },
            {
              "value": "font-bold text-base",
              "label": "Bold"
            }
          ],
          "default": "uppercase tracking-widest text-sm"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#FFFFFF"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "HEADING"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading size",
          "options": [
            {
              "value": "small",
              "label": "Small"
            },
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "large",
              "label": "Large"
            }
          ],
          "default": "large"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#FFFFFF"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
