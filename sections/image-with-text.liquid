    {% if section.settings.enable_button_animation %}
    sectionElement.querySelectorAll('.button-animation').forEach(button => {
      button.style.opacity = '0';
    });
    {% else %}
    sectionElement.querySelectorAll('.button-animation').forEach(button => {
      button.style.opacity = '1';
    });
    {% endif %}
  }
}

if (prefersReducedMotion) {
  // For reduced motion, make everything visible immediately
  document.querySelectorAll('.image-with-text-letter-animation, .image-with-text-image-with-text-letter-animation, .date-animation, .text-animation, .button-animation').forEach(element => {
    element.style.opacity = '1';
  });
} else {
  const observer = new IntersectionObserver((entries, observer) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        {% if section.settings.enable_text_animation %}
        // Handle heading animations
        const headingElements = entry.target.querySelectorAll('.image-with-text-letter-animation, .image-with-text-image-with-text-letter-animation');
        
        headingElements.forEach(element => {
          // Preserve heading background wrapper if present and animate inside it
          const accessibleText = element.textContent.trim();
          element.setAttribute('aria-label', accessibleText);

          const backgroundSpan = element.querySelector('.heading-background-block-style');
          const container = backgroundSpan || element;

          // Capture original nodes to preserve <br> line breaks
          const originalNodes = Array.from(container.childNodes);

          // Clear only the target container, not the whole heading when background exists
          container.textContent = '';
          container.classList.add('image-with-text-letter-animation-container', 'animation-ready');
          container.style.opacity = '1';
          // Ensure the parent heading becomes visible as well
          element.style.opacity = '1';

          let letterIndex = 0;

          const appendWord = (word) => {
            const wordSpan = document.createElement('span');
            wordSpan.classList.add('animated-word');
            wordSpan.style.display = 'inline-block';
            wordSpan.style.whiteSpace = 'nowrap';
            for (let i = 0; i < word.length; i++) {
              const letterSpan = document.createElement('span');
              letterSpan.classList.add('animated-letter');
              letterSpan.textContent = word[i];
              letterSpan.setAttribute('aria-hidden', 'true');
              letterSpan.style.animation = `letterAppear 1s forwards`;
              letterSpan.style.animationDelay = `${letterIndex * 0.07}s`;
              letterIndex++;
              wordSpan.appendChild(letterSpan);
            }
            container.appendChild(wordSpan);
          };

          const appendSpace = () => {
            const spaceSpan = document.createElement('span');
            spaceSpan.classList.add('animated-space');
            spaceSpan.innerHTML = '&nbsp;';
            spaceSpan.style.animation = `letterAppear 1s forwards`;
            spaceSpan.style.animationDelay = `${letterIndex * 0.07}s`;
            letterIndex++;
            container.appendChild(spaceSpan);
          };

          originalNodes.forEach((node, nodeIndex) => {
            if (node.nodeType === Node.TEXT_NODE) {
              const nodeText = node.textContent || '';
              
              // Handle leading whitespace
              if (nodeText.match(/^\s+/) && nodeIndex > 0) {
                appendSpace();
              }
              
              const words = nodeText.split(/\s+/).filter(Boolean);
              words.forEach((word, i) => {
                appendWord(word);
                // Add space after each word except the last one in this node
                if (i < words.length - 1) {
                  appendSpace();
                }
              });
              
              // Handle trailing whitespace - add space if this node ends with whitespace
              // and there's a next node that contains text
              if (nodeText.match(/\s+$/) && nodeIndex < originalNodes.length - 1) {
                const nextNode = originalNodes[nodeIndex + 1];
                if (nextNode && (
                  (nextNode.nodeType === Node.TEXT_NODE && nextNode.textContent.trim()) ||
                  (nextNode.nodeType === Node.ELEMENT_NODE && nextNode.tagName !== 'BR')
                )) {
                  appendSpace();
                }
              }
            } else if (node.nodeType === Node.ELEMENT_NODE && node.tagName === 'BR') {
              container.appendChild(document.createElement('br'));
            } else if (node.nodeType === Node.ELEMENT_NODE) {
              // Handle other HTML elements by preserving them
              const clonedElement = node.cloneNode(true);
              container.appendChild(clonedElement);
            }
          });
        });

        // Handle text content animations - similar approach for paragraph text
        const textContentElements = entry.target.querySelectorAll('.image-with-text-text-content p.image-with-text-letter-animation, .image-with-text-text-content p.image-with-text-image-with-text-letter-animation');
        
        textContentElements.forEach(element => {
          const accessibleText = element.textContent.trim();
          element.setAttribute('aria-label', accessibleText);
          
          // Capture original nodes to preserve formatting
          const originalNodes = Array.from(element.childNodes);
          
          element.textContent = '';
          element.classList.add('image-with-text-letter-animation-container', 'animation-ready');
          element.style.opacity = '1';
          
          let letterIndex = 0;
          
          const appendWord = (word) => {
            const wordSpan = document.createElement('span');
            wordSpan.classList.add('animated-word');
            wordSpan.style.display = 'inline-block';
            wordSpan.style.whiteSpace = 'nowrap';
            for (let i = 0; i < word.length; i++) {
              const letterSpan = document.createElement('span');
              letterSpan.classList.add('animated-letter');
              letterSpan.textContent = word[i];
              letterSpan.setAttribute('aria-hidden', 'true');
              letterSpan.style.animation = `letterAppear 1s forwards`;
              letterSpan.style.animationDelay = `${letterIndex * 0.07}s`;
              letterIndex++;
              wordSpan.appendChild(letterSpan);
            }
            element.appendChild(wordSpan);
          };
          
          const appendSpace = () => {
            const spaceSpan = document.createElement('span');
            spaceSpan.classList.add('animated-space');
            spaceSpan.innerHTML = '&nbsp;';
            spaceSpan.style.animation = `letterAppear 1s forwards`;
            spaceSpan.style.animationDelay = `${letterIndex * 0.07}s`;
            letterIndex++;
            element.appendChild(spaceSpan);
          };
          
          originalNodes.forEach((node, nodeIndex) => {
            if (node.nodeType === Node.TEXT_NODE) {
              const nodeText = node.textContent || '';
              
              // Handle leading whitespace
              if (nodeText.match(/^\s+/) && nodeIndex > 0) {
                appendSpace();
              }
              
              const words = nodeText.split(/\s+/).filter(Boolean);
              words.forEach((word, i) => {
                appendWord(word);
                // Add space after each word except the last one in this node
                if (i < words.length - 1) {
                  appendSpace();
                }
              });
              
              // Handle trailing whitespace
              if (nodeText.match(/\s+$/) && nodeIndex < originalNodes.length - 1) {
                const nextNode = originalNodes[nodeIndex + 1];
                if (nextNode && (
                  (nextNode.nodeType === Node.TEXT_NODE && nextNode.textContent.trim()) ||
                  (nextNode.nodeType === Node.ELEMENT_NODE && nextNode.tagName !== 'BR')
                )) {
                  appendSpace();
                }
              }
            } else if (node.nodeType === Node.ELEMENT_NODE && node.tagName === 'BR') {
              element.appendChild(document.createElement('br'));
            } else if (node.nodeType === Node.ELEMENT_NODE) {
              // Preserve other HTML elements
              const clonedElement = node.cloneNode(true);
              element.appendChild(clonedElement);
            }
          });
        });

        // Handle date animations
        const dateElements = entry.target.querySelectorAll('.date-animation');
        dateElements.forEach((element, index) => {
          element.classList.add('animation-ready');
          element.style.opacity = '1';
          element.style.animation = 'buttonAppear 0.8s forwards';
          element.style.animationDelay = `${index * 0.2}s`;
        });

        // Handle text block animations
        const textElements = entry.target.querySelectorAll('.text-animation');
        textElements.forEach((element, index) => {
          element.classList.add('animation-ready');
          element.style.opacity = '1';
          element.style.animation = 'buttonAppear 0.8s forwards';
          element.style.animationDelay = `${index * 0.3}s`;
        });
        {% else %}
        // If text animation is disabled, make text visible immediately
        const textElements = entry.target.querySelectorAll('.image-with-text-letter-animation, .image-with-text-image-with-text-letter-animation, .date-animation, .text-animation');
        textElements.forEach(element => {
          element.style.opacity = '1';
        });
        {% endif %}

        {% if section.settings.enable_button_animation %}
        const buttons = entry.target.querySelectorAll('.button-animation');
        buttons.forEach(button => {
          button.classList.add('animation-ready');
          setTimeout(() => {
            button.classList.add('animated');
          }, 100);
        });
        {% else %}
        const buttons = entry.target.querySelectorAll('.button-animation');
        buttons.forEach(button => {
          button.style.opacity = '1';
        });
        {% endif %}

        observer.unobserve(entry.target);
      }
    });
  }, {
    root: null, 
    rootMargin: '0px', 
    threshold: 0.1 
  });

  document.querySelectorAll('.image-with-text-media-section-{{ section.id }}').forEach(section => {
    observer.observe(section);
  });
}

const buttons = document.querySelectorAll('.image-with-text-custom-button-css');
buttons.forEach(button => {
button.addEventListener('keydown', function(event) {
  if (event.key === 'Enter' || event.key === ' ') {
