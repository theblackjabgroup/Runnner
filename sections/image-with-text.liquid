          width: 100%;
          height: {{ section.settings.img_height_mobile }}px;
          margin-top: 0;
        {% else %}
          left: {{ settings.side_space }}px;
          width: calc(100% - {{ settings.side_space | times: 2 }}px);
          height: calc({{ section.settings.img_height_mobile }}px - calc({{ settings.sections_spacing }}px * 2));
          margin-top: {{ settings.sections_spacing }}px;
        {% endif %}
      }
