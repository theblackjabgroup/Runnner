{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- unless section.settings.quick_add == 'none' -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
{%- endunless -%}

{%- if section.settings.quick_add == 'standard' -%}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- if section.settings.quick_add == 'bulk' -%}
  <script src="{{ 'quick-add-bulk.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quick-order-list.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

<div class="collection-page-wrapper">
  {%- paginate collection.products by section.settings.products_per_page -%}
    <!-- Filters and Sorting -->
    {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
      <div class="filters-container">
        {{ 'component-facets.css' | asset_url | stylesheet_tag }}
        <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>

        <aside class="filters-sidebar" id="main-collection-filters" data-id="{{ section.id }}">
          {% render 'facets',
            results: collection,
            enable_filtering: section.settings.enable_filtering,
            enable_sorting: section.settings.enable_sorting,
            filter_type: section.settings.filter_type,
            paginate: paginate
          %}
        </aside>
      </div>
    {%- endif -%}

    <!-- Product Grid Container -->
    <div class="product-grid-main" id="ProductGridContainer">
      {%- if collection.products.size == 0 -%}
        <div class="collection-empty">
          <div class="empty-state">
            <h2 class="empty-title">{{ 'sections.collection_template.empty' | t }}</h2>
            <p class="empty-message">
              {{ 'sections.collection_template.use_fewer_filters_html' | t: link: collection.url, class: 'reset-link' }}
            </p>
          </div>
        </div>
      {%- else -%}
        <div class="products-container">
          <div class="product-grid" id="product-grid" data-id="{{ section.id }}">
            {%- for product in collection.products -%}
              <div class="product-card-item">
                {%
                  render 'card-product',
                  card_product: product,
                  media_aspect_ratio: section.settings.image_ratio,
                  image_shape: section.settings.image_shape,
                  show_secondary_image: section.settings.show_secondary_image,
                  show_vendor: section.settings.show_vendor,
                  show_rating: section.settings.show_rating,
                  lazy_load: forloop.index > 2,
                  quick_add: section.settings.quick_add,
                  section_id: section.id
                %}
              </div>
            {%- endfor -%}
          </div>

          {%- if paginate.pages > 1 -%}
            <div class="pagination-wrapper">
              {% render 'pagination', paginate: paginate, anchor: '' %}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  {%- endpaginate -%}
</div>

<style>
  /* Main Layout */
  .collection-page-wrapper {
    width: 100%;
    min-height: 100vh;
  }

  /* Filters */
  .filters-container {
    position: sticky;
    top: 75px;
    z-index: 40;
    background: white;
    padding: 0 1rem;
    margin-bottom: 2rem;
  }

  .filters-sidebar {
    width: 100%;
    background: white;
  }

  /* Product Grid */
  .products-container {
    padding: 10px 1rem;
    width: 100%;
    max-width: 1800px;
    margin: 0 auto;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px 20px;
    width: 100%;
    margin-bottom: 3rem;
  }

  /* 4 columns for screens 1500px and above */
  @media screen and (min-width: 1500px) {
    .product-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 40px 24px;
    }
  }

  /* Responsive adjustments */
  @media screen and (max-width: 1200px) {
    .product-grid {
      gap: 30px 16px;
    }
  }

  @media screen and (max-width: 768px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px 12px;
    }

    .products-container {
      padding: 0 0.5rem;
    }

    .filters-container {
      padding: 0 0.5rem;
    }
  }

  @media screen and (max-width: 480px) {
    .product-grid {
      gap: 16px 8px;
    }
  }

  /* Product Card Items */
  .product-card-item {
    width: 100%;
    position: relative;
  }

  /* Ensure consistent card dimensions */
  .product-card-item .card-wrapper {
    width: 100%;
    height: auto;
    margin-bottom: 0;
  }

  .product-card-item .product-card-height {
    height: 491px;
    width: 100%;
    object-fit: cover;
    background: #f8f8f8;
    position: relative;
    overflow: hidden;
    transition: height 0.3s ease;
    transform-origin: bottom center;
  }

  .product-card-item:hover .product-card-height {
    height: 439px;
  }

  @media screen and (min-width: 1500px) {
    .product-card-item .product-card-height {
      height: 426px !important;
    }
    .product-card-item:hover .product-card-height {
      height: 391px !important;
    }
  }

  @media screen and (max-width: 768px) {
    .product-card-item .product-card-height {
      height: 220px !important;
    }
    .product-card-item:hover .product-card-height {
      height: 250px;
    }
  }

  @media screen and (max-width: 480px) {
    .product-card-item .product-card-height {
      height: 240px;
    }
    .product-card-item:hover .product-card-height {
      height: 210px;
    }
  }

  /* Empty State */
  .collection-empty {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
    padding: 2rem;
  }

  .empty-state {
    text-align: center;
    max-width: 500px;
  }

  .empty-title {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #333;
  }

  .empty-message {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
  }

  .reset-link {
    color: #007bff;
    text-decoration: underline;
  }

  .reset-link:hover {
    color: #0056b3;
  }

  /* Pagination */
  .pagination-wrapper {
    display: flex;
    justify-content: center;
    padding: 2rem 0;
    border-top: 1px solid #eee;
    margin-top: 2rem;
  }

  /* Loading States */
  .loading-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .loading-overlay.active {
    opacity: 1;
    pointer-events: all;
  }

  /* Animation Support */
  @media (prefers-reduced-motion: no-preference) {
    .product-card-item {
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInUp 0.6s ease forwards;
    }

    .product-card-item:nth-child(1) {
      animation-delay: 0.1s;
    }
    .product-card-item:nth-child(2) {
      animation-delay: 0.2s;
    }
    .product-card-item:nth-child(3) {
      animation-delay: 0.3s;
    }
    .product-card-item:nth-child(4) {
      animation-delay: 0.4s;
    }
    .product-card-item:nth-child(n + 5) {
      animation-delay: 0.5s;
    }

    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .product-card-item {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }

  /* Print Styles */
  @media print {
    .filters-container,
    .pagination-wrapper {
      display: none;
    }

    .product-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
  }
</style>

{% schema %}
{
  "name": "Collection Product Grid",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 8,
      "max": 48,
      "step": 4,
      "default": 16,
      "label": "Products per page"
    },
    {
      "type": "header",
      "content": "Product Display"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to image"
        },
        {
          "value": "portrait",
          "label": "Portrait"
        },
        {
          "value": "square",
          "label": "Square"
        }
      ],
      "default": "adapt",
      "label": "Image ratio"
    },
    {
      "type": "select",
      "id": "image_shape",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "arch",
          "label": "Arch"
        },
        {
          "value": "blob",
          "label": "Blob"
        },
        {
          "value": "chevronleft",
          "label": "Chevron Left"
        },
        {
          "value": "chevronright",
          "label": "Chevron Right"
        },
        {
          "value": "diamond",
          "label": "Diamond"
        },
        {
          "value": "parallelogram",
          "label": "Parallelogram"
        },
        {
          "value": "round",
          "label": "Round"
        }
      ],
      "default": "default",
      "label": "Image shape"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": false,
      "label": "Show secondary image on hover"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show vendor"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": false,
      "label": "Show product rating"
    },
    {
      "type": "select",
      "id": "quick_add",
      "default": "none",
      "label": "Quick add",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "standard",
          "label": "Standard"
        },
        {
          "value": "bulk",
          "label": "Bulk"
        }
      ]
    },
    {
      "type": "header",
      "content": "Filtering and sorting"
    },
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "default": true,
      "label": "Enable filtering"
    },
    {
      "type": "select",
      "id": "filter_type",
      "options": [
        {
          "value": "horizontal",
          "label": "Horizontal"
        },
        {
          "value": "vertical",
          "label": "Vertical"
        },
        {
          "value": "drawer",
          "label": "Drawer"
        }
      ],
      "default": "horizontal",
      "label": "Filter type"
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "default": true,
      "label": "Enable sorting"
    }
  ]
}
{% endschema %}
