<script src="{{ 'custom-faq.js' | asset_url }}" defer></script>
<link rel="stylesheet" href="{{ 'custom-faq.css' | asset_url }}">
{% assign top_padding = settings.sections_spacing %}
{% assign side_padding = settings.side_space %}

{% if top_padding == blank or top_padding == 0 %}
  {% assign top_padding = 20 %}
{% endif %}

{% if side_padding == blank or side_padding == 0 %}
  {% assign side_padding = 20 %}
{% endif %}

<style>
  ::selection{
  color:var(--accent);
}
  .plus-minus-icon {
    width: 20px;
    height: 24px;
    margin-right: 10px;
    flex-shrink: 0;
    transition: all 0.6s ease;
  }
  
  .plus-minus-icon .vertical-line {
    transition: opacity 0.6s ease;
  }

  .faq-item.expanded .plus-minus-icon .vertical-line {
    opacity: 0;
  }
</style>

<div class="bandit-faq color-{{ section.settings.color_scheme }}"
     role="region" 
     aria-labelledby="faq-heading"
     style="padding: {{ top_padding }}px {{ side_padding }}px;">
 <div class="faq-header" style="height:auto; margin-top:40px; margin-bottom:40px;">
  <div id="faq-heading" class="faq-title uppercase tracking-tight mb-[20px]" style="font-size:var(--t-h-1-size); font-weight:var(--t-h-1-weight); line-height:var(--t-h-1-line-height);">
    {{ section.settings.faq-title }}
  </div>
 </div>
 <hr style="height: 0.5px;">

  {% assign items = section.blocks %}
  {% if items.size == 0 %}
    {% assign items = '' | split: '' %}
    {% assign default = true %}
    {% assign items[0] = '' %}
  {% endif %}

  {% for block in items %}
     {% assign is_last = forloop.last %}
    {% assign index = forloop.index0 %}
    {% assign unique_id = 'faq-section' | append: section.id | append: '-' | append: index %}
    {% if default %}
      {% assign question = 'What is the default question?' %}
      {% assign preview  = 'No preview available...' %}
      {% assign answer   = 'This is the default answer. Please update it.' %}
    {% else %}
      {% assign question = block.settings.question | default: 'What is the default question?' %}
      {% assign preview  = block.settings.answer | truncate: 100, '…' %}
      {% assign answer   = block.settings.answer | default: '' %}
    {% endif %}
<!-- Question and Answer -->
    <div class="faq-item group bg-background text-foreground border-b border-[#333] w-full relative" style="padding-top: 15px; padding-bottom:15px;">
      <button
        class="faq-row flex flex-col md:flex-row justify-between items-start w-full text-left focus:outline-none"
        aria-expanded="false"
        aria-controls="{{ unique_id }}-answer"
        id="{{ unique_id }}-button"
      >
        <div class="faq-row-question-heading w-full md:w-1/2">
          <div class="faq-question text-[18px] uppercase font-[500]" style="font-size:var(--t-h-5-size); font-weight:var(--t-h-5-weight); line-height:var(--t-h-5-line-height);margin-top:6px;">
            {{ question }}
          </div>
        </div>

        <div class="faq-row-answer w-full md:w-1/2 relative">
          <div class="faq-toggle items-start">
            <!-- Plus/Minus SVG Icon -->
            {% if answer != blank %}
                <div class="ans text-[16px] flex items-start" data-full-answer="{{ answer | escape }}" style="width:29vw; margin-top:5px; font-size:var(--t-b-2-size); font-weight:var(--t-b-2-weight); line-height:var(--t-b-2-line-height);">
                <svg class="plus-minus-icon" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <line x1="5" y1="10" x2="15" y2="10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  <line class="vertical-line" x1="10" y1="5" x2="10" y2="15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
                {{ preview }}
              </div>
            {% endif %}
          </div>
        </div>

      </button>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "FAQ Section",
  
  "disabled_on": {
      "groups": ["footer", "header"]
    },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Color Scheme"
    },
    {
      "type": "text",
      "id": "faq-title",
      "label": "FAQ Title",
      "default": "FAQ"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is the default question?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "This is the default answer. Please update it."
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "FAQ Section",
      "blocks": [
        {
          "type": "faq",
          "settings": {
            "question": "What is your return policy?",
            "answer": "You can return most items within 30 days of purchase. Products must be in original condition with packaging intact."
          }
        },
        {
          "type": "faq",
          "settings": {
            "question": "How long does shipping take?",
            "answer": "Standard shipping usually takes 5–7 business days. Expedited options are available at checkout."
          }
        },
        {
          "type": "faq",
          "settings": {
            "question": "DO YOU OFFER INTERNATIONAL SHIPPING?",
            "answer": "Yes, we ship worldwide. Shipping costs and delivery times vary by location."
          }
        },
        {
          "type": "faq",
          "settings": {
            "question": "HOW CAN I TRACK MY ORDER?",
            "answer": "Once your order ships, you’ll receive a tracking link by email to follow your delivery status."
          }
        },
        {
          "type": "faq",
          "settings": {
            "question": "HOW DO I CONTACT CUSTOMER SUPPORT?",
            "answer": "You can reach our team via email, phone, or live chat. Visit our Contact page for more details."
          }
        }
      ]
    }
  ]
}
{% endschema %}
