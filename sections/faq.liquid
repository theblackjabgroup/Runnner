<link rel="stylesheet" href="{{ 'custom-faq.css' | asset_url }}">
<script src="{{ 'custom-faq.js' | asset_url }}" defer></script>

<div class="bandit-faq color-{{ section.settings.color_scheme }}">
<h1 class="faq-title">{{ section.settings.faq-title }}</h1>

  {% for block in section.blocks %}
    <div class="faq-item">
      <div class="faq-row">
        <span class="faq-question">{{ block.settings.question }}</span>
        <span class="faq-toggle" onclick="toggleFAQ(this)">
          <svg class="arrow-svg" xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 20 20">
            <g transform="rotate(270 12 12)">
              <path d="M12 4c.552 0 1 .448 1 1v10.586l3.293-3.293a1 1 0 1 1 1.414 1.414l-5 5a1 1 0 0 1-1.414 0l-5-5a1 1 0 0 1 1.414-1.414L11 15.586V5c0-.552.448-1 1-1z"/>
            </g>
          </svg>
        </span>
        <span class="faq-preview" onclick="toggleFAQ(this)" data-answer="{{ block.settings.answer }}">
          {{ block.settings.preview | default: 'No preview available' }}...
        </span>
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Color Scheme"
    },
    {
      "type": "text",
      "id": "faq-title",
      "label": "FAQ Title",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "select",
      "id": "faq_layout",
      "label": "FAQ Layout Style",
      "default": "classic",
      "options": [
        {
          "value": "classic",
          "label": "Classic"
        },
        {
          "value": "boxed",
          "label": "Boxed"
        },
        {
          "value": "minimal",
          "label": "Minimal Clean"
        }
      ]
    }
  ],
  
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default":"Enter question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default":"Enter the answer in the answer block"
        },
        {
          "type": "text",
          "id": "preview",
          "label": "Preview Text",
          "default":"Enter Preview - "
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "FAQ Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}