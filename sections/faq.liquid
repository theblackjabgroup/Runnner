<script src="{{ 'custom-faq.js' | asset_url }}" defer></script>
<link rel="stylesheet" href="{{ 'custom-faq.css' | asset_url }}">
<div class="bandit-faq color-{{ section.settings.color_scheme }} px-[10px]" role="region" aria-label="FAQ Section">
  <div class="faq-title md:text-[100px] lg:!text-[120px] font-medium uppercase border-b border-[#333] tracking-tight mb-4 leading-tight" style="font-size:70px">
    {{ section.settings.faq-title }}
  </div>

  {% assign items = section.blocks %}
  {% if items.size == 0 %}
    {% assign items = '' | split: '' %}
    {% assign default = true %}
    {% assign items[0] = '' %}
  {% endif %}

  {% for block in items %}
    {% if default %}
      {% assign question = 'What is the default question?' %}
      {% assign preview  = 'No preview available...' %}
      {% assign answer   = 'This is the default answer. Please update it.' %}
    {% else %}
      {% assign question = block.settings.question | default: 'What is the default question?' %}
      {% assign preview  = block.settings.answer | truncate: 100, '…' %}
      {% assign answer   = block.settings.answer | default: '' %}
    {% endif %}

    <div class="faq-item group open bg-background text-foreground border-b border-[#333] px-[17px] py-2 w-full relative">
      <div class="faq-row flex flex-col md:flex-row gap-[0.4rem] justify-between items-start w-full " role="button"
        tabindex="0"
        aria-expanded="false"
        aria-controls="faq-{{ forloop.index0 }}"
      >
        <div class="faq-row-question-heading w-full md:w-1/2">
          <div class="faq-question text-[18px] sm:text-[20px] md:text-[24px] lg:text-[26px] uppercase font-normal selection:text-orange-700" style="margin-bottom:3px;">
            {{ question }}
          </div>
        </div>

        <div class="faq-row-answer w-full md:w-1/2 relative mt-4 md:mt-0 md:pl-0">
          <button
            class="faq-toggle flex items-start gap-7 border-none outline-none disabled:opacity-100 disabled:fill-current disabled:stroke-current"
            role="button"
            tabindex="-1"
            aria-expanded="false"
            aria-controls="faq-{{ forloop.index0 }}"
          >
           <div class="w-[1.8rem] h-[1.8rem] min-w-[1.8rem] min-h-[1.8rem] flex items-center justify-center mt-[2px]" style="margin-top:14px">
              <svg
          class="arrow-svg transition-transform duration-200 ease-in-out"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor" stroke-width="none"
          viewBox="0 0 40 40"
        >
          <path d="M26.79,9.21A35.06,35.06,0,0,0,37,16.2v3.66a35.34,35.34,0,0,0-10.21,7A12.84,12.84,0,0,0,23.21,36H17.56q0-6.22,3-10a15.4,15.4,0,0,1,8.06-5.2V20.6H0V15.43H28.63v-.3A15.16,15.16,0,0,1,20.57,10q-3-3.77-3-10h5.65a13,13,0,0,0,.87,5A12.79,12.79,0,0,0,26.79,9.21Z" />
    </svg>
        
            </div>

            {% if answer != blank %}
              <div class="faq-preview selection:text-orange-700 whitespace-normal scale-[1.01] text-left opacity-100 transition-opacity duration-400 ease-in-out transition-transform overflow-hidden text-ellipsis text-[18px] md:text-[19px] leading-tight break-words"
                id="faq-{{ forloop.index0 }}"
                data-answer="{{ answer }}"
                style="margin-top:10px; margin-bottom:14px; line-height:25px;"
              >
                {{ preview }}
              </div>
            {% endif %}
          </button>

          {% if answer != blank %}
            <div
              class="faq-answer selection:text-orange-700 hidden group-[.open]:block text-left text-[14px] sm:text-[16px] md:text-[20px] lg:text-[25px] break-words max-w-full mt-2"
              id="faq-{{ forloop.index0 }}-full"
            >
              {{ answer | newline_to_br }}
            </div>
          {% endif %}

        </div>
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Color Scheme"
    },
    {
      "type": "text",
      "id": "faq-title",
      "label": "FAQ Title",
      "default": "FAQ"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is the default question?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "This is the default answer. Please update it."
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "FAQ Section",
      "category": "Custom",
      "blocks": [
        {
          "type": "faq",
          "settings": {
            "question": "What is your return policy?",
            "answer": "We offer full refunds within 30 days of purchase. For details visit https://example.com/returns"
          }
        },
        {
          "type": "faq",
          "settings": {
            "question": "How long does shipping take?",
            "answer": "Shipping usually takes 3–5 business days. Check updates at https://example.com/shipping"
          }
        }
      ]
    }
  ]
}
{% endschema %}
