<link rel="stylesheet" href="{{ 'custom-faq.css' | asset_url }}">
<script src="{{ 'custom-faq.js' | asset_url }}" defer></script>

<div class="bandit-faq color-{{ section.settings.color_scheme }}">
  <h1 class="faq-title">{{ section.settings.faq-title }}</h1>

  {% if section.blocks.size == 0 %}
    <div class="faq-item">
      <div class="faq-row">
        <h3 class="faq-question" id="faq-question-1" tabindex="0">What is the default question?</h3>

        <button 
          class="faq-toggle" 
          onclick="toggleFAQ(this)" 
          aria-expanded="false" 
          aria-controls="faq-1"
          aria-label="Toggle answer for 'Enter Question?'"
        >
          <svg class="arrow-svg" xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 20 20">
            <g transform="rotate(270 12 12)">
              <path d="M12 4c.552 0 1 .448 1 1v10.586l3.293-3.293a1 1 0 1 1 1.414 1.414l-5 5a1 1 0 0 1-1.414 0l-5-5a1 1 0 0 1 1.414-1.414L11 15.586V5c0-.552.448-1 1-1z"/>
            </g>
          </svg>
        </button>

        <div
          class="faq-preview"
          onclick="toggleFAQ(this)"
          data-answer="Enter Answer"
          id="faq-1"
          role="region"
          aria-hidden="true"
          tabindex="0"
        >
          No preview available...
        </div>

        <div class="faq-answer" tabindex="0">
          This is the default answer. Please update it.
        </div>
      </div>
    </div>
  {% else %}
    {% for block in section.blocks %}
      <div class="faq-item">
        <div class="faq-row">
          <h3 class="faq-question" id="faq-question-{{ forloop.index }}" tabindex="0">{{ block.settings.question | default: 'What is the default question?' }}</h3>

          <button 
            class="faq-toggle" 
            onclick="toggleFAQ(this)" 
            aria-expanded="false" 
            aria-controls="faq-{{ forloop.index }}"
            aria-label="Toggle answer for '{{ block.settings.question | default: 'What is the default question?' }}'"
          >
            <svg class="arrow-svg" xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 20 20">
              <g transform="rotate(270 12 12)">
                <path d="M12 4c.552 0 1 .448 1 1v10.586l3.293-3.293a1 1 0 1 1 1.414 1.414l-5 5a1 1 0 0 1-1.414 0l-5-5a1 1 0 0 1 1.414-1.414L11 15.586V5c0-.552.448-1 1-1z"/>
              </g>
            </svg>
          </button>

          <div
            class="faq-preview"
            onclick="toggleFAQ(this)"
            data-answer="{{ block.settings.answer | default: 'This is the default answer. Please update it.' }}"
            id="faq-{{ forloop.index }}"
            role="region"
            aria-hidden="true"
            tabindex="0"
          >
            {{ block.settings.preview | default: 'No preview available' }}...
          </div>

          <div class="faq-answer" tabindex="0">
            {{ block.settings.answer | default: 'This is the default answer. Please update it.' }}
          </div>
        </div>
      </div>
    {% endfor %}
  {% endif %}
</div>

{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Color Scheme"
    },
    {
      "type": "text",
      "id": "faq-title",
      "label": "FAQ Title",
      "default": "Frequently Asked Questions"
    }
  ],
  
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default":"What is the default question?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default":"This is the default answer. Please update it."
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "FAQ Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
