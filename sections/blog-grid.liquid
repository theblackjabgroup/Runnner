  color: var(--hovered_button_text_color);
  border: 1px solid var(--hovered_button_text_color);
}
.load-more-text-container {
  position: relative;
  display: inline-block;
  width: 100%;
  height: 100%;
}
.load-more-text,
.load-more-text-hover {
  position: absolute;
  top: 50%;
  left: 50%;
  
  transform: translate(-50%, -50%);
  transition: transform 0.7s ease;
  white-space: nowrap;
}
.load-more-text-hover {
  transform: translate(50%, -50%);
}
.load-more-btn-fb.animate .load-more-text {
  animation: slideLeftText 0.7s ease forwards;
}

.load-more-btn-fb.animate .load-more-text-hover {
  animation: slideInText 0.7s ease forwards;
}

@keyframes slideLeftText {
  from {
    transform: translate(-50%, -50%);
  }
  to {
    transform: translate(-150%, -50%);
  }
}

@keyframes slideInText {
  from {
    transform: translate(50%, -50%);
  }
  to {
    transform: translate(-50%, -50%);
  }
}

/* Blog Grid Fade-Up Animation */
.blog-article-card {
  opacity: 0;
  transform: translateY(50px);
  transition: opacity 0.8s ease, transform 0.8s ease;
}

.blog-article-card.animate {
  opacity: 1;
  transform: translateY(0);
