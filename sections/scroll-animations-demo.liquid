{% comment %}
  Scroll Animations Demo Section
  Showcases all the different fade-in animation types available
{% endcomment %}

{{ 'scroll-animations.css' | asset_url | stylesheet_tag }}
<script src="{{ 'scroll-animations.js' | asset_url }}" defer></script>

<div class="scroll-animations-demo-section">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <div class="section-header">
        <h2 class="section-heading scroll-fade-trigger scroll-fade-down">
          {{ section.settings.heading }}
        </h2>
        {% if section.settings.description != blank %}
          <div class="section-description scroll-fade-trigger scroll-fade-up scroll-fade-delay-2">
            {{ section.settings.description }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <!-- Basic Animations Grid -->
    <div class="animations-grid">
      <h3 class="grid-title scroll-fade-trigger scroll-fade-left">Basic Animations</h3>

      <div class="animation-cards-grid scroll-fade-stagger">
        <div class="animation-card scroll-fade-trigger scroll-fade-up">
          <div class="card-content">
            <h4>Fade Up</h4>
            <p>Elements slide up while fading in</p>
            <code>.scroll-fade-up</code>
          </div>
        </div>

        <div class="animation-card scroll-fade-trigger scroll-fade-down">
          <div class="card-content">
            <h4>Fade Down</h4>
            <p>Elements slide down while fading in</p>
            <code>.scroll-fade-down</code>
          </div>
        </div>

        <div class="animation-card scroll-fade-trigger scroll-fade-left">
          <div class="card-content">
            <h4>Fade Left</h4>
            <p>Elements slide from left while fading in</p>
            <code>.scroll-fade-left</code>
          </div>
        </div>

        <div class="animation-card scroll-fade-trigger scroll-fade-right">
          <div class="card-content">
            <h4>Fade Right</h4>
            <p>Elements slide from right while fading in</p>
            <code>.scroll-fade-right</code>
          </div>
        </div>
      </div>
    </div>

    <!-- Advanced Animations Grid -->
    <div class="animations-grid">
      <h3 class="grid-title scroll-fade-trigger scroll-fade-right">Advanced Animations</h3>

      <div class="animation-cards-grid scroll-fade-stagger">
        <div class="animation-card scroll-fade-trigger scroll-fade-scale">
          <div class="card-content">
            <h4>Scale Fade</h4>
            <p>Elements scale up while fading in</p>
            <code>.scroll-fade-scale</code>
          </div>
        </div>

        <div class="animation-card scroll-fade-trigger scroll-fade-rotate">
          <div class="card-content">
            <h4>Rotate Fade</h4>
            <p>Elements rotate and scale while fading in</p>
            <code>.scroll-fade-rotate</code>
          </div>
        </div>

        <div class="animation-card scroll-fade-trigger scroll-fade-up-scale">
          <div class="card-content">
            <h4>Up + Scale</h4>
            <p>Combines slide up with scale effect</p>
            <code>.scroll-fade-up-scale</code>
          </div>
        </div>

        <div class="animation-card scroll-fade-trigger scroll-fade-left-scale">
          <div class="card-content">
            <h4>Left + Scale</h4>
            <p>Combines slide left with scale effect</p>
            <code>.scroll-fade-left-scale</code>
          </div>
        </div>
      </div>
    </div>

    <!-- Speed Variations -->
    <div class="animations-grid">
      <h3 class="grid-title scroll-fade-trigger scroll-fade-up">Speed Variations</h3>

      <div class="animation-cards-grid">
        <div class="animation-card scroll-fade-trigger scroll-fade-up scroll-fade-fast">
          <div class="card-content">
            <h4>Fast Animation</h4>
            <p>Quick and snappy animations</p>
            <code>.scroll-fade-fast</code>
          </div>
        </div>

        <div class="animation-card scroll-fade-trigger scroll-fade-up">
          <div class="card-content">
            <h4>Normal Speed</h4>
            <p>Default animation timing</p>
            <code>Default timing</code>
          </div>
        </div>

        <div class="animation-card scroll-fade-trigger scroll-fade-up scroll-fade-slow">
          <div class="card-content">
            <h4>Slow Animation</h4>
            <p>Smooth and deliberate animations</p>
            <code>.scroll-fade-slow</code>
          </div>
        </div>
      </div>
    </div>

    <!-- Delay Examples -->
    <div class="animations-grid">
      <h3 class="grid-title scroll-fade-trigger scroll-fade-scale">Delay Examples</h3>

      <div class="animation-cards-grid">
        <div class="animation-card scroll-fade-trigger scroll-fade-up">
          <div class="card-content">
            <h4>No Delay</h4>
            <p>Immediate animation</p>
            <code>No delay class</code>
          </div>
        </div>

        <div class="animation-card scroll-fade-trigger scroll-fade-up scroll-fade-delay-2">
          <div class="card-content">
            <h4>Delay 200ms</h4>
            <p>Short delay before animation</p>
            <code>.scroll-fade-delay-2</code>
          </div>
        </div>

        <div class="animation-card scroll-fade-trigger scroll-fade-up scroll-fade-delay-4">
          <div class="card-content">
            <h4>Delay 400ms</h4>
            <p>Medium delay before animation</p>
            <code>.scroll-fade-delay-4</code>
          </div>
        </div>
      </div>
    </div>

    <!-- Stagger Container Example -->
    <div class="animations-grid">
      <h3 class="grid-title scroll-fade-trigger scroll-fade-left">Stagger Container</h3>
      <p class="grid-description scroll-fade-trigger scroll-fade-right scroll-fade-delay-1">
        Elements in a stagger container animate one after another automatically
      </p>

      <div class="stagger-demo scroll-fade-stagger">
        {% for i in (1..8) %}
          <div class="stagger-item scroll-fade-trigger scroll-fade-up-scale">
            <span>{{ i }}</span>
          </div>
        {% endfor %}
      </div>
    </div>

    <!-- Usage Instructions -->
    {% if section.settings.show_instructions %}
      <div class="usage-instructions scroll-fade-trigger scroll-fade-up scroll-fade-slow">
        <h3>How to Use</h3>
        <div class="instructions-grid">
          <div class="instruction-item">
            <h4>1. Add CSS & JS</h4>
            <pre><code>{{ 'scroll-animations.css' | asset_url | stylesheet_tag }}
&lt;script src="{{ 'scroll-animations.js' | asset_url }}" defer&gt;&lt;/script&gt;</code></pre>
          </div>

          <div class="instruction-item">
            <h4>2. Add Animation Classes</h4>
            <pre><code>&lt;div class="scroll-fade-trigger scroll-fade-up"&gt;
  Your content here
&lt;/div&gt;</code></pre>
          </div>

          <div class="instruction-item">
            <h4>3. Use Stagger Containers</h4>
            <pre><code>&lt;div class="scroll-fade-stagger"&gt;
  &lt;div class="scroll-fade-trigger scroll-fade-up"&gt;Item 1&lt;/div&gt;
  &lt;div class="scroll-fade-trigger scroll-fade-up"&gt;Item 2&lt;/div&gt;
&lt;/div&gt;</code></pre>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .scroll-animations-demo-section {
    padding: 60px 0;
    background: var(--gradient-background);
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-heading {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-foreground);
    margin-bottom: 20px;
  }

  .section-description {
    font-size: 1.2rem;
    color: var(--color-foreground);
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto;
  }

  .animations-grid {
    margin-bottom: 80px;
  }

  .grid-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-foreground);
    margin-bottom: 30px;
    text-align: center;
  }

  .grid-description {
    text-align: center;
    color: var(--color-foreground);
    opacity: 0.7;
    margin-bottom: 40px;
  }

  .animation-cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    margin-bottom: 40px;
  }

  .animation-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    padding: 30px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .animation-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .card-content h4 {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--color-foreground);
    margin-bottom: 10px;
  }

  .card-content p {
    color: var(--color-foreground);
    opacity: 0.8;
    margin-bottom: 15px;
    line-height: 1.5;
  }

  .card-content code {
    background: rgba(0, 0, 0, 0.1);
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.9rem;
    color: var(--color-accent);
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
  }

  /* Stagger Demo */
  .stagger-demo {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(80px, 1fr));
    gap: 20px;
    max-width: 800px;
    margin: 0 auto;
  }

  .stagger-item {
    background: var(--color-accent);
    color: white;
    width: 80px;
    height: 80px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 600;
    transition: transform 0.3s ease;
  }

  .stagger-item:hover {
    transform: scale(1.1);
  }

  /* Usage Instructions */
  .usage-instructions {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 20px;
    padding: 50px;
    text-align: center;
  }

  .usage-instructions h3 {
    font-size: 2.5rem;
    color: var(--color-foreground);
    margin-bottom: 40px;
  }

  .instructions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
  }

  .instruction-item {
    text-align: left;
  }

  .instruction-item h4 {
    font-size: 1.2rem;
    color: var(--color-foreground);
    margin-bottom: 15px;
  }

  .instruction-item pre {
    background: rgba(0, 0, 0, 0.3);
    padding: 20px;
    border-radius: 8px;
    overflow-x: auto;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .instruction-item code {
    color: #61dafb;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
    font-size: 0.9rem;
    line-height: 1.4;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .scroll-animations-demo-section {
      padding: 40px 0;
    }

    .section-heading {
      font-size: 2rem;
    }

    .animation-cards-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .stagger-demo {
      grid-template-columns: repeat(4, 1fr);
    }

    .stagger-item {
      width: 60px;
      height: 60px;
    }

    .usage-instructions {
      padding: 30px 20px;
    }

    .instructions-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Dark mode adjustments */
  @media (prefers-color-scheme: dark) {
    .animation-card {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(255, 255, 255, 0.1);
    }
  }
</style>

{% schema %}
{
  "name": "Scroll Animations Demo",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Scroll Animations Demo",
      "label": "Heading"
    },
    {
      "type": "inline_richtext",
      "id": "description",
      "default": "Experience different types of fade-in animations triggered on scroll",
      "label": "Description"
    },
    {
      "type": "checkbox",
      "id": "show_instructions",
      "default": true,
      "label": "Show usage instructions"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    }
  ],
  "presets": [
    {
      "name": "Scroll Animations Demo"
    }
  ]
}
{% endschema %}
