<style>
  /* @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap'); */

  .container-image-and-text {
    display: flex;
    position: relative;
    flex-direction: row;
    padding: 2.5rem;
    color: #fff;
    background-color: #000;
    overflow: visible;
  }

  .right {
    width: 50%;
    box-sizing: border-box;
  }

  .left {
    position: sticky;
    top: 2.5rem; /* Match container padding */
    max-width: 50vw; /* Subtract top and bottom padding */
    width: 50%;
    display: flex;
    align-items: start;
    justify-content: center;
    pointer-events: none;
    box-sizing: border-box;
  }

  .left img {
    height: 100%;
    width: auto;
    max-width: 100%;
    object-fit: contain;
    pointer-events: none;
  }

  #left-img {
    pointer-events: none;
  }

  ::selection {
    background: none;
    color: #c91818;
  }

  .right {
    overflow-y: auto;
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-top: 0;
    gap: 2rem;
    height: fit-content;
  }

  .right h2 {
    font-size: 3rem;
    font-weight: 500;
    line-height: 5rem;
    color: #fff;
    text-align: left;
    padding-bottom: 1rem;
    /* font-family: "Space Grotesk", sans-serif; */
    margin: 0;
  }

  .right p {
    text-align: justify;
    font-size: 2rem;
    line-height: 3rem;
    /* font-family: "Space Grotesk", sans-serif; */
    margin: 0;
  }

  .accordion {
    display: flex;
    flex-direction: column;
    margin-top: 20px;
    border-bottom: 1px solid #fff;
  }

  .accordion-item {
    margin-bottom: 10px;
    border-top: 1px solid #fff;
    /* border-bottom: 1px solid #fff; */
  }

  .accordion-header {
    background-color: #000;
    border: none;
    padding: 10px;
    text-align: left;
    cursor: pointer;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding-bottom: 0;
  }

  .accordion-header h3 {
    margin: 0;
    font-size: 3.5rem;
    font-weight: 500;
    color: #fff;
    padding-bottom: 0;
  }

  .accordion-header svg {
    width: 1.5rem;
    height: 1.5rem;
    margin-left: 10px;
    transition: transform 0.3s ease-in-out;
  }

  .accordion-content {
    overflow: hidden;
    max-height: 0;
    background-color: #000;
    font-weight: 200;
    text-align: left;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    transform: translateY(-10px);
    pointer-events: none;
    padding-top: 0;
    margin-top: 0;
  }

  .accordion-content h4 {
    margin: 0;
    font-size: 2.8rem;
    font-weight: 500;
    padding-bottom: 1.5rem;
    color: #fff;
  }

  .accordion-header.active + .accordion-content {
    max-height: 500px; /* Adjust this value based on your content */
    opacity: 1;
    padding: 20px 10px;
    padding-top: 0;
    transform: translateY(0);
    pointer-events: auto;
  }

  .accordion-header.active {
    color: #c91818;
  }

  .accordion-header.active h3 {
    color: #c91818;
  }

  .accordion-header.active svg {
    transform: rotate(180deg);
  }

  @media screen and (max-width: 900px) {
    .container-image-and-text {
      flex-direction: column;
      padding: 1rem;
      min-height: auto;
    }

    .left {
      display: none;
    }

    .right {
      width: 100%;
      padding: 10px;
    }

    .right p {
      font-size: 1.5rem;
      line-height: 2.2rem;
    }

    .accordion-header h3 {
      font-size: 2.5rem;
    }

    .accordion-content h4 {
      font-size: 2rem;
    }

    .accordion-content {
      font-size: 1.5rem;
      line-height: 2.2rem;
    }
  }
</style>

<script>
  document.querySelectorAll('.accordion-header').forEach((header) => {
    header.addEventListener('click', () => {
      const content = header.nextElementSibling;

      // Close all other accordion items
      document.querySelectorAll('.accordion-header').forEach((otherHeader) => {
        if (otherHeader !== header) {
          otherHeader.classList.remove('active');
          const otherContent = otherHeader.nextElementSibling;
          otherContent.style.maxHeight = '0';
          otherContent.style.opacity = '0';
          otherContent.style.transform = 'translateY(-10px)';
          otherContent.style.padding = '0 10px';
        }
      });

      // Toggle current accordion item
      header.classList.toggle('active');

      if (header.classList.contains('active')) {
        content.style.maxHeight = `${content.scrollHeight + 40}px`; // Adding padding to height
        content.style.opacity = '1';
        content.style.transform = 'translateY(0)';
        content.style.padding = '20px 10px';
        content.style.paddingTop = '0';
      } else {
        content.style.maxHeight = '0';
        content.style.opacity = '0';
        content.style.transform = 'translateY(-10px)';
        content.style.padding = '0 10px';
        content.style.paddingTop = '0';
      }
    });
  });
</script>

