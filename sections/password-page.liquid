{{ 'scroll-animations.css' | asset_url | stylesheet_tag }}

<section
  class="color-{{ section.settings.color_scheme }} password-page-section w-full min-h-screen"
  id="section-{{ section.id }}"
  style="padding: {{ section.settings.padding }}px 0;"
>
  <div class="password-page-container">
    <!-- Text content -->
    <div class="password-page-text">
      <p class="password-page-heading1">{{ section.settings.heading_1 }}</p>
      <p class="password-page-heading2">{{ section.settings.heading_2 }}</p>
      <h2 class="password-page-subheading">{{ section.settings.subheading }}</h2>
    </div>

    <!-- Form Container -->
    <div class="password-page-form-container">
      <form
        class="password-page-form"
        method="post"
        action="/contact#contact_form"
        id="email-signup-form-password"
      >
        <input type="hidden" name="form_type" value="customer">
        <input type="hidden" name="utf8" value="âœ“">
        <input type="hidden" name="contact[tags]" value="newsletter">

        <div class="form-fields-container">
          <input
            type="email"
            placeholder="{{ section.settings.email_placeholder }}"
            id="email-input-password"
            name="contact[email]"
            class="password-page-input"
            required
            pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
          >
        </div>

        <div class="password-page-button-container">
          {% render 'secondary-button',
            button_text: section.settings.button_text,
            button_id: 'buttonText-password',
            button_classes: 'submit-btn'
          %}
        </div>
      </form>

      <div class="password-page-password-section">
        <span class="password-page-password-text1">{{ section.settings.password_text_1 }}</span>
        <button
          type="button"
          onclick="loadPasswordSection()"
          class="password-page-password-button"
          id="enterPasswordBtn"
        >
          <div class="password-page-password-text-container">
            <div class="password-page-password-text">{{ section.settings.password_text_2 }}</div>
            <div class="password-page-password-text-hover">
              <svg
                class="w-8 h-8 mr-4"
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 254 254"
                stroke="currentColor"
              >
                <path stroke-linecap="round" d="M208,80H176V56a48,48,0,0,0-96,0V80H48A16,16,0,0,0,32,96V208a16,16,0,0,0,16,16H208a16,16,0,0,0,16-16V96A16,16,0,0,0,208,80ZM96,56a32,32,0,0,1,64,0V80H96ZM208,208H48V96H208V208Zm-68-56a12,12,0,1,1-12-12A12,12,0,0,1,140,152Z"/>
              </svg>
              {{ section.settings.password_text_2 }}
            </div>
          </div>
        </button>
      </div>
    </div>
  </div>
</section>

{% render 'password-modal',
  modal_title: section.settings.modal_title,
  modal_subtitle: section.settings.modal_subtitle,
  modal_placeholder: section.settings.modal_placeholder,
  modal_button: section.settings.modal_button
%}

<script src="{{ 'email-signup.js' | asset_url }}" defer="defer"></script>

<style>
  .password-page-section {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 0 40px;
  }

  .password-page-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    max-width: 800px;
    width: 100%;
    gap: 40px;
  }

  .password-page-text {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .password-page-heading1 {
    font-size: var(--t-b-4-size);
    font-weight: var(--font-subheading-weight);
    color: var(--text);
    margin: 0;
    line-height: 1;
  }

  .password-page-heading2 {
    font-size: var(--t-h-2-size);
    font-weight: var(--font-heading-weight);
    color: var(--text);
    margin: 0;
    line-height: 1;
  }

  .password-page-subheading {
    font-size: var(--t-b-3-size);
    font-weight: var(--font-subheading-weight);
    color: var(--text);
    margin: 24px 0 0 0;
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .password-page-form-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
  }

  .password-page-form {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
  }

  .form-fields-container {
    width: 324px;
  }

  .password-page-input {
    width: 324px;
    height: 48px;
    border: var(--inputs-border-width) solid var(--border);
    border-radius: 3px;
    opacity: var(--inputs-border-opacity);
    color: var(--button_label);
    padding: 0 var(--space-xl);
    font-size: var(--t-b-2-size);
    outline: none;
    box-sizing: border-box;
    background-color: var(--inputs-background);
  }

  .password-page-button-container {
    width: 324px;
  }

  .submit-btn {
    width: 324px !important;
    height: 48px !important;
    font-size: var(--t-b-1-size);
    display: flex;
    justify-content: space-between;
  }

  .password-page-password-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
  }

  .password-page-password-text1 {
    font-size: 20px;
    color: var(--text);
    margin: 0;
  }

  .password-page-password-button {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 16px;
    color: var(--text);
    text-decoration: underline;
    padding: 0;
  }

  .password-page-password-button:hover {
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .password-page-section {
      padding: 0 20px;
    }

    .password-page-container {
      gap: 30px;
    }

    .password-page-heading1 {
      font-size: var(--t-b-4-size);
    }

    .password-page-heading2 {
      font-size: var(--tm-h-1-size);
    }

    .password-page-subheading {
      font-size: var(--t-b-4-size);
      margin: 16px 0 0 0;
    }

    .form-fields-container {
      width: 210px;
    }

    .password-page-input {
      width: 210px;
      height: 40px;
      font-size: var(--t-b-2-size);
    }

    .password-page-button-container {
      width: 210px;
    }

    .submit-btn {
      width: 210px !important;
      height: 40px !important;
    }

    .password-page-password-text1 {
      font-size: 16px;
    }

    .password-page-password-button {
      font-size: 14px;
    }
  }
</style>

{% schema %}
{
  "name": "Password Page",
  "tag": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Color Scheme"
    },
    {
      "type": "text",
      "id": "heading_1",
      "label": "Heading 1",
      "default": "GOOD THINGS TAKE TIME"
    },
    {
      "type": "text",
      "id": "heading_2",
      "label": "Heading 2",
      "default": "OPENING SOON"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Opening soon"
    },
    {
      "type": "text",
      "id": "email_placeholder",
      "label": "Email Placeholder",
      "default": "EMAIL"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SUBSCRIBE"
    },
    {
      "type": "text",
      "id": "password_text_1",
      "label": "Password Text 1",
      "default": "GOT A PASSWORD?"
    },
    {
      "type": "text",
      "id": "password_text_2",
      "label": "Password Text 2",
      "default": "ENTER PASSWORD"
    },
    {
      "type": "text",
      "id": "modal_title",
      "label": "Modal Title",
      "default": "ENTER YOUR PASSWORD"
    },
    {
      "type": "text",
      "id": "modal_subtitle",
      "label": "Modal Subtitle",
      "default": "THIS STORE REQUIRES A PASSWORD TO ENTER."
    },
    {
      "type": "text",
      "id": "modal_placeholder",
      "label": "Modal Placeholder",
      "default": "PASSWORD"
    },
    {
      "type": "text",
      "id": "modal_button",
      "label": "Modal Button",
      "default": "Submit"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 32
    }
  ]
}
{% endschema %}
