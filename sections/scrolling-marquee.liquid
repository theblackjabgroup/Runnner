{% schema %}
{
  "name": "Scrolling Marquee",
  "class": "shopify-section-scrolling-marquee",
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "text",
      "id": "marquee_text",
      "label": "Marquee Text",
      "default": "SHOWCASE PROMOTIONS OR SPECIAL OFFERS",
      "info": "Enter the text that will scroll across the screen"
    },
    {
      "type": "image_picker",
      "id": "marquee_icon",
      "label": "Upload Icon (SVG or Image)",
      "info": "Upload an SVG or image from media (optional - defaults to arrow icon). Icon will be 30px x 30px on desktop and 20px x 20px on mobile."
    },
    {
      "type": "range",
      "id": "icon_spacing",
      "label": "Icon Spacing (px)",
      "min": 0,
      "max": 50,
      "step": 2,
      "default": 16,
      "unit": "px",
      "info": "Space between text and icon/separator"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Color Scheme"
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "label": "Scroll Speed",
      "min": 10,
      "max": 300,
      "step": 5,
      "default": 230,
      "unit": "s",
      "info": "Lower number = faster scroll"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause on hover",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Scrolling Marquee"
    }
  ]
}
{% endschema %}

{%- liquid
  assign marquee_text = section.settings.marquee_text | strip | default: 'SUBSCRIBE FOR EMAILS'
  assign marquee_icon = section.settings.marquee_icon
  assign icon_spacing = section.settings.icon_spacing | default: 16
  assign scroll_speed = section.settings.scroll_speed | default: 230
  assign color_scheme = section.settings.color_scheme | default: 'scheme-1'
  assign pause_on_hover = section.settings.pause_on_hover | default: false

  if scroll_speed < 10
    assign scroll_speed = 10
  elsif scroll_speed > 300
    assign scroll_speed = 300
  endif
-%}

{% capture icon_output %}
  {% if marquee_icon != blank %}
    <img
      src="{{ marquee_icon | image_url: width: 40 }}"
      alt="Marquee icon"
      class="marquee-separator-image"
      width="100"
      height="100"
    />
  {% else %}
    {% render 'icon-playback',
      class: 'bi bi-caret-right-fill scrolling-separator',
      width: '50px',
      height: '50px',
      fill: 'currentColor'
    %}
  {% endif %}
{% endcapture %}

<section
  class="marquee-wrapper w-full overflow-hidden color-{{ color_scheme }}"
  role="banner"
  aria-label="Scrolling announcement"
  {{ section.shopify_attributes }}
>
  <div
    class="marquee-container flex whitespace-nowrap"
    {% if pause_on_hover %}
      data-pause-on-hover="true"
    {% endif %}
  >
    <!-- Primary content -->
    <div
      class="marquee-content flex flex-row font-semibold"
      role="text"
      aria-label="{{ marquee_text | escape }}"
    >
      {%- for i in (1..10) -%}
        <span class="px-1.5 flex items-center" aria-hidden="true">
          {{ marquee_text }}
          {{ icon_output }}
        </span>
      {%- endfor -%}
    </div>

    <!-- Duplicate content for seamless looping -->
    <div
      class="marquee-content flex flex-row font-semibold"
      role="text"
      aria-hidden="true"
    >
      {%- for i in (1..10) -%}
        <span class="px-1.5 flex items-center">
          {{ marquee_text }}
          {{ icon_output }}
        </span>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .marquee-wrapper {
    padding: 0;
    display: flex;
    align-items: center;
    border-top: 1px solid var(--text);
    border-bottom: 1px solid var(--text);
    position: relative;
    height: 30px;
    overflow: hidden;
  }

  .marquee-container {
    display: flex;
    animation: scroll-x {{ scroll_speed }}s linear infinite;
    height: 100%;
    will-change: transform;
    align-items: center;
  }

  .marquee-content {
    color: var(--text);
    font-size: 24px;
    line-height: 1.2;
    font-weight: 500;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    height: 100%;
  }

  .marquee-content span {
    display: flex;
    align-items: center;
  }

  .marquee-content img,
  .marquee-content svg {
    width: 25px;
    height: 25px;
    margin: 0 {{ icon_spacing }}px;
    flex-shrink: 0;
  }

  /* Pause animation on hover if enabled */
  .marquee-container[data-pause-on-hover="true"]:hover {
    animation-play-state: paused;
  }

  /* Smooth scrolling animation */
  @keyframes scroll-x {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  /* Mobile styles - match cart drawer dimensions */
  @media only screen and (max-width: 600px) {
    .marquee-wrapper {
      height: 25px;
    }

    .marquee-content {
      font-size: 15px;
    }

    .marquee-content img,
    .marquee-content svg {
      width: 20px;
      height: 20px;
      margin: 0 {{ icon_spacing | divided_by: 2 }}px;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .marquee-container {
      animation-duration: {{ scroll_speed | times: 3 }}s;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .marquee-wrapper {
      border-color: currentColor;
    }
  }
</style>

<script>
  // Initialize marquee functionality
  document.addEventListener('DOMContentLoaded', function () {
    const marqueeContainers = document.querySelectorAll('.marquee-container');

    marqueeContainers.forEach(function (container) {
      container.style.animationDelay = '0s';

      container.addEventListener('focus', function () {
        if (this.hasAttribute('data-pause-on-hover')) {
          this.style.animationPlayState = 'paused';
        }
      });

      container.addEventListener('blur', function () {
        if (this.hasAttribute('data-pause-on-hover')) {
          this.style.animationPlayState = 'running';
        }
      });
    });
  });
</script>
