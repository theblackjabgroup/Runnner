{% schema %}
{
  "name": "Scrolling Marquee",
  "class": "shopify-section-scrolling-marquee",
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "text",
      "id": "marquee_text",
      "label": "Marquee Text",
      "default": "SHOWCASE PROMOTIONS OR SPECIAL OFFERS",
      "info": "Enter the text that will scroll across the screen"
    },
    {
      "type": "image_picker",
      "id": "marquee_icon",
      "label": "Upload Icon (SVG or Image)",
      "info": "Upload an SVG or image from media (optional - defaults to arrow icon)"
    },
    {
      "type": "range",
      "id": "icon_width",
      "label": "Icon Width (px)",
      "min": 10,
      "max": 200,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "icon_height",
      "label": "Icon Height (px)",
      "min": 10,
      "max": 200,
      "step": 5,
      "default": 20
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Color Scheme"
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "label": "Scroll Speed",
      "min": 10,
      "max": 300,
      "step": 5,
      "default": 230,
      "unit": "s",
      "info": "Lower number = faster scroll"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause on hover",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Scrolling Marquee",
      "category": "Footer"
    }
  ]
}
{% endschema %}

{%- liquid
  assign marquee_text = section.settings.marquee_text | strip | default: 'SUBSCRIBE FOR EMAILS'
  assign marquee_icon = section.settings.marquee_icon
  assign icon_width = section.settings.icon_width | default: 20
  assign icon_height = section.settings.icon_height | default: 20
  assign scroll_speed = section.settings.scroll_speed | default: 230
  assign color_scheme = section.settings.color_scheme | default: 'scheme-1'
  assign pause_on_hover = section.settings.pause_on_hover | default: false

  if scroll_speed < 10
    assign scroll_speed = 10
  elsif scroll_speed > 300
    assign scroll_speed = 300
  endif
-%}

{% capture icon_output %}
  {% if marquee_icon != blank %}
    <img
      src="{{ marquee_icon | image_url: width: icon_width }}"
      alt="Marquee icon"
      height="{{ icon_height }}"
      width="{{ icon_width }}"
      style="height: {{ icon_height }}px; width: {{ icon_width }}px;"
      class="inline-block ml-1"
    />
  {% else %}
    {% render 'icon-playback', height: section.settings.icon_height, width: section.settings.icon_width, fill: 'currentColor', viewBox: '4.5 1.5 8.5 13', class: 'inline-block ml-1 transition-transform duration-200 ease-in-out',
    stroke: 'currentColor' %}  
  {% endif %}
{% endcapture %}

<section
  class="marquee-wrapper w-full overflow-hidden color-{{ color_scheme }} border-t border-black"
  role="banner"
  aria-label="Scrolling announcement"
  {{ section.shopify_attributes }}
>
  <div
    class="marquee-container flex whitespace-nowrap"
    {% if pause_on_hover %}
      data-pause-on-hover="true"
    {% endif %}
  >
    <!-- Primary content -->
    <div
      class="marquee-content flex flex-row font-semibold"
      role="text"
      aria-label="{{ marquee_text | escape }}"
    >
      {%- for i in (1..10) -%}
        <span class="px-1.5 flex items-center" aria-hidden="true">
          {{ marquee_text }}
          {{ icon_output }}
        </span>
      {%- endfor -%}
    </div>

    <!-- Duplicate content for seamless looping -->
    <div
      class="marquee-content flex flex-row font-semibold"
      role="text"
      aria-hidden="true"
    >
      {%- for i in (1..10) -%}
        <span class="px-1.5 flex items-center">
          {{ marquee_text }}
          {{ icon_output }}
        </span>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .marquee-wrapper {
    padding: 0.5rem 0;
    display: flex;
    align-items: center;
    border-top: 1px solid black;
    border-bottom: 1px solid black;
    position: relative;
  }

  .marquee-container {
    display: flex;
    animation: scroll-x {{ scroll_speed }}s linear infinite;
    height: auto;
    will-change: transform;
  }

  .marquee-content {
    color: var(--text);
    font-size: 20px;
    line-height: 0.1;
    font-weight: 500;
    margin-top: 10px;
    margin-bottom: 10px;
    flex-shrink: 0;
  }

  /* Pause animation on hover if enabled */
  .marquee-container[data-pause-on-hover="true"]:hover {
    animation-play-state: paused;
  }

  /* Smooth scrolling animation */
  @keyframes scroll-x {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .marquee-container {
      animation-duration: {{ scroll_speed | times: 3 }}s;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .marquee-wrapper {
      border-color: currentColor;
    }
  }
</style>

<script>
  // Initialize marquee functionality
  document.addEventListener('DOMContentLoaded', function () {
    const marqueeContainers = document.querySelectorAll('.marquee-container');

    marqueeContainers.forEach(function (container) {
      container.style.animationDelay = '0s';

      container.addEventListener('focus', function () {
        if (this.hasAttribute('data-pause-on-hover')) {
          this.style.animationPlayState = 'paused';
        }
      });

      container.addEventListener('blur', function () {
        if (this.hasAttribute('data-pause-on-hover')) {
          this.style.animationPlayState = 'running';
        }
      });
    });
  });
</script>
