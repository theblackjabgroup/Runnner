{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .text-center {
    text-align: center;
  }
  
  .text-right {
    text-align: right;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .rich-text__spacing {
    height: 0;
    display: block;
    clear: both;
  }

  .rich-text__blocks > * {
    margin: 0 !important;
  }

  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'heading' %}
        #Heading-{{ block.id }} {
          font-weight: {% case block.settings.font_weight %}
            {% when 'light' %}300
            {% when 'normal' %}400
            {% when 'medium' %}550
            {% when 'bold' %}700
          {% endcase %};
          font-size: {% case block.settings.heading_size %}
            {% when 'h3' %}2.5rem
            {% when 'h2' %}3rem
            {% when 'h1' %}4rem
            {% when 'h0' %}5rem
            {% when 'hxl' %}6rem
            {% when 'hxxl' %}7rem
            {% when 'hxxxl' %}8rem
          {% endcase %};
          line-height: {% case block.settings.heading_size %}
            {% when 'h3' %}1.2
            {% when 'h2' %}1.1
            {% when 'h1' %}1.1
            {% when 'h0' %}1
            {% when 'hxl' %}1
            {% when 'hxxl' %}0.9
            {% when 'hxxxl' %}0.9
          {% endcase %};
          margin-bottom: {{ block.settings.spacing }}px !important;
        }
      {% when 'caption' %}
        #Caption-{{ block.id }} {
          font-weight: {% case block.settings.font_weight %}
            {% when 'light' %}300
            {% when 'normal' %}400
            {% when 'medium' %}600
            {% when 'bold' %}700
          {% endcase %};
          margin-bottom: {{ block.settings.spacing }}px !important;
        }
      {% when 'text' %}
        #Text-{{ block.id }} {
          font-weight: {% case block.settings.font_weight %}
            {% when 'light' %}300
            {% when 'normal' %}400
            {% when 'medium' %}600
            {% when 'bold' %}700
          {% endcase %};
          font-size: {% case block.settings.text_size %}
            {% when 'small' %}0.875rem
            {% when 'regular' %}1rem
            {% when 'medium' %}1.15rem
            {% when 'large' %}1.5rem
            {% when 'xlarge' %}2rem
          {% endcase %};
          line-height: {% case block.settings.text_size %}
            {% when 'small' %}1.1
            {% when 'regular' %}1.1
            {% when 'medium' %}1.2
            {% when 'large' %}1.3
            {% when 'xlarge' %}1.4
          {% endcase %};
          margin-bottom: {{ block.settings.spacing }}px !important;
        }
      {% when 'buttons' %}
        #Buttons-{{ block.id }} {
          margin-bottom: {{ block.settings.spacing }}px !important;
        }
    {% endcase %}
  {% endfor %}

  {% if section.settings.button_toggle == false %}
    .rich-text__buttons {
      display: none !important;
    }
  {% endif %}

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="rich-text content-container color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h2 id="Heading-{{ block.id }}" class="rich-text__heading rte {{ block.settings.heading_size }}{% if block.settings.text_align == 'center' %} text-center{% endif %}{% if block.settings.text_align == 'right' %} text-right{% endif %}" {{ block.shopify_attributes }}>
                {{ block.settings.heading | replace: 'p>', 'span>' }}
              </h2>
            {%- when 'caption' -%}
              <p id="Caption-{{ block.id }}" class="rich-text__caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }}" {{ block.shopify_attributes }}>
                {{ block.settings.caption | escape }}
              </p>
            {%- when 'text' -%}
              <div id="Text-{{ block.id }}" class="rich-text__text rte" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
            {%- when 'buttons' -%}
              <div id="Buttons-{{ block.id }}" class="rich-text__buttons{% if block.settings.button_label_1 != blank and block.settings.button_label_2 != blank %} rich-text__buttons--multiple{% endif %}" {{ block.shopify_attributes }}>
                {%- if block.settings.button_label_1 != blank -%}
                  <a{% if block.settings.button_link_1 == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link_1 }}"{% endif %} class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}">{{ block.settings.button_label_1 | escape }}</a>
                {%- endif -%}
                {%- if block.settings.button_label_2 != blank -%}
                  <a{% if block.settings.button_link_2 == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link_2 }}"{% endif %} class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}">{{ block.settings.button_label_2 | escape }}</a>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

