{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}




  .rich-text__wrapper,
  .rich-text__blocks {
    width: 100% !important;
    max-width: 760px !important;
    margin: 0 auto !important;
    box-sizing: border-box;
  }

  .rich-text__blocks {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
    padding: 0 var(--gutter-md);
  }

  .rich-text__heading,
  .rich-text__subheading,
  .rich-text__text {
    width: 100%;
    box-sizing: border-box;
    /* font-family: var(--font-heading-family); */
  }

  .text-center {
    text-align: center !important;
  }

  .text-right {
    text-align: right !important;
  }
  .text-left {
    text-align: left !important;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .rich-text__spacing {
    height: 0;
    display: block;
    clear: both;
  }

  .rich-text__blocks {
    color: var(--text);
  }

  .rich-text__blocks > * {
    margin: 0 !important;
  }

  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'heading' %}
        #Heading-{{ block.id }} {
          font-size: var(--t-h-2-size);
          line-height: var(--t-h-2-line-height);
          margin-bottom: {{ block.settings.spacing }}px !important;
          font-family: var(--font-heading-family);
          font-style: var(--font-heading-style);
          font-weight: var(--t-h-2-weight) !important;
        }
      {% when 'subheading' %}
        #Subheading-{{ block.id }} {
          font-size: var(--t-h-5-size);
          line-height: var(--t-h-5-line-height);
          margin-bottom: {{ block.settings.spacing }}px !important;
          font-family: var(--font-heading-family);
          font-style: var(--font-heading-style);
          font-weight: var(--t-h-5-weight) !important;
        }
      {% when 'text' %}
        #Text-{{ block.id }} {
          font-size: var(--t-b-2-size);
          line-height: var(--t-b-2-line-height);
          margin-bottom: {{ block.settings.spacing }}px !important;
          font-family: var(--font-body-family);
          font-style: var(--font-body-style);
          font-weight: var(--t-b-2-weight) !important;
          /* opacity: 0.9; */
        }
    {% endcase %}
  {% endfor %}

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .rich-text--full-width,
    .content-container--full-width,
    .page-width {
      padding-inline: var(--space-xs) var(--space-xs) !important;
    }

    .rich-text__blocks {
      padding: 0 var(--space-sm);
    }

    .rich-text__heading {
      font-size: var(--tm-h-2-size) !important;
      line-height: var(--tm-h-2-line-height) !important;
    }

    .rich-text__subheading {
      font-size: var(--tm-h-4-size) !important;
      line-height: var(--tm-h-4-line-height) !important;
      text-align: inherit !important;
    }

    .rich-text__text {
      font-size: var(--tm-b-2-size) !important;
      line-height: var(--tm-b-2-line-height) !important;
      text-align: inherit !important;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="rich-text content-container color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h2
                id="Heading-{{ block.id }}"
                class="rich-text__heading rte {{ block.settings.heading_size }}{% if block.settings.text_align == 'left' %} text-left{% elsif block.settings.text_align == 'center' %} text-center{% else %} text-right{% endif %}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.heading | replace: 'p>', 'span>' }}
              </h2>

            {%- when 'subheading' -%}
              <h3
                id="Subheading-{{ block.id }}"
                class="rich-text__subheading rte {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.subheading | replace: 'p>', 'span>' }}
              </h3>

            {%- when 'text' -%}
              <div
                id="Text-{{ block.id }}"
                class="rich-text__text rte"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.text }}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.rich-text.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["footer", "header"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Color Scheme"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.rich-text.settings.content_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.rich-text.settings.content_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.rich-text.settings.content_alignment.options__3.label"
        }
      ],
      "default": "left",
      "label": "t:sections.rich-text.settings.content_alignment.label"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.video.settings.full_width.label"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 148
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.rich-text.blocks.heading.name",
      "settings": [
        {
          "type": "richtext",
          "id": "heading",
          "default": "<p>WELCOME TO OUR STORE</p>",
          "label": "t:sections.rich-text.blocks.heading.settings.heading.label"
        },
        {
          "type": "select",
          "id": "text_align",
          "options": [
            {
              "value": "left",
              "label": "t:sections.rich-text.blocks.heading.settings.text_align.options__1.label"
            },
            {
              "value": "center",
              "label": "t:sections.rich-text.blocks.heading.settings.text_align.options__2.label"
            },
            {
              "value": "right",
              "label": "t:sections.rich-text.blocks.heading.settings.text_align.options__3.label"
            }
          ],
          "default": "center",
          "label": "t:sections.rich-text.blocks.heading.settings.text_align.label"
        },
        {
          "type": "range",
          "id": "spacing",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.rich-text.blocks.heading.settings.spacing.label",
          "default": 40
        }
      ]
    },
    {
      "type": "subheading",
      "name": "t:sections.rich-text.blocks.subheading.name",
      "settings": [
        {
          "type": "text",
          "id": "subheading",
          "default": "<p>SHARE YOUR BRAND STORY OR MESSAGE</p>",
          "label": "t:sections.rich-text.blocks.subheading.settings.subheading.label"
        },
        {
          "type": "range",
          "id": "spacing",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.rich-text.blocks.subheading.settings.spacing.label",
          "default": 0
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.rich-text.blocks.text.name",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Welcome to your store! This is the place where you can introduce your brand and share what makes your products special. Use this section to tell customers about your mission, your values, or the inspiration behind your business. You can also highlight a specific collection, promote a seasonal offer, or describe what sets your store apart. Whether you’re focusing on craftsmanship, quality materials, or a unique shopping experience, this text helps customers connect with your brand.Keep it simple, engaging, and authentic — the more your visitors understand your story, the more likely they are to explore your products and become loyal customers.</p>",
          "label": "t:sections.rich-text.blocks.text.settings.text.label"
        },
        {
          "type": "range",
          "id": "font_size",
          "min": 12,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "t:sections.rich-text.blocks.text.settings.font_size.label",
          "default": 19
        },
        {
          "type": "range",
          "id": "line_height",
          "min": 1,
          "max": 3,
          "step": 0.1,
          "unit": "px",
          "label": "t:sections.rich-text.blocks.text.settings.line_height.label",
          "default": 1.2
        },
        {
          "type": "range",
          "id": "spacing",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.rich-text.blocks.text.settings.spacing.label",
          "default": 24
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.rich-text.presets.name",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "subheading"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
