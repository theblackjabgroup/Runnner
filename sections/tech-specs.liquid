{% if template == 'product' %}
  <section class="bg-black text-white p-4 md:p-8 box-border overflow-x-hidden">
    <div class="max-w-screen-xl mx-auto w-full">
      <div class="flex flex-col gap-8 lg:flex-row relative items-start">
        <!-- Vertical Divider -->
        <div class="hidden lg:block absolute top-0 left-[80%] h-full w-px bg-[#555] z-10"></div>

        <!-- LEFT COLUMN: TECH SPECS  -->
        <div class="relative z-20 p-8 mt-8 md:p-8 flex flex-col min-h-full w-full lg:w-[80%] lg:pr-24">
          <h2 class="text-[28px] lg:text-[32px] font-light mb-8 lg:mb-12 tracking-wide uppercase text-left">
            TECH SPECS
          </h2>
          <!-- Responsive: stack on mobile, side-by-side on desktop -->
          <div>
            <!-- Fit -->
            <div class="flex flex-row items-center justify-between border-b border-[#333] pb-2">
              <span class="text-[16px] text-gray-300 font-normal">Fit</span>
              <span class="text-[16px] font-medium flex items-center gap-2">
                {{ product.metafields.tech_specs.fit.value | default: 'Fitted' }}
              </span>
            </div>
            <!-- Pocketing -->
            <div class="flex flex-row items-center justify-between border-b border-[#333] pb-2">
              <span class="text-[16px] text-gray-300 font-normal">Pocketing</span>
              <span class="text-[16px] font-medium">
                {{- product.metafields.tech_specs.pocketing.value | default: '2 Gel, 1 Phone' -}}
              </span>
            </div>
            <!-- Effort & Temperature-->
            <div class="flex flex-col gap-0 border-b border-[#333] pb-2">
              <!-- Effort -->
              <div class="flex flex-col lg:flex-row border-b border-[#333] lg:border-b-0 lg:border-r lg:border-[#f9f6f6] lg:pr-8 pb-4 lg:pb-0 w-full lg:items-start">
                <!-- Text Column -->
                <div class="lg:w-[220px]">
                  <div class="text-[16px] font-medium mb-1">Effort</div>
                  <div class="text-[14px] text-gray-300 font-normal mb-2">
                    This product was designed for any and every run.
                  </div>
                </div>
                <!-- Bar Column -->
                <div class="flex flex-col flex-1">
                  <div class="flex items-end gap-[1px] h-6 mb-1">
                    {% assign effort = product.metafields.tech_specs.effort.value | default: 85 %}
                    {% assign filled_bars = effort | times: 40 | divided_by: 100 | round %}
                    {% for i in (1..40) %}
                      <span
                        class="block w-[5px] h-6 rounded-sm {% if i <= filled_bars %}bg-orange-500 opacity-80{% else %}bg-[#222] opacity-30{% endif %}"
                      ></span>
                    {% endfor %}
                  </div>
                  <div class="flex justify-between text-[12px] text-gray-400 font-normal w-full">
                    <span>0%</span>
                    <span>25%</span>
                    <span>50%</span>
                    <span>75%</span>
                    <span>100%</span>
                  </div>
                </div>
              </div>
              <!-- Temperature -->
              <div class="flex flex-col lg:flex-row w-full lg:items-start pt-4 lg:pt-0">
                
                <div class="hidden lg:block lg:w-[220px]"></div>
                <!-- Bar Column -->
                <div class="flex flex-col flex-1">
                  <div class="text-[16px] font-medium mb-1">Temperature</div>
                  <div class="text-[14px] text-gray-300 font-normal mb-2">Designed for cool to hot temperatures.</div>
                  <div class="flex items-end gap-[1px] h-6 mb-1">
                    {% assign temp_min = product.metafields.tech_specs.temperature_min.value | default: 32 %}
                    {% assign temp_max = product.metafields.tech_specs.temperature_max.value | default: 85 %}
                    {% for i in (0..39) %}
                      {% assign temp = i | times: 2.375 %}
                      <span
                        class="block w-[5px] h-6 rounded-sm {% if temp >= temp_min and temp <= temp_max %}bg-orange-500 opacity-80{% else %}bg-[#222] opacity-30{% endif %}"
                      ></span>
                    {% endfor %}
                  </div>
                  <div class="flex justify-between text-[12px] text-gray-400 font-normal w-full">
                    <span>0°</span>
                    <span>32°</span>
                    <span>50°</span>
                    <span>70°</span>
                    <span>85°</span>
                    <span>95°</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- CARE SECTION  -->
            <div class="flex flex-col lg:flex-row gap-6 mt-8">
              <!-- Materials Column -->
              <div class="w-full lg:w-1/3 mb-6 lg:mb-0">
                <div class="font-medium text-[16px] mb-3 text-left">Materials</div>
                <div class="text-[14px] text-gray-300 font-normal leading-relaxed text-left">
                  {{ product.metafields.tech_specs.materials.value | default: '83% M.Poly FD, 17% Spandex' }}
                </div>
              </div>
              <!-- Care Column -->
              <div class="w-full lg:w-1/3 mb-6 lg:mb-0">
                <div class="font-medium text-[16px] mb-3 text-left">Care</div>
                <div class="text-[14px] text-gray-300 font-normal leading-relaxed text-left">
                  {% assign care_lines = product.metafields.tech_specs.care.value
                    | default: 'Machine Wash Cold\nWash with Like Colors\nDo Not Bleach\nLay Flat to Dry\nDo Not Iron\nDo Not Dry Clean'
                    | split: '\n'
                  %}
                  {% for line in care_lines %}
                    <div class="flex items-start gap-2 mb-2">
                      <span>{{ line }}</span>
                    </div>
                  {% endfor %}
                </div>
              </div>
              <!-- Additional Info Column -->
              <div class="w-full lg:w-1/3">
                <div class="font-medium text-[16px] mb-3 text-left">&nbsp;</div>
                <div class="text-[13px] text-gray-400 font-normal leading-relaxed text-left">
                  For best outcome, wash exclusively with active apparel.<br>
                  Garment made in China
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- RIGHT COLUMN: FUNCTIONALITY  -->
        <div class="relative flex flex-col lg:w-[20%] p-8 mt-8 lg:mt-0">
          <h2 class="text-[28px] lg:text-[32px] font-light mb-12 tracking-wide uppercase">FUNCTIONALITY</h2>
          <div class="py-6">
            {% if product.metafields.functionality.features != blank %}
              {{ product.metafields.functionality.features }}
            {% else %}
              <div class="flex items-start mb-10">
                <span class="flex-shrink-0 w-14 h-14 rounded-full border border-[#333] bg-[#1a1a1a] flex items-center justify-center mr-5">
                  <svg width="24" height="24" fill="none" stroke="white" stroke-width="2" viewBox="0 0 24 24">
                    <rect x="3" y="7" width="18" height="12" rx="2"/><path d="M3 11h18"/>
                  </svg>
                </span>
                <div>
                  <div class="font-medium uppercase text-[14px] mb-2 tracking-wide">POCKETING SYSTEM</div>
                  <div class="text-[14px] font-normal text-gray-300 leading-relaxed">
                    Multiple pockets, zero telling. Sweat-proof phone and gel-sized pockets all designed to disappear
                    when you run.
                  </div>
                </div>
              </div>
              <div class="flex items-start mb-10">
                <span class="flex-shrink-0 w-14 h-14 rounded-full border border-[#333] bg-[#1a1a1a] flex items-center justify-center mr-5">
                  <svg width="24" height="24" fill="none" stroke="white" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M8 12c2-2 4-2 6 0"/><path d="M8 16c2-2 4-2 6 0"/><path d="M8 8c2-2 4-2 6 0"/>
                  </svg>
                </span>
                <div>
                  <div class="font-medium uppercase text-[14px] mb-2 tracking-wide">ANTI-CHAFING</div>
                  <div class="text-[14px] font-normal text-gray-300 leading-relaxed">
                    Smooth seams and strategic cuts mean zero rub, even on your longest runs. Built for comfort, tested
                    at race pace on the biggest stages.
                  </div>
                </div>
              </div>
              <div class="flex items-start mb-10">
                <span class="flex-shrink-0 w-14 h-14 rounded-full border border-[#333] bg-[#1a1a1a] flex items-center justify-center mr-5">
                  <svg width="24" height="24" fill="none" stroke="white" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M8 12h8"/><path d="M12 8v8"/><path d="M9 16c0 1 2 1 2 0"/><path d="M15 16c0 1-2 1-2 0"/>
                  </svg>
                </span>
                <div>
                  <div class="font-medium uppercase text-[14px] mb-2 tracking-wide">SWEAT-WICKING</div>
                  <div class="text-[14px] font-normal text-gray-300 leading-relaxed">
                    Advanced moisture management pulls sweat away instantly. Keeps you dry, cool, and composed mile
                    after mile.
                  </div>
                </div>
              </div>
              <div class="flex items-start">
                <span class="flex-shrink-0 w-14 h-14 rounded-full border border-[#333] bg-[#1a1a1a] flex items-center justify-center mr-5">
                  <svg width="24" height="24" fill="none" stroke="white" stroke-width="2" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="8"/><path d="M12 6v6l4 2"/>
                  </svg>
                </span>
                <div>
                  <div class="font-medium uppercase text-[14px] mb-2 tracking-wide">FAST-DRYING</div>
                  <div class="text-[14px] font-normal text-gray-300 leading-relaxed">
                    Begins drying the moment moisture arises. Returns the product back to its original form so you can
                    continue to comfortably wear it.
                  </div>
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Tech Specs",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "Tech Specs & Functionality",
      "category": "Product"
    }
  ]
}
{% endschema %}

