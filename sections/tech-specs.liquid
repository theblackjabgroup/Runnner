    }

    .tech-specs-data {
      width: 230px;
    }
    .box {
      margin: 0 var(--space-micro);
    }
    .box.filled {
      color: {{ section.settings.bar_color | default: 'red' }};
    }
    .functionality-icons {
      opacity: 0.4;
    }
     @media (max-width: 1100px){
     .tech-specs-main{
