                    {% elsif block.settings.bottom_heading_size == 'medium' %}
                      {% assign bottom_heading_class = 'video-with-text-heading-size-medium' %}
                    {% elsif block.settings.bottom_heading_size == 'large' %}
                      {% assign bottom_heading_class = 'video-with-text-heading-size-large' %}
