        .video-with-text-heading{
          font-size: var(--tm-h-4-size) !important;
          line-height: var(--tm-h-4-line-height) !important;
        }
      }
      @media screen and (min-width: 751px) and (max-width: 1024px){
        .video-with-text-heading{
          font-size: var(--t-h-4-size) !important;
          line-height: var(--t-h-4-line-height) !important;
        }
      }
      @media screen and (min-width: 1025px){
        .video-with-text-heading{
          font-size: var(--t-h-4-size) !important;
          line-height: var(--t-h-4-line-height) !important;
        }
