      @media screen and (max-width: 750px){
        .video-with-text-heading{
          font-size: 60px !important;
          line-height: 1.2 !important;
        }
      }
      @media screen and (min-width: 751px) and (max-width: 1024px){
        .video-with-text-heading{
          font-size: 90px !important;
          line-height: 1.2 !important;
        }
