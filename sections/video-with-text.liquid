{%- style -%}
    /* Mute/Unmute Button Styles */
    .video-mute-button {
      position: absolute;
      z-index: 20;
      background-color: rgba(0, 0, 0, 0.5);
      color: white;
      border: none;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: background-color 0.3s, opacity 0.3s;
      top: 20px;
      right: 20px;
      opacity: 0.7;
    }
    .video-mute-button:hover {
      background-color: rgba(0,0,0,0.8);
      opacity: 1;
      cursor: pointer;
    }
    @media (max-width: 749px) {
      .video-mute-button {
        top: 20px;
        bottom: auto;
        right: 20px;
        width: 35px;
        height: 35px;
      }
    }
    .video-mute-button svg {
      width: 20px;
      height: 20px;
    }
    @media (max-width: 749px) {
      .video-mute-button svg {
        width: 16px;
        height: 16px;
      }
    }

    /* Heading size based on selection */
    {% if section.settings.heading_size == 'small' %}
      @media screen and (max-width: 750px){
        .video-with-text-heading{
          font-size: var(--tm-h-4-size) !important;
          line-height: var(--tm-h-4-line-height) !important;
        }
      }
      @media screen and (min-width: 751px) and (max-width: 1024px){
        .video-with-text-heading{
          font-size: var(--t-h-4-size) !important;
          line-height: var(--t-h-4-line-height) !important;
        }
      }
      @media screen and (min-width: 1025px){
        .video-with-text-heading{
          font-size: var(--t-h-4-size) !important;
          line-height: var(--t-h-4-line-height) !important;
