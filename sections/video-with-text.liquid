        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

    /* Ensure headings don't break words at boundaries */
    .video-with-text-heading {
      word-break: keep-all; /* Prevent breaking words */
      overflow-wrap: break-word;
      line-height: 1.2; /* Allow wrapping between words */
    }
    
    /* Make heading flush with edges when positioned at left or right */
    {% if section.settings.horizontal_position == 'flex-start' or section.settings.horizontal_position == 'flex-end' %}
      .video-with-text-heading {
        margin-left: -{{ section.settings.content_padding }}px;
      }
      
      @media screen and (max-width: 749px) {
        .video-with-text-heading {
          margin-left: -{{ section.settings.content_padding_mobile | plus: 10 }}px;
        }
      }
    {% endif %}

