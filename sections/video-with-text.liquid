    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .video-with-text-button-text {
    display: flex;
    align-items: center;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: transform 0.7s ease;
  }

  .video-with-text-custom-button-css:hover .video-with-text-button-text,
  .video-with-text-custom-button-css:focus .video-with-text-button-text {
    transform: translateX(-100%);
  }

  .video-with-text-button-text-hover {
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    font-size: var(--t-b-1-size);
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transform: translateX(100%);
    transition: transform 0.7s ease;
  }

  .video-with-text-custom-button-css:hover .video-with-text-button-text-hover,
  .video-with-text-custom-button-css:focus .video-with-text-button-text-hover {
    transform: translateX(0);
  }

  .video-with-text-custom-button-css:not(:hover):not(:focus) .video-with-text-button-text,
  .video-with-text-custom-button-css:not(:hover):not(:focus) .video-with-text-button-text-hover {
    transition: none;
  }

