    }

    /* Animation ready states for all blocks */
    .video-with-text-video-with-text-letter-animation {
      opacity: 0;
    }

    .video-with-text-video-with-text-letter-animation.animation-ready {
      opacity: 1;
    }

    .button-animation {
      opacity: 0;
    }

    .button-animation.animation-ready {
      opacity: 1;
    }

    .date-animation {
      opacity: 0;
    }

    .date-animation.animation-ready {
      opacity: 1;
    }

    .text-animation {
      opacity: 0;
    }

    .text-animation.animation-ready {
      opacity: 1;
    }

    /* Non-animated states */
    .no-animation .video-with-text-video-with-text-letter-animation,
    .no-animation .button-animation,
    .no-animation .date-animation,
    .no-animation .text-animation {
      opacity: 1 !important;
