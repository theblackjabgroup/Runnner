                      button_text: block.settings.button_label,
                      button_url: block.settings.button_link,
                      button_font_size: 'var(--t-b-1-size)',
                      font_weight: 'var(--t-b-1-weight)',
                      button_line_height: 'var(--t-b-1-line-height)',
