  .video-with-text-iframe {
    width: 100%;
    height: 100%;
    min-height: 100%;
    display: block;
    position: relative;
    z-index: 1;
    overflow: hidden;
    background: #000;
  }

  .video-with-text-iframe iframe {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100vw;
    height: 100vh;
    transform: translate(-50%, -50%);
    border: none;
    outline: none;
    min-width: 100%;
    min-height: 100%;
  }

  /* Ensure video fills container completely for Vimeo */
  .video-with-text-iframe iframe[src*="vimeo"] {
    width: 100% !important;
    height: 100% !important;
    min-width: 100% !important;
    min-height: 100% !important;
    transform: translate(-50%, -50%) scale(1);
    transform-origin: center center;
  }

  /* For YouTube videos */
  .video-with-text-iframe iframe[src*="youtube"] {
    width: 100% !important;
    height: 100% !important;
    min-width: 100% !important;
    min-height: 100% !important;
    transform: translate(-50%, -50%);
  }

