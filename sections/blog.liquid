<script src="{{ 'blog-edit.js' | asset_url }}" defer></script>
<style>
 :root {
  --font-heading-family: {{ settings.type_heading_font.family }}, sans-serif;
  --font-body-family: {{ settings.type_body_font.family }}, sans-serif;
}


  #animated-heading {
  font-family: var(--font-heading-family) !important;
}

  .letter {
    display: inline-block;
    opacity: 0;
    transform: translateX(100vw);
    animation: slideInLetter 0.8s forwards;
  }

  @keyframes slideInLetter {
    0% {
      opacity: 0;
      transform: translateX(100vw);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .date-tag {
    opacity: 0;
    animation: fadeIn 1s ease-in-out forwards;
    color: {{ section.settings.color_card_excerpt | default: '#ffffff' }};
    font-family: var(--font-body-family);
  }

  .card-excerpt {
    opacity: 0;
    animation: fadeIn 1s ease-in-out forwards;
    color: {{ section.settings.color_card_excerpt | default: '#ffffff' }};
    font-family: var(--font-body-family);
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
      transform: translateY(10px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<section class="bg-black text-white overflow-hidden flex">
  <div class="relative w-full max-w-7xl flex flex-col text-left">
    
    <div class="absolute top-4 left-15 text-xl sm:text-2xl md:text-3xl date-tag">
      {{ section.settings.date_text }}
    </div>
    
    <div class="absolute md:top-10 left-6 z-50 w-10 h-10 sm:w-16 sm:h-16">
      <svg class="w-12 h-14 mt-[30px] sm:w-16 sm:h-18 md:w-20 md:h-44 lg:w-44 lg:h-28" style="fill: {{ section.settings.color_card_excerpt | default: '#ffffff' }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 37 36">
        <path d="M26.79,9.21A35.06,35.06,0,0,0,37,16.2v3.66a35.34,35.34,0,0,0-10.21,7A12.84,12.84,0,0,0,23.21,36H17.56q0-6.22,3-10a15.4,15.4,0,0,1,8.06-5.2V20.6H0V15.43H28.63v-.3A15.16,15.16,0,0,1,20.57,10q-3-3.77-3-10h5.65a13,13,0,0,0,.87,5A12.79,12.79,0,0,0,26.79,9.21Z" />
      </svg>
    </div>

    <div id="imageContainer" class="w-screen">
  <picture>
    <img
      class="w-screen max-h-[500px] object-cover"
      src="{% if section.settings.image != blank %}{{ section.settings.image | image_url: width: 2000 }}{% else %}//banditrunning.com/cdn/shop/articles/250311BANDIT_1995copy_2000x.png?v=1743544968{% endif %}"
      alt="Custom Image"
    />
  </picture>
</div>

    <div class="absolute top-11 left-3 md:left-25 z-10 p-2 flex flex-col items-start text-left">
      <div class="text-4xl sm:text-6xl md:text-[10.5rem] font-medium uppercase leading-tight sm:leading-none break-words md:w-[50vw] sm:w-[100px] md:ml-[70px] ml-[40px] w-[50vw]"
           id="animated-heading"
           style="color: {{ section.settings.color_card_excerpt | default: '#ffffff' }}">
        {{ section.settings.full_text }}
      </div>
    </div>

    <p class="absolute md:bottom-2 md:right-100 text-lg sm:text-2xl md:text-3xl uppercase top-60 ml-[50px] card-excerpt md:top-180">
      {{ section.settings.excerpt_text }}
    </p>
  </div>
</section>


{% schema %}
{
  "name": "Blog",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "full_text",
      "label": "Full Heading Text",
      "default": "The Bandit x ASICS Novablast 5 Campaign"
    },
    {
      "type": "text",
      "id": "date_text",
      "label": "Date",
      "default": "04.01.25"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Main Image"
    },
    {
      "type": "text",
      "id": "excerpt_text",
      "label": "Excerpt Text",
      "default": "Our first-ever footwear collaboration."
    },
    {
      "type": "color",
      "id": "color_card_excerpt",
      "label": "Card Excerpt Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Blog",
      "category": "Custom"
    }
  ]
}
{% endschema %}
