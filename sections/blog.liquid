<style>
  @media (max-width: 767px) {
  .card-excerpt {
     margin-left:25px !important;
  }
  .overlay-content{
    margin-top:20px !important; 
  }
  #animated-heading {
    font-size: 2rem !important; 
    width: 70vw !important; 
  }

  .hero-image {
    height: 500px !important; 
  }

  .subclass-header svg {
    width: 24px;
    height: 24px;
    margin-right: 8px;
  }

  .subclass-header span {
    font-size: 1.25rem;
  }
   #arrow-svg{
    margin-left:0px !important;
  }
  .subclass-subheader {
    margin-left: 0 !important;
    font-size: 1rem;
    margin-top:10px !important;
  }
    #subclass-svg-arrow{
      margin-top:5px !important;
    }
}

 :root {
    --font-heading-family: {{ settings.type_heading_font.family }}, sans-serif;
    --font-body-family: {{ settings.type_body_font.family }}, sans-serif;
  }
  .hero-image {
    object-fit: cover;
  }
  .overlay-content {
    color: {{ section.settings.color_card_excerpt | default: '#ffffff' }};
  }
  #animated-heading {
    font-family: var(--font-heading-family);
  }
  .letter {
    display: inline-block;
    opacity: 0;
    transform: translateX(100vw);
    animation: slideInLetter 0.8s forwards;
  }
  @keyframes slideInLetter {
    0% {
      opacity: 0;
      transform: translateX(100vw);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .date-tag, .card-excerpt {
    font-family: var(--font-body-family);
    opacity: 0;
    animation: fadeIn 1s ease-in-out forwards;
  }
  @keyframes fadeIn {
    0% {
      opacity: 0;
      transform: translateY(10px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
.fade-up {
  animation: fadeUp 2.0s ease-out forwards;
}
  .card-excerpt{
     margin-left:76px;
  }
</style>

<section class="bg-black text-white overflow-hidden flex relative">
  <img
    class="hero-image absolute md:h-[500px] w-full z-1 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 "
    src="{% if section.settings.image != blank %}{{ section.settings.image | image_url: width: 2000 }}{% else %}//banditrunning.com/cdn/shop/articles/250311BANDIT_1995copy_2000x.png?v=1743544968{% endif %}"
    alt="Hero Background"
    height="60%"
    width="100%"
    tabindex="0"
  />
  <div class="w-full max-w-7xl flex flex-col text-left" style='margin-left:13px;'>
    <div class="overlay-content max-w-7xlrelative z-2 flex flex-col" style="margin-top:55px;">
      <div class="top-18 left-20 text-xl sm:text-2xl md:text-3xl date-tag">
        {{ section.settings.date_text }}
      </div>

      <div class="flex flex-row">
        <svg
  xmlns="http://www.w3.org/2000/svg"
  class="w-9 h-8 md:mt-[20px] mt-[10px] sm:w-16 sm:h-18 md:w-20 md:h-44 lg:w-44 lg:h-28"
  id="arrow-svg"
  viewBox="0 0 17 19"
  stroke="white"
  strokeWidth="2"
  strokeLinecap="round"
  strokeLinejoin="round"
  style="margin: 0; padding: 0; margin-left:-38px; fill: none;"
>
  <line x1="5" y1="12" x2="19" y2="12" />
  <polyline points="12 5 19 12 12 19" />
</svg>
        <div class="top-11 left-3 md:left-25 z-10 flex flex-col items-start text-left">
          <div
            class="text-4xl sm:text-6xl md:text-[10.5rem] font-medium uppercase leading-tight sm:leading-none break-words md:w-[40vw] sm:w-[100px] w-[50vw]" style="width:730px;"
            id="animated-heading"
            style="color: {{ section.settings.color_card_excerpt | default: '#ffffff' }}"
          >
            {{ section.settings.full_text }}
          </div>
        </div>
      </div>
      <p class="md:bottom-2 md:right-100 text-xl sm:text-2xl md:text-3xl uppercase top-60 card-excerpt md:top-180">
        {{ section.settings.excerpt_text }}
      </p>
    </div>
  </div>
</section>

<section class="bg-white p-6 text-black fade-up">
  <div class="w-full uppercase">
    <div class="flex flex-col md:flex-row md:items-start gap-10">
      
      <div class="w-2/3 max-w-[300px]">
        <p class="text-sm md:text-[20px] font-bold">New This Week</p>
        <h2 class="text-sm md:text-[42px] font-bold mt-2">The B-Mail</h2>
      </div>

      <div class="flex flex-col md:flex-row md:flex-wrap gap-6 w-full">
       {% for block in section.blocks %}
  <a href="{{ block.settings.card_link }}" class="block w-full md:w-1/3 space-y-2 px-2 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 transition-shadow hover:shadow-lg">
    <div class="aspect-[5/3] overflow-hidden border">
      {% if block.settings.card_image != blank %}
        <img 
          src="{{ block.settings.card_image | img_url: 'medium' }}"
          alt="{{ block.settings.card_title | escape }}"
          loading="lazy"
          width="100%"
          height="auto"
          class="w-full h-full object-cover"
        />
      {% else %}
        {{ 'collection-1' | placeholder_svg_tag: 'w-full h-full bg-gray-100' }}
      {% endif %}
    </div>

    <p class="text-sm md:text-[20px] mt-2">{{ block.settings.article_date }}</p>

   <h3 class="subclass-header flex items-center text-sm md:text-[32px] font-bold leading-snug">
<svg
  xmlns="http://www.w3.org/2000/svg"
  class="w-16 h-16"
  fill="none" 
  id ="subclass-svg-arrow"
  viewBox="0 0 34 34"
  stroke="black"
  strokeWidth="2"
  strokeLinecap="round"
  strokeLinejoin="round"
  style="margin: 0; padding: 0; margin-top:10px;"
>
  <line x1="5" y1="12" x2="19" y2="12" />
  <polyline points="12 5 19 12 12 19" />
</svg>
    <span style="margin: 0; padding: 0;">{{ block.settings.card_title }}</span>
</h3>

    <span class="subclass-subheader text-sm md:text-[20px] md:ml-[20px] tracking-tight">
      {{ block.settings.card_subtitle }}
    </span>
  </a>
{% endfor %}

      </div>
    </div>

   <hr class="w-screen max-w-none mx-auto border-black my-8"
     style="border-top-width: 0px; border-style: solid;" />
</div>
</section>

