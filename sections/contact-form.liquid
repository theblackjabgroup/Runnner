{% schema %}
{
  "name": "t:sections.contact-form.name",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.contact-form.settings.heading.label",
      "default": "t:sections.contact-form.settings.heading.default"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "t:sections.contact-form.settings.heading_size.label",
      "min": 16,
      "max": 60,
      "step": 1,
      "default": 24
    },
    {
      "type": "range",
      "id": "body_size",
      "label": "t:sections.contact-form.settings.body_size.label",
      "min": 12,
      "max": 40,
      "step": 1,
      "default": 18
    },
    {
      "type": "text",
      "id": "email",
      "label": "t:sections.contact-form.settings.email.label",
      "default": "t:sections.contact-form.settings.email.default"
    },
    {
      "type": "text",
      "id": "location",
      "label": "t:sections.contact-form.settings.location.label",
      "default": "t:sections.contact-form.settings.location.default"
    },
    {
      "type": "text",
      "id": "hours",
      "label": "t:sections.contact-form.settings.hours.label",
      "default": "t:sections.contact-form.settings.hours.default"
    }
  ]
}
{% endschema %}

<style>
  .contact-page ::selection {
    text-shadow: none;
    color: var(--cr-yellow-2);
    background-color: transparent;
  }
  input:focus,
  textarea:focus {
    outline: none !important;
    box-shadow: none !important;
    border-color: black !important;
  }

  .left-container {
    border-right: 2px solid black;
  }

  .con-button {
    margin-right: 20px;
  }

  .contact-button {
    overflow: hidden;
    transition: background-color 0s, color 0s;
  }

  .contact-button:hover {
    color: var(--button);
    background-color: var(--button_label);
    border: 1px solid var(--button);
  }

  .contact-button-text-container {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .contact-button-text {
    display: flex;
    align-items: center;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: transform 0.7s ease;
  }

  .contact-button:hover .contact-button-text {
    transform: translateX(-100%);
  }

  .contact-button-text-hover {
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transform: translateX(100%);
    transition: transform 0.7s ease;
  }

  .contact-button:hover .contact-button-text-hover {
    transform: translateX(0);
  }

  .contact-button:not(:hover) .contact-button-text,
  .contact-button:not(:hover) .contact-button-text-hover {
    transition: none;
  }
</style>

<h2
  class="contact-page text-center font-normal mb-8 tracking-wide mt-8"
  style="font-size: {{ section.settings.heading_size }}px;"
>
  {{ section.settings.heading }}
</h2>
<div class="contact-page flex flex-row w-screen min-h-screen bg-white mb-8">
  <!-- Left: Form -->
  <div class="left-container w-1/2 flex flex-col justify-center ml-8 md:ml-20 md:px-[30px]" style="margin-left: 80px;">
    {%- form 'contact', id: 'contact-form' -%}
      <input type="hidden" name="form_type" value="contact">
      <input type="hidden" name="utf8" value="âœ“">
      <div class="con-form flex flex-col gap-6 w-full" autocomplete="off">
        <div style="margin-right: 50px;">
          <label
            class="block font-medium mb-1 tracking-wide"
            for="name"
            style="font-size: {{ section.settings.body_size }}px;"
            >NAME</label
          >
          <input
            id="name"
            name="contact[name]"
            type="text"
            class="w-full border-b border-black py-1 bg-transparent focus:outline-none focus:ring-0 focus:border-black focus:shadow-none"
            style="font-size: {{ section.settings.body_size }}px;"
            required
          >
        </div>
        <div style="margin-right: 50px;">
          <label
            class="block font-medium mb-1 tracking-wide"
            for="email"
            style="font-size: {{ section.settings.body_size }}px;"
            >EMAIL</label
          >
          <input
            id="email"
            name="contact[email]"
            type="email"
            class="w-full border-b border-black py-1 bg-transparent focus:outline-none focus:ring-0 focus:border-black focus:shadow-none"
            style="font-size: {{ section.settings.body_size }}px;"
            required
          >
        </div>
        <div style="margin-right: 50px;">
          <label
            class="block font-medium mb-1 tracking-wide"
            for="message"
            style="font-size: {{ section.settings.body_size }}px;"
            >MESSAGE</label
          >
          <textarea
            id="message"
            name="contact[body]"
            rows="6"
            class="w-full border border-black p-1 bg-transparent resize-none focus:outline-none focus:ring-0 focus:border-black focus:shadow-none"
            style="font-size: {{ section.settings.body_size }}px;"
            required
          ></textarea>
        </div>
        <div class="flex justify-center mt-4 mb-8">
          <button
            type="submit"
            class="contact-button bg-black text-white px-2 py-1 rounded-md cursor-pointer text-md font-medium tracking-wider hover:bg-gray-800 transition w-auto"
            style="font-size: {{ section.settings.body_size }}px;"
          >
            <div class="contact-button-text-container">
              <div class="contact-button-text">SEND MESSAGE</div>
              <div class="contact-button-text-hover">SEND MESSAGE</div>
            </div>
          </button>
        </div>
      </div>
    {%- endform -%}
  </div>
  <!-- Divider -->
  <!--
    <div class="flex flex-col justify-center">
      <div class="w-px h-4/5 bg-gray-400"></div>
    </div>
  -->

  <!-- Right: Contact Info -->
  <div
    class="right-container w-1/2 flex flex-col items-start justify-center gap-8 px-8 mr-8 md:mr-24 md:px-[30px]"
    style="margin-left: 90px;"
  >
    <div class="flex items-center gap-3">
      <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><path d="M22 6l-10 7L2 6"/>
      </svg>
      <span style="font-size: {{ section.settings.body_size }}px;">
        {{- section.settings.email -}}
      </span>
    </div>
    <div class="flex items-center gap-3">
      <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/><circle cx="12" cy="9" r="2.5"/>
      </svg>
      <span style="font-size: {{ section.settings.body_size }}px;">
        {{- section.settings.location -}}
      </span>
    </div>
    <div class="flex items-center gap-3">
      <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/>
      </svg>
      <span style="font-size: {{ section.settings.body_size }}px;">
        {{- section.settings.hours -}}
      </span>
    </div>
  </div>
</div>
