{% schema %}
{
  "name": "t:sections.contact-form.name",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.contact-form.settings.heading.label",
      "default": "t:sections.contact-form.settings.heading.default"
    },
    {
      "type": "text",
      "id": "email",
      "label": "t:sections.contact-form.settings.email.label",
      "default": "t:sections.contact-form.settings.email.default"
    },
    {
      "type": "text",
      "id": "location",
      "label": "t:sections.contact-form.settings.location.label",
      "default": "t:sections.contact-form.settings.location.default"
    },
    {
      "type": "text",
      "id": "hours",
      "label": "t:sections.contact-form.settings.hours.label",
      "default": "t:sections.contact-form.settings.hours.default"
    }
  ]
}
{% endschema %}

{{ 'contact-page.css' | asset_url | stylesheet_tag }}

<h2
  class="contact-page text-center font-normal mb-8 tracking-wide mt-8 scroll-fade-trigger scroll-fade-up"
  style="font-size: 24px;"
>
  {{ section.settings.heading }}
</h2>
<div class="bb-contact-page contact-page flex flex-row w-screen min-h-screen bg-white mb-20">
  <!-- Left: Form -->
  <div class="left-container w-1/2 flex flex-col justify-center ml-8 md:ml-20 md:px-[30px] scroll-fade-trigger scroll-fade-left">
    {%- form 'contact', id: 'contact-form', class: 'bb-contact-form' -%}
      <input type="hidden" name="form_type" value="contact">
      <input type="hidden" name="utf8" value="âœ“">
      <div class="bb-con-form con-form flex flex-col w-full" autocomplete="off">
        <div class="bb-con-items">
          <input
            id="name"
            name="contact[name]"
            type="text"
            placeholder="NAME"
            class="bb-con-item-input w-full border-b border-black py-1 bg-transparent focus:outline-none focus:ring-0 focus:border-black focus:shadow-none"
            required
          >
        </div>
        <div class="bb-con-items">
          <input
            id="email"
            name="contact[email]"
            type="email"
            placeholder="EMAIL"
            class="bb-con-item-input w-full border-b border-black py-1 bg-transparent focus:outline-none focus:ring-0 focus:border-black focus:shadow-none"
            required
          >
        </div>
        <div class="bb-con-items">
          <label
            class="bb-con-item-input block font-medium mb-1 tracking-wide"
            for="message"
            >MESSAGE</label
          >
          <textarea
            id="message"
            name="contact[body]"
            rows="12"
            class="bb-con-item-input w-full border border-black p-1 bg-transparent resize-none focus:outline-none focus:ring-0 focus:border-black focus:shadow-none"
            required
          ></textarea>
        </div>
      </div>
      <div class="bb-contact-submit-btn flex justify-center mt-4 mb-8">
        <button
          type="submit"
          class="bb-con-item-input contact-button bg-black text-white px-2 py-1 rounded-md cursor-pointer text-md font-medium tracking-wider hover:bg-gray-800 transition w-auto"
        >
          <div class="contact-button-text-container">
            <div class="contact-button-text">SEND MESSAGE</div>
            <div class="contact-button-text-hover">SEND MESSAGE</div>
          </div>
        </button>
      </div>
    {%- endform -%}
  </div>
  <!-- Divider -->
  <!--
    <div class="flex flex-col justify-center">
      <div class="w-px h-4/5 bg-gray-400"></div>
    </div>
  -->

  <!-- Right: Contact Info -->
  <div
    class="bb-contact-right-container right-container w-1/2 flex flex-col items-start justify-center px-8 mr-8 md:mr-24 md:px-[30px] scroll-fade-trigger scroll-fade-right"
  >
    <div class="bb-contact-icon flex items-center gap-3">
      <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><path d="M22 6l-10 7L2 6"/>
      </svg>
      <span class="bb-con-item-input">
        {{- section.settings.email -}}
      </span>
    </div>
    <div class="bb-contact-icon flex items-center gap-3">
      <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/><circle cx="12" cy="9" r="2.5"/>
      </svg>
      <span class="bb-con-item-input">
        {{- section.settings.location -}}
      </span>
    </div>
    <div class="bb-contact-icon flex items-center gap-3">
      <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/>
      </svg>
      <span class="bb-con-item-input">
        {{- section.settings.hours -}}
      </span>
    </div>
  </div>
</div>
