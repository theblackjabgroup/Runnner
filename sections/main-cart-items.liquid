{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .cart__layout {
    display: flex;
    gap: 20px;
  }

  .cart__items-container {
    flex: 2;
  }

  .cart__sidebar {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding-left: 20px;
  }

  .cart__note, .cart__offers, .cart__shipping {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
    font-weight: bold;
  }

  .cart__totals {
    display: flex;
    justify-content: space-between;
    font-size: 18px;
    font-weight: bold;
  }

  .cart__checkout {
    margin-top: 20px;
  }

  .cart__checkout .button {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 16px;
    font-weight: bold;
    text-transform: uppercase;
  }

  .cart-item.border-b {
    border-bottom: 1px solid #ccc; /* Add a light gray border */
  }

  @media screen and (max-width: 750px) {
    .card-hidden{
      display:none;
    }
    .cart__layout {
      flex-direction: column;
      gap: 20px;
    }

    .cart-item {
      display: flex;
      flex-direction: row; /* Align image and details horizontally */
      gap: 15px;
      padding: 15px 0;
      border-bottom: 1px solid #000; /* Add a bold separator */
    }

    .cart-item__media {
      flex: 0 0 80px; /* Fixed width for the image */
    }

    .cart-item__media img {
      width: 100%;
      height: auto;
      border-radius: 5px; /* Optional: Add rounded corners */
    }

    .cart-item__details {
      flex: 1;
      font-size: 14px;
    }

    .cart-item__details .cart-item__name {
      font-weight: bold;
      margin-bottom: 5px;
    }

    .cart-item__details .cart-item__discounted-prices {
      color: red;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .cart-item__details .product-option {
      display: flex;
      align-items: center;
      gap: 5px;
      margin-bottom: 5px;
    }

    .cart-item__details .product-option button {
      border: 1px solid #000;
      border-radius: 3px;
      padding: 5px 10px;
      font-size: 12px;
      cursor: pointer;
    }

    .cart-item__details .product-option button.selected {
      background-color: #000;
      color: #fff;
    }



    .cart__sidebar div {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 0;
      border-bottom: 1px solid #000;
    }

    .cart__totals {
      font-size: 16px;
      font-weight: bold;
      padding: 10px 0;
    }

    .cart__checkout {
      text-align: center;
      margin-top: 10px;
    }

    .cart__checkout .button {
      background-color: #000;
      color: #fff;
      padding: 10px 20px;
      font-size: 16px;
      font-weight: bold;
      text-transform: uppercase;
      border-radius: 5px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }

    .cart__checkout .button svg {
      margin-right: 5px;
    }
  }
{%- endstyle -%}

