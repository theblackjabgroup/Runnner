<style>
  .cart-main-layout {
    display: flex;
    width: 100vw;
    min-height: 85vh;
    margin: 0;
    padding: 20px 20px 0 20px;
    box-sizing: border-box;
  }
  .cart-items-list {
    flex: 2;
    display: flex;
    flex-direction: column;
    gap: 0;
    padding: 0 100px 0 0;
    margin: 0;
  }
  .cart-item-row {
    display: flex;
    align-items: flex-start;
    gap: 0;
    background: #fff;
    border-bottom: 2px solid #000;
    padding: 32px 0 10px 0;
  }
  .cart-item-img {
    width: 160px;
    height: 160px;
    background: #d3d3d3;
    border-radius: 6px;
    object-fit: contain;
    flex-shrink: 0;
    margin-left: 8px;
  }
  .cart-item-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 8px;
    font-size: 1.1rem;
    margin-left: 24px;
  }
  .cart-item-prices {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  .cart-item-old-price {
    color: #222;
    font-size: 32px;
    text-decoration: line-through;
    font-weight: 600;
  }
  .cart-item-new-price {
    color: #e00;
    font-size: 32px;
    font-weight: 700;
  }
  .cart-item-title {
    font-size: 17px;
    font-weight: 700;
    margin-bottom: 2px;
    text-transform: uppercase;
  }
  .cart-item-desc {
    font-size: 1rem;
    color: #222;
    margin-bottom: 8px;
    text-transform: uppercase;
  }
  .cart-item-options {
    display: flex;
    flex-direction: column;
    gap: 6px;
    text-transform: uppercase;
    margin-top: 30px;
    margin-bottom: 8px;
  }
  .cart-item-option-row {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .cart-item-option-label {
    font-weight: 600;
    font-size: 21.78px;
  }
  .cart-item-option-btn {
    border: 1.5px solid #000;
    border-radius: 12px;
    background: #fff;
    color: #000;
    font-size: 21.78px;
    font-weight: 700;
    padding: 0px 12px;
    margin-right: 4px;
    cursor: pointer;
  }
  .cart-item-option-btn.selected {
    background: #000;
    color: #fff;
  }
  .cart-item-option-color {
    width: 18px;
    height: 18px;
    border-radius: 50%;
    border: 1.5px solid #000;
    margin-right: 4px;
    display: inline-block;
  }
  .cart-item-option-color.selected {
    border: 2.5px solid #000;
  }
  .cart-item-actions {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 16px;
    min-width: 180px;
    margin-right: 0px;
  }
  .cart-item-qty {
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1.5px solid #000;
    border-radius: 10px;
    overflow: hidden;
    font-size: 18.92px;
  }
  .cart-item-qty-btn {
    background: #fff;
    border: none;
    font-size: 18.92px;
    font-weight: 300;
    width: 40px;
    height: 35px;
    cursor: pointer;
  }
  .cart-item-qty-input {
    width: 50px;
    text-align: center;
    font-size: 18.92px;
    font-weight: 500;
    border-left: 1.5px solid #000;
    border-right: 1.5px solid #000;
  }
  .cart-item-remove {
    color: #000;
    font-size: 20.49px;
    font-weight: 500;
    text-decoration: none;
    margin-top: 8px;
    letter-spacing: 1px;
    align-self: flex-end;
    cursor: pointer;
    transform: translateY(120px);
  }

  .cart-sidebar {
    flex: 1;
    min-width: 340px;
    max-width: 500px;
    display: flex;
    flex-direction: column;
    gap: 24px;
    margin-top: 0;
    margin-right: 0;
    margin-left: 0;
    padding: 0;
  }
  .cart-sidebar-box {
    border: 2px solid #000;
    border-radius: 12px;
    background: #fff;
    padding: 10px 15px 0px 15px;
    margin-bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    font-size: 20px;
    font-weight: 700;
  }
  .cart-sidebar-label {
    margin-bottom: 0em;
    max-width: 300px;
    font-weight: 600;
    line-height: 35px;
  }
  .cart-sidebar-arrow {
    cursor: pointer;
    align-self: center;
    transition: all 0.3s ease-in-out;
    margin-bottom: 0em;
    width: 28px;
    height: 28px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  .cart-sidebar-total {
    font-size: 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: auto 0 0px 0;
    font-weight: 900;
  }
  .cart-sidebar-checkout {
    width: 100%;
    background: #000;
    color: #fff;
    font-size: 46px;
    font-weight: 900;
    border-radius: 10px;
    padding: 0px 10px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    letter-spacing: 1px;
    text-decoration: none;
    transition: background 0.2s;
    margin-bottom: 0;
  }
  .cart-sidebar-checkout:hover {
    background: #222;
  }
  .cart-sidebar-form {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-items: center;
    gap: 8px;
    width: 100%;
    margin-top: 16px;
    max-height: 0;
    opacity: 0;
    padding-bottom: 0;
    overflow: hidden;
    transition: max-height 0.5s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      padding-bottom 0.5s;
  }
  .cart-sidebar-form.expanded {
    max-height: 200px;
    opacity: 1;
    padding-bottom: 16px;
    transition: max-height 0.5s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      padding-bottom 0.5s;
  }
  .cart-sidebar-total-container {
    margin-top: auto;
  }
  @media (max-width: 600px) {
    .cart-main-layout {
      flex-direction: column;
      padding: 10px;
      min-height: 80vh;
      margin: 0;
    }
    .cart-items-list {
      padding: 0;
      margin: 0;
    }
    .cart-item-row {
      display: flex;
      flex-direction: row;
      align-items: flex-start;
      padding: 12px 0 8px 0;
      gap: 0;
      border-bottom: 1.5px solid #000;
      margin: 0;
      background: #fff;
    }
    .cart-item-img {
      width: 90px;
      min-width: 90px;
      height: 90px;
      margin: 0 8px 0 0;
      border-radius: 0;
      object-fit: cover;
      display: block;
    }
    .cart-item-details {
      margin-left: 0;
      gap: 2px;
      font-size: 0.95rem;
      width: 100%;
      padding: 0;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
    }
    .cart-item-prices {
      flex-direction: row;
      gap: 8px;
      align-items: center;
    }
    .cart-item-old-price {
      font-size: 1rem;
    }
    .cart-item-new-price {
      font-size: 1.1rem;
    }
    .cart-item-title {
      font-size: 1rem;
      margin-bottom: 0;
    }
    .cart-item-desc {
      font-size: 0.9rem;
      margin-bottom: 2px;
    }
    .cart-item-options {
      margin-top: 6px;
      margin-bottom: 2px;
      gap: 2px;
    }
    .cart-item-option-label {
      font-size: 0.9rem;
    }
    .cart-item-option-btn {
      font-size: 0.9rem;
      padding: 1px 6px;
    }
    .cart-item-actions {
      min-width: unset;
      margin-right: 0;
      width: 100%;
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-end;
      gap: 8px;
      padding: 0;
      box-sizing: border-box;
    }
    .cart-item-qty {
      font-size: 1.7rem;
      width: auto;
    }
    .cart-item-qty-btn {
      font-size: 1.7rem;
      width: 28px;
      height: 28px;
    }
    .cart-item-qty-input {
      width: 28px;
      font-size: 1.7rem;
    }
    .cart-item-remove {
      font-size: 0.9rem;
      margin-top: 0;
      transform: translateY(60px);
      align-self: flex-end;
    }
    .cart-sidebar {
      min-width: unset;
      max-width: unset;
      margin: 0;
      padding: 0;
      gap: 0;
    }
    .cart-sidebar-box {
      border-radius: 0;
      border-left: none;
      border-right: none;
      border-top: none;
      border-bottom: 2px solid #000;
      padding: 0 0 0 0;
      font-size: 1rem;
      box-sizing: border-box;
      margin: 0;
      background: #fff;
    }
    .cart-sidebar-label {
      font-size: 0.95rem;
      padding: 12px 8px 0 8px;
      margin-bottom: 0;
    }
    .cart-sidebar-arrow {
      width: 22px;
      height: 22px;
      margin-bottom: 0;
    }
    .cart-sidebar-form {
      margin-top: 4px;
      gap: 2px;
      padding: 0 8px 8px 8px;
    }
    .cart-sidebar-total {
      font-size: 1.2rem;
      margin: 0;
      padding: 12px 8px 12px 8px;
      background: #fff;
      box-sizing: border-box;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .cart-sidebar-checkout {
      font-size: 2rem;
      border-radius: 0;
      padding: 0 8px;
      box-sizing: border-box;
      justify-content: space-between;
      gap: 8px;
      display: flex;
      align-items: center;
      background: #000;
      color: #fff;
      width: 170px;
    }
    .cart-sidebar-checkout svg {
      height: 15px;
      width: 15px;
    }
    .cart-sidebar-total-container {
      display: flex;
      gap: 10px;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      padding: 10px 0;
      margin-top: unset;
    }
  }
  .sidebar-btn:hover {
    background: #fff !important;
    color: #000 !important;
  }
  .sidebar-btn:hover .subscribe-icon {
    stroke: #000;
  }
  .subscribe-icon {
    transition: stroke 0.2s ease;
  }
  .cart-item-option-btn.unavailable {
    position: relative;
    color: #3e3e3e;
    cursor: not-allowed;
  }
  .cart-item-option-btn.unavailable::before {
    content: '';
    position: absolute;
    top: 50%;
    left: -2px;
    width: 110%;
    height: 2px;
    background: #3e3e3e;
    transform: rotate(-45deg);
  }
</style>

<div class="cart-main-layout">
  <div class="cart-items-list">
    {% for item in cart.items %}
      <div class="cart-item-row ">
        <img
          class="cart-item-img"
          src="{{ item.image | image_url: width: 100, height: 100 }}"
          alt="{{ item.product.title | escape }}"
          width="222"
          height="186"
        >
        <div class="cart-item-details">
          <div class="cart-item-prices">
            {% if item.original_price != item.final_price %}
              <span class="cart-item-old-price">{{ item.original_price | money }}</span>
              <span class="cart-item-new-price">{{ item.final_price | money }}</span>
            {% else %}
              <span class="cart-item-new-price">{{ item.original_price | money }}</span>
            {% endif %}
          </div>
          <div class="cart-item-title">{{ item.product.title }}</div>
          <div class="cart-item-options ">
            {% for option in item.options_with_values %}
              <div class="cart-item-option-row">
                <span class="cart-item-option-label">{{ option.name }}:</span>
                {% if option.name == 'Size' %}
                  {% assign available_sizes = 'S,M,L,XL' | split: ',' %}
                  {% for size in available_sizes %}
                    {% if option.value == size %}
                      <span class="cart-item-option-btn selected">{{ size }}</span>
                    {% else %}
                      <span class="cart-item-option-btn unavailable">{{ size }}</span>
                    {% endif %}
                  {% endfor %}
                {% else %}
                  <span class="cart-item-option-btn selected">{{ option.value }}</span>
                {% endif %}
              </div>
            {% endfor %}
            {% if item.properties.size > 0 %}
              <div class="cart-item-option-row">
                {% for property in item.properties %}
                  {% assign property_first_char = property.first | slice: 0 %}
                  {% if property.last != blank and property_first_char != '_' %}
                    <span class="cart-item-option-label">{{ property.first }}:</span>
                    <span class="cart-item-option-btn selected">{{ property.last }}</span>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}
          </div>
        </div>
        <div class="cart-item-actions ">
          <form method="post" action="/cart/change" style="display:inline;">
            <input type="hidden" name="id" value="{{ item.key }}">
            <div class="cart-item-qty">
              <button
                class="cart-item-qty-btn"
                type="submit"
                name="quantity"
                value="{{ item.quantity | minus: 1 }}"
                {% if item.quantity <= 1 %}
                  disabled
                {% endif %}
              >
                -
              </button>
              <input class="cart-item-qty-input" type="text" value="{{ item.quantity }}" readonly>
              <button class="cart-item-qty-btn" type="submit" name="quantity" value="{{ item.quantity | plus: 1 }}">
                +
              </button>
            </div>
          </form>
          <form method="post" action="/cart/change" style="display:inline;" class="remove-btn">
            <input type="hidden" name="id" value="{{ item.key }}">
            <input type="hidden" name="quantity" value="0">
            <button class="cart-item-remove" type="submit">[REMOVE]</button>
          </form>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="cart-sidebar">
    <div class="cart-sidebar-box js-sidebar-box">
      <div class="flex justify-between items-center w-full">
        <div class="cart-sidebar-label">
          ADD A NOTE TO <br>
          YOUR ORDER:
        </div>
        <span class="cart-sidebar-arrow js-sidebar-arrow">
          <svg width="28" height="28" viewBox="0 0 9 9" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1.1875 7.7334H7.6599M7.6599 7.7334V1.261M7.6599 7.7334L1.1875 1.261" stroke="black" stroke-linejoin="round"/>
          </svg>
        </span>
      </div>
      <form class="cart-sidebar-form js-sidebar-form">
        <input type="text" placeholder="Type..." style="width:100%;padding:8px;">
        <button
          type="submit"
          style=" width:100px;  font-size:20px; font-weight:550;padding:0 !important;"
          class="hover:bg-black hover:text-white"
        >
          [SEND]
        </button>
      </form>
    </div>
    <div class="cart-sidebar-box js-sidebar-box">
      <div class="flex justify-between items-center w-full">
        <div class="cart-sidebar-label">Receive Special Offers And First Look At New Products.</div>
        <span class="cart-sidebar-arrow js-sidebar-arrow">
          <svg width="28" height="28" viewBox="0 0 9 9" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1.1875 7.7334H7.6599M7.6599 7.7334V1.261M7.6599 7.7334L1.1875 1.261" stroke="black" stroke-linejoin="round"/>
          </svg>
        </span>
      </div>
      <form class="cart-sidebar-form js-sidebar-form">
        <input type="email" placeholder="Enter your email" style="width:100%;padding:8px;">
        <button
          type="submit"
          style="width:100%; background:#000; color:#fff; padding:8px 0;  border: 1.5px solid #000; transition: all 0.2s ease; display: flex; align-items: center; justify-content: center; gap: 8px; font-size:20px; padding:0 2px "
          class="sidebar-btn "
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 9 9"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            class="subscribe-icon mr-10"
          >
            <path d="M1.1875 7.7334H7.6599M7.6599 7.7334V1.261M7.6599 7.7334L1.1875 1.261" stroke="currentColor" strokewidth="2" stroke-linejoin="round"/>
          </svg>
          SUBSCRIBE
        </button>
      </form>
    </div>
    <div class="cart-sidebar-box js-sidebar-box">
      <div class="flex justify-between items-center w-full">
        <div class="cart-sidebar-label">Estimate Shipping Rates</div>
        <span class="cart-sidebar-arrow js-sidebar-arrow">
          <svg width="28" height="28" viewBox="0 0 9 9" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1.1875 7.7334H7.6599M7.6599 7.7334V1.261M7.6599 7.7334L1.1875 1.261" stroke="black" stroke-linejoin="round"/>
          </svg>
        </span>
      </div>
      <form class="cart-sidebar-form js-sidebar-form">
        <input type="text" placeholder="Enter ZIP code" style="width:100%;">
        <button
          type="submit"
          style=" width:120px; background:#000; color:#fff;   font-size:20px; font-weight:500;padding:0 !important;transition: all 0.2s ease;"
          class="sidebar-btn"
        >
          [Search]
        </button>
      </form>
    </div>
    <div class="cart-sidebar-total-container">
      <div class="cart-sidebar-total">
        <span>TOTAL: </span>
        <span> &nbsp; {{ cart.total_price | money_with_currency }}</span>
      </div>
      <a href="{{ routes.checkout_url }}" class="cart-sidebar-checkout">
        <svg width="35" height="35" viewBox="0 0 35 35" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M3.16406 30.9824H30.9305M30.9305 30.9824V3.21602M30.9305 30.9824L3.16406 3.21602" stroke="white" stroke-width="6.38611" stroke-linejoin="round"/>
        </svg>

        CHECKOUT
      </a>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var boxes = document.querySelectorAll('.js-sidebar-box');
    boxes.forEach(function (box) {
      var arrow = box.querySelector('.js-sidebar-arrow');
      var form = box.querySelector('.js-sidebar-form');
      arrow.addEventListener('click', function (e) {
        // Close all forms first
        boxes.forEach(function (otherBox) {
          var otherForm = otherBox.querySelector('.js-sidebar-form');
          var otherArrow = otherBox.querySelector('.js-sidebar-arrow');
          if (otherForm !== form) {
            otherForm.classList.remove('expanded');
            otherArrow.style.transform = '';
          }
        });
        // Toggle this one
        if (!form.classList.contains('expanded')) {
          form.classList.add('expanded');
          arrow.style.transform = 'rotate(-90deg)';
        } else {
          form.classList.remove('expanded');
          arrow.style.transform = '';
        }
      });
    });
  });
</script>
