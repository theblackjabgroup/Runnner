{% comment %}
  Helper section to render a single product card for recently viewed products
  This is called via AJAX to get properly rendered product cards
{% endcomment %}

{% if product %}
  <div class="flex-none related-products-item">
    {% render 'new-product-card', product: product %}
  </div>
{% endif %}

{% schema %}
{
  "name": "RV Card Renderer",
  "tag": "section",
  "class": "section",
  "settings": []
}
{% endschema %}
