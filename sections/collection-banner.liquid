{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{{ 'collection-banner.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.section_top_padding | default: 0 }}px;
  }

  @media (max-width: 749px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.section_top_padding_mobile | default: 0 }}px !important;
    }
  }
</style>

{% if section.settings.enabled %}
  <section
    class="collection-banner-simple section-{{ section.id }}-padding"
    style="
      --banner-height: {{ section.settings.banner_height }}px;
      --banner-height-mobile: {{ section.settings.banner_height_mobile }}px;
      --side-space: {{ settings.side_space }}px;
      --padding-bottom: var(--sections-spacing-bottom);
      --object-fit: {{ section.settings.object_fit }};
      --object-position: {{ section.settings.object_position }};
    "
  >
    {% if collection.image %}
      <div class="collection-banner-image">
        <picture>
          <source
            media="(min-width: 1px)"
            srcset="
              {%- if collection.image.width >= 960 -%}{{ collection.image | image_url: width: 960, format: 'pjpg' }} 960w,{%- endif -%}
              {%- if collection.image.width >= 1536 -%}{{ collection.image | image_url: width: 1536, format: 'pjpg' }} 1536w,{%- endif -%}
              {%- if collection.image.width >= 2048 -%}{{ collection.image | image_url: width: 2048, format: 'pjpg' }} 2048w,{%- endif -%}
              {%- if collection.image.width >= 2400 -%}{{ collection.image | image_url: width: 2400, format: 'pjpg' }} 2400w,{%- endif -%}
              {%- if collection.image.width >= 3200 -%}{{ collection.image | image_url: width: 3200, format: 'pjpg' }} 3200w,{%- endif -%}
              {%- if collection.image.width >= 3840 -%}{{ collection.image | image_url: width: 3840, format: 'pjpg' }} 3840w,{%- endif -%}
              {%- if collection.image.width >= 4800 -%}{{ collection.image | image_url: width: 4800, format: 'pjpg' }} 4800w,{%- endif -%}
              {%- if collection.image.width >= 6400 -%}{{ collection.image | image_url: width: 6400, format: 'pjpg' }} 6400w{%- endif -%}
            "
            sizes="100vw"
            type="image/jpeg"
          >
          <img
            srcset="
              {%- if collection.image.width >= 960 -%}{{ collection.image | image_url: width: 960 }} 960w,{%- endif -%}
              {%- if collection.image.width >= 1536 -%}{{ collection.image | image_url: width: 1536 }} 1536w,{%- endif -%}
              {%- if collection.image.width >= 2048 -%}{{ collection.image | image_url: width: 2048 }} 2048w,{%- endif -%}
              {%- if collection.image.width >= 2400 -%}{{ collection.image | image_url: width: 2400 }} 2400w,{%- endif -%}
              {%- if collection.image.width >= 3200 -%}{{ collection.image | image_url: width: 3200 }} 3200w,{%- endif -%}
              {%- if collection.image.width >= 3840 -%}{{ collection.image | image_url: width: 3840 }} 3840w,{%- endif -%}
              {%- if collection.image.width >= 4800 -%}{{ collection.image | image_url: width: 4800 }} 4800w,{%- endif -%}
              {%- if collection.image.width >= 6400 -%}{{ collection.image | image_url: width: 6400 }} 6400w{%- endif -%}
            "
            sizes="100vw"
            src="{{ collection.image | image_url: width: 3840 }}"
            alt="{{ collection.title | escape }}"
            width="{{ collection.image.width }}"
            height="{{ collection.image.height }}"
            loading="eager"
            fetchpriority="high"
          >
        </picture>
      </div>
    {% else %}
      <div class="collection-banner-placeholder">
        {{ 'lifestyle-2' | placeholder_svg_tag: 'w-full h-full' }}
      </div>
    {% endif %}
  </section>
{% endif %}

{% schema %}
{
  "name": "Collection Banner",
  "enabled_on": {
    "templates": ["collection"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Enable section",
      "default": true
    },
    {
      "type": "range",
      "id": "banner_height",
      "min": 200,
      "max": 2000,
      "step": 50,
      "unit": "px",
      "label": "Banner height (Desktop)",
      "default": 800
    },
    {
      "type": "range",
      "id": "banner_height_mobile",
      "min": 150,
      "max": 1000,
      "step": 25,
      "unit": "px",
      "label": "Banner height (Mobile)",
      "default": 500
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "section_top_padding",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Section top padding (desktop)",
      "default": 10,
      "info": "Custom top padding for desktop, overrides global spacing"
    },
    {
      "type": "range",
      "id": "section_top_padding_mobile",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Section top padding (mobile)",
      "default": 10,
      "info": "Custom top padding for mobile, overrides global spacing"
    },
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "select",
      "id": "object_fit",
      "label": "Image fit type",
      "options": [
        {
          "value": "cover",
          "label": "Cover (fill container)"
        },
        {
          "value": "contain",
          "label": "Contain (fit within container)"
        },
        {
          "value": "fill",
          "label": "Fill (stretch to fit)"
        },
        {
          "value": "scale-down",
          "label": "Scale down"
        }
      ],
      "default": "cover"
    },
    {
      "type": "select",
      "id": "object_position",
      "label": "Image position",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "top left",
          "label": "Top Left"
        },
        {
          "value": "top right",
          "label": "Top Right"
        },
        {
          "value": "bottom left",
          "label": "Bottom Left"
        },
        {
          "value": "bottom right",
          "label": "Bottom Right"
        }
      ],
      "default": "top"
    }
  ],
  "presets": [
    {
      "name": "Collection Banner"
    }
  ]
}
{% endschema %}
