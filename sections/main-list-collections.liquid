{{ 'collections-bundle.css' | asset_url | stylesheet_tag }}

<script src="{{ 'scroll-animations.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'main-list-collections.js' | asset_url }}" defer="defer"></script>

<style>
  .collection-list {
    padding-left: {{ settings.side_space }}px !important;
    padding-right: {{ settings.side_space }}px !important;
    column-gap: {{ settings.horizontal_space }}px !important;
    row-gap: {{ settings.vertical_space }}px !important;
    display: grid;
  }

  /* Desktop columns */
  @media screen and (min-width: 750px) {
    .collection-list {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    }
  }

  /* Mobile columns */
  @media screen and (max-width: 749px) {
    .collection-list {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
    }
  }

  /* Handle span two columns on desktop */
  @media screen and (min-width: 750px) {
    .collection-list__item[data-span-two="true"] {
      grid-column: span 2;
    }
  }

  /* Card height - Desktop */
  @media screen and (min-width: 750px) {
    .collection-list__item {
      height: {{ settings.collection_card_height }}px !important;
    }

    .collection-list__item .image-container {
      height: {{ settings.collection_card_height }}px !important;
    }

    .collection-list__item[data-span-two="true"] {
      height: {{ settings.collection_card_height }}px !important;
    }

    .collection-list__item:not([data-span-two="true"]) .image-container {
      height: {{ settings.collection_card_height }}px !important;
    }

    .collection-list__item:not([data-span-two="true"]) .video-container {
      height: {{ settings.collection_card_height }}px !important;
      min-height: {{ settings.collection_card_height }}px !important;
      max-height: {{ settings.collection_card_height }}px !important;
    }
  }

  /* Card height - Mobile */
  @media screen and (max-width: 749px) {
    .collection-list__item {
      height: {{ settings.collection_card_height_mobile }}px !important;
    }

    .collection-list__item .image-container {
      height: {{ settings.collection_card_height_mobile }}px !important;
    }

    .collection-list__item[data-span-two="true"] {
      height: {{ settings.collection_card_height_mobile }}px !important;
    }

    .collection-list__item:not([data-span-two="true"]) .image-container {
      height: {{ settings.collection_card_height_mobile }}px !important;
    }

    .collection-list__item:not([data-span-two="true"]) .video-container {
      height: {{ settings.collection_card_height_mobile }}px !important;
      min-height: {{ settings.collection_card_height_mobile }}px !important;
      max-height: {{ settings.collection_card_height_mobile }}px !important;
    }
  }

  /* Card border radius */
  .collection-list__item {
    border-radius: {{ settings.collection_card_border_radius }}px;
    overflow: hidden;
  }

  .collection-list__item .card-collection__content {
    border-radius: {{ settings.collection_card_border_radius }}px;
    overflow: hidden;
  }

  .collection-list__item .card-collection__media {
    border-radius: {{ settings.collection_card_border_radius }}px;
    overflow: hidden;
  }

  .collection-list__item .card-collection__media img {
    border-radius: {{ settings.collection_card_border_radius }}px;
  }

  /* Ensure cards maintain aspect ratio and fit within grid */
  .collection-list__item .card-collection__content {
    height: 100%;
    width: 100%;
  }

  .collection-list__item .card-collection__media {
    height: calc(100% - 60px); /* Account for text area */
    width: 100%;
  }

  .collection-list__item .card-collection__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .breadcrumb-collections-list {
    margin-left: {{ settings.side_space }}px !important;
    margin-right: {{ settings.side_space }}px !important;
    width: calc(100% - {{ settings.side_space | times: 2 }}px) !important;
  }
</style>

<div class="!p-0 py-16 collection-page-wrapper">
  <div class="breadcrumb-collections-list border-b mb-10 flex items-center">
    <h1 class="uppercase !font-light breadcrumb-text-size breadcrumb-text">Shop</h1>
    <span class="mx-2 breadcrumb-text">/</span>
    <h1 class="breadcrumb-text-size !font-light uppercase breadcrumb-text">
      {{ section.settings.title | upcase }}
    </h1>
  </div>
  {%- comment -%}
    <h1
      class="title title--primary inline-richtext mb-12 {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
      style="color: {{ section.settings.text_color }};"
    >
      &nbsp;{{ section.settings.title }}
    </h1>
  {%- endcomment -%}

  <ul class="collection-list collection-grid-animated scroll-fade-stagger" role="list">
    {%- for block in section.blocks -%}
      <li
        class="collection-list__item collection-card-item scroll-fade-trigger scroll-fade-up {% if block.type == 'media' and block.settings.span_two_columns %}md:col-span-2{% endif %}"
        data-animation-index="{{ forloop.index0 }}"
        {% if block.type == 'media' and block.settings.span_two_columns %}
          data-span-two="true"
        {% endif %}
        {{ block.shopify_attributes }}
      >
        {% if block.type == 'media' %}
          {% if block.settings.media_display_type == 'video' %}
            {% comment %} User chose to display video {% endcomment %}
            {% assign video_source = block.settings.video_source | default: 'youtube' %}
            {% if video_source == 'youtube' %}
              {% comment %} YouTube video has priority {% endcomment %}
              {% if block.settings.video_url != blank %}
                {% render 'collection-card-video',
                  video_url: block.settings.video_url,
                  video: null,
                  autoplay: true,
                  loop: true,
                  controls: true
                %}
              {% elsif block.settings.video != blank %}
                {% comment %} Fallback to Shopify video if YouTube not available {% endcomment %}
                {% render 'collection-card-video',
                  video_url: null,
                  video: block.settings.video,
                  autoplay: true,
                  loop: true,
                  controls: true
                %}
              {% else %}
                {% comment %} No video available, show image or placeholder {% endcomment %}
                {% if block.settings.image != blank %}
                  {% render 'collection-card-image',
                    image: block.settings.image,
                    span_two_columns: block.settings.span_two_columns
                  %}
                {% else %}
                  <div class="image-container relative aspect-video w-full">
                    <img
                      src="{{ 'defaultproduct.svg' | asset_url }}"
                      alt="Default Product"
                      class="w-full h-full default-product-img"
                      loading="lazy"
                      width="100"
                      height="100"
                    >
                  </div>
                {% endif %}
              {% endif %}
            {% else %}
              {% comment %} Shopify video has priority {% endcomment %}
              {% if block.settings.video != blank %}
                {% render 'collection-card-video',
                  video_url: null,
                  video: block.settings.video,
                  autoplay: true,
                  loop: true,
                  controls: true
                %}
              {% elsif block.settings.video_url != blank %}
                {% comment %} Fallback to YouTube video if Shopify not available {% endcomment %}
                {% render 'collection-card-video',
                  video_url: block.settings.video_url,
                  video: null,
                  autoplay: true,
                  loop: true,
                  controls: true
                %}
              {% else %}
                {% comment %} No video available, show image or placeholder {% endcomment %}
                {% if block.settings.image != blank %}
                  {% render 'collection-card-image',
                    image: block.settings.image,
                    span_two_columns: block.settings.span_two_columns
                  %}
                {% else %}
                  <div class="image-container relative aspect-video w-full">
                    <img
                      src="{{ 'defaultproduct.svg' | asset_url }}"
                      alt="Default Product"
                      class="w-full h-full default-product-img"
                      loading="lazy"
                      width="100"
                      height="100"
                    >
                  </div>
                {% endif %}
              {% endif %}
            {% endif %}
          {% elsif block.settings.image != blank %}
            {% comment %} User chose to display image {% endcomment %}
            {% render 'collection-card-image',
              image: block.settings.image,
              span_two_columns: block.settings.span_two_columns
            %}
          {% elsif block.settings.video_url != blank or block.settings.video != blank %}
            {% comment %} No image available, fallback to video if available {% endcomment %}
            {% assign video_source = block.settings.video_source | default: 'youtube' %}
            {% if video_source == 'youtube' and block.settings.video_url != blank %}
              {% render 'collection-card-video',
                video_url: block.settings.video_url,
                video: null,
                autoplay: true,
                loop: true,
                controls: true
              %}
            {% elsif video_source == 'shopify' and block.settings.video != blank %}
              {% render 'collection-card-video',
                video_url: null,
                video: block.settings.video,
                autoplay: true,
                loop: true,
                controls: true
              %}
            {% elsif block.settings.video_url != blank %}
              {% render 'collection-card-video',
                video_url: block.settings.video_url,
                video: null,
                autoplay: true,
                loop: true,
                controls: true
              %}
            {% elsif block.settings.video != blank %}
              {% render 'collection-card-video',
                video_url: null,
                video: block.settings.video,
                autoplay: true,
                loop: true,
                controls: true
              %}
            {% endif %}
          {% else %}
            {% comment %} No media available, show placeholder {% endcomment %}
            <div class="image-container relative aspect-video w-full">
              <img
                src="{{ 'defaultproduct.svg' | asset_url }}"
                alt="Default Product"
                class="w-full h-full default-product-img"
                loading="lazy"
                width="100"
                height="100"
              >
            </div>
          {% endif %}
        {% else %}
          {% render 'collection-link',
            collection: block.settings.collection,
            span_two_columns: block.settings.span_two_columns,
            show_product_count: block.settings.show_product_count,
            product_count_text: block.settings.product_count_text
          %}
        {% endif %}
      </li>
    {%- endfor -%}
  </ul>
</div>

{% schema %}
{
  "name": "t:sections.main-list-collections.name",
  "class": "section",
  "enabled_on": {
    "templates": ["list-collections"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "t:sections.main-list-collections.settings.title.label",
      "default": "Collections"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Number of columns (Desktop)",
      "info": "Set the number of columns for desktop view"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "2",
      "label": "Columns on mobile"
    }
  ],
  "blocks": [
    {
      "type": "media",
      "name": "Media Block",
      "settings": [
        {
          "type": "checkbox",
          "id": "span_two_columns",
          "label": "Span Two Columns",
          "default": false,
          "info": "Make this block span across two columns"
        },
        {
          "type": "header",
          "content": "Media"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "header",
          "content": "Video Settings"
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "YouTube Video URL",
          "info": "Enter a YouTube video URL (e.g., https://www.youtube.com/watch?v=...)"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Shopify Video",
          "info": "Upload a video file directly to Shopify"
        },
        {
          "type": "select",
          "id": "video_source",
          "label": "Video Source Priority",
          "info": "Choose which video to display when both are provided",
          "options": [
            { "value": "youtube", "label": "YouTube Video" },
            { "value": "shopify", "label": "Shopify Video" }
          ],
          "default": "youtube"
        },
        {
          "type": "select",
          "id": "media_display_type",
          "label": "Display Type",
          "info": "Choose what to display",
          "options": [
            { "value": "image", "label": "Show Image" },
            { "value": "video", "label": "Show Video" }
          ],
          "default": "image"
        }
      ]
    },
    {
      "type": "collection",
      "name": "Collection Block",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "header",
          "content": "Product Count Settings"
        },
        {
          "type": "checkbox",
          "id": "show_product_count",
          "label": "Show product count",
          "default": true
        },
        {
          "type": "text",
          "id": "product_count_text",
          "label": "Product count text",
          "default": "number of products",
          "info": "Text to display before the product count number"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collections List",
      "blocks": [
        {
          "type": "media",
          "settings": {
            "span_two_columns": true,
            "image": "shopify://shop_images/collection-placeholder"
          }
        },
        {
          "type": "collection",
          "settings": {
            "collection": ""
          }
        },
        {
          "type": "collection",
          "settings": {
            "collection": ""
          }
        },
        {
          "type": "media",
          "settings": {
            "image": "shopify://shop_images/collection-placeholder"
          }
        },
        {
          "type": "collection",
          "settings": {
            "collection": ""
          }
        },
        {
          "type": "collection",
          "settings": {
            "collection": ""
          }
        },
        {
          "type": "collection",
          "settings": {
            "collection": ""
          }
        },
        {
          "type": "media",
          "settings": {
            "image": "shopify://shop_images/collection-placeholder"
          }
        }
      ]
    }
  ]
}
