    padding-bottom: 2px;
  }

  .collection-title-custom {
    font-weight: 500;
    font-size: 13px;
    text-transform: uppercase;
    margin-bottom: 0px;
    line-height: 1.2;
    padding-top:5px;
    color: var(--text);
  }
  .collection-count-custom {
    font-weight: 400;
    font-size: 12px;
    text-transform: lowercase;
    margin-top: 0px;
    line-height: 1.2;
    color: var(--text);
  }

  .video-container {
    position: relative;
    background: #000;
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .default-product-img {
    width: 100%;
    max-width: 430px;
    height: auto;
    display: block;
  }

  .lazy-loader {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: shimmer 2s infinite;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .lazy-loader::after {
    content: '';
    width: 40px;
    height: 40px;
    border: 3px solid #f3f3f3;
    border-top: 3px solid #666;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes shimmer {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .lazy-image, .lazy-iframe {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  .lazy-image.loaded, .lazy-iframe.loaded {
    opacity: 1;
  }

  .lazy-loader.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .collection-list__item:hover .collection-hover-target {
