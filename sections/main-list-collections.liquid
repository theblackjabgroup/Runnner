{{ 'collections-bundle.css' | asset_url | stylesheet_tag }}

<script src="{{ 'scroll-animations.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'main-list-collections.js' | asset_url }}" defer="defer"></script>

<div class="!p-0 py-16 collection-page-wrapper">
  <div class="breadcrumb-collections-list border-b mb-10 w-[95vw] flex items-center">
    <h1 class="uppercase !font-light breadcrumb-text-size breadcrumb-text">Shop</h1>
    <span class="mx-2 breadcrumb-text">/</span>
    <h1 class="breadcrumb-text-size !font-light uppercase breadcrumb-text">
      {{ section.settings.title | upcase }}
    </h1>
  </div>
  {%- comment -%}
    <h1
      class="title title--primary inline-richtext mb-12 {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
      style="color: {{ section.settings.text_color }};"
    >
      &nbsp;{{ section.settings.title }}
    </h1>
  {%- endcomment -%}

  <ul class="collection-list collection-grid-animated scroll-fade-stagger flex flex-wrap " role="list">
    {%- for block in section.blocks -%}
      <li
        class="collection-list__item collection-card-item scroll-fade-trigger scroll-fade-up {% if block.type == 'media' and block.settings.span_two_columns %}md:col-span-2{% endif %}"
        data-animation-index="{{ forloop.index0 }}"
        {% if block.type == 'media' and block.settings.span_two_columns %}
          data-span-two="true"
        {% endif %}
        {{ block.shopify_attributes }}
      >
        {% if block.type == 'media' %}
          {% if block.settings.media_display_type == 'video' %}
            {% comment %} User chose to display video {% endcomment %}
            {% if block.settings.video_source == 'youtube' %}
              {% comment %} YouTube video has priority {% endcomment %}
              {% if block.settings.video_url != blank %}
                {% render 'collection-card-video',
                  video_url: block.settings.video_url,
                  video: null,
                  autoplay: true,
                  loop: true,
                  controls: true
                %}
              {% elsif block.settings.video != blank %}
                {% comment %} Fallback to Shopify video if YouTube not available {% endcomment %}
                {% render 'collection-card-video',
                  video_url: null,
                  video: block.settings.video,
                  autoplay: true,
                  loop: true,
                  controls: true
                %}
              {% else %}
                {% comment %} No video available, show image or placeholder {% endcomment %}
                {% if block.settings.image != blank %}
                  {% render 'collection-card-image',
                    image: block.settings.image,
                    span_two_columns: block.settings.span_two_columns
                  %}
                {% else %}
                  <div class="image-container relative aspect-video w-full">
                    <img
                      src="{{ 'defaultproduct.svg' | asset_url }}"
                      alt="Default Product"
                      class="w-full h-full default-product-img"
                      loading="lazy"
                      width="100"
                      height="100"
                    >
                  </div>
                {% endif %}
              {% endif %}
            {% else %}
              {% comment %} Shopify video has priority {% endcomment %}
              {% if block.settings.video != blank %}
                {% render 'collection-card-video',
                  video_url: null,
                  video: block.settings.video,
                  autoplay: true,
                  loop: true,
                  controls: true
                %}
              {% elsif block.settings.video_url != blank %}
                {% comment %} Fallback to YouTube video if Shopify not available {% endcomment %}
                {% render 'collection-card-video',
                  video_url: block.settings.video_url,
                  video: null,
                  autoplay: true,
                  loop: true,
                  controls: true
                %}
              {% else %}
                {% comment %} No video available, show image or placeholder {% endcomment %}
                {% if block.settings.image != blank %}
                  {% render 'collection-card-image',
                    image: block.settings.image,
                    span_two_columns: block.settings.span_two_columns
                  %}
                {% else %}
                  <div class="image-container relative aspect-video w-full">
                    <img
                      src="{{ 'defaultproduct.svg' | asset_url }}"
                      alt="Default Product"
                      class="w-full h-full default-product-img"
                      loading="lazy"
                      width="100"
                      height="100"
                    >
                  </div>
                {% endif %}
              {% endif %}
            {% endif %}
          {% elsif block.settings.image != blank %}
            {% comment %} User chose to display image {% endcomment %}
            {% render 'collection-card-image',
              image: block.settings.image,
              span_two_columns: block.settings.span_two_columns
            %}
          {% elsif block.settings.video_url != blank or block.settings.video != blank %}
            {% comment %} No image available, fallback to video if available {% endcomment %}
            {% if block.settings.video_source == 'youtube' and block.settings.video_url != blank %}
              {% render 'collection-card-video',
                video_url: block.settings.video_url,
                video: null,
                autoplay: true,
                loop: true,
                controls: true
              %}
            {% elsif block.settings.video_source == 'shopify' and block.settings.video != blank %}
              {% render 'collection-card-video',
                video_url: null,
                video: block.settings.video,
                autoplay: true,
                loop: true,
                controls: true
              %}
            {% elsif block.settings.video_url != blank %}
              {% render 'collection-card-video',
                video_url: block.settings.video_url,
                video: null,
                autoplay: true,
                loop: true,
                controls: true
              %}
            {% elsif block.settings.video != blank %}
              {% render 'collection-card-video',
                video_url: null,
                video: block.settings.video,
                autoplay: true,
                loop: true,
                controls: true
              %}
            {% endif %}
          {% else %}
            {% comment %} No media available, show placeholder {% endcomment %}
            <div class="image-container relative aspect-video w-full">
              <img
                src="{{ 'defaultproduct.svg' | asset_url }}"
                alt="Default Product"
                class="w-full h-full default-product-img"
                loading="lazy"
                width="100"
                height="100"
              >
            </div>
          {% endif %}
        {% else %}
          {% render 'collection-link',
            collection: block.settings.collection,
            span_two_columns: block.settings.span_two_columns
          %}
        {% endif %}
      </li>
    {%- endfor -%}
  </ul>
</div>

{% schema %}
{
  "name": "t:sections.main-list-collections.name",
  "class": "section",
  "enabled_on": {
    "templates": ["list-collections"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "t:sections.main-list-collections.settings.title.label",
      "default": "Collections"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to image"
        },
        {
          "value": "portrait",
          "label": "Portrait"
        },
        {
          "value": "square",
          "label": "Square"
        }
      ],
      "default": "portrait",
      "label": "Portrait"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Number of columns"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "2",
      "label": "Columns on mobile"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#222"
    }
  ],
  "blocks": [
    {
      "type": "media",
      "name": "Media Block",
      "settings": [
        {
          "type": "checkbox",
          "id": "span_two_columns",
          "label": "Span Two Columns",
          "default": false,
          "info": "Make this block span across two columns"
        },
        {
          "type": "header",
          "content": "Media"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "header",
          "content": "Video Settings"
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "YouTube Video URL",
          "info": "Enter a YouTube video URL (e.g., https://www.youtube.com/watch?v=...)"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Shopify Video",
          "info": "Upload a video file directly to Shopify"
        },
        {
          "type": "select",
          "id": "video_source",
          "label": "Video Source Priority",
          "info": "Choose which video to display when both are provided",
          "options": [
            { "value": "youtube", "label": "YouTube Video" },
            { "value": "shopify", "label": "Shopify Video" }
          ],
          "default": "youtube"
        },
        {
          "type": "select",
          "id": "media_display_type",
          "label": "Display Type",
          "info": "Choose what to display",
          "options": [
            { "value": "image", "label": "Show Image" },
            { "value": "video", "label": "Show Video" }
          ],
          "default": "image"
        }
      ]
    },
    {
      "type": "collection",
      "name": "Collection Block",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collections List",
      "blocks": [
        {
          "type": "media",
          "settings": {
            "span_two_columns": true,
            "image": "shopify://shop_images/collection-placeholder"
          }
        },
        {
          "type": "collection",
          "settings": {
            "collection": ""
          }
        },
        {
          "type": "collection",
          "settings": {
            "collection": ""
          }
        },
        {
          "type": "media",
          "settings": {
            "image": "shopify://shop_images/collection-placeholder"
          }
        },
        {
          "type": "collection",
          "settings": {
            "collection": ""
          }
        },
        {
          "type": "collection",
          "settings": {
            "collection": ""
          }
        },
        {
          "type": "collection",
          "settings": {
            "collection": ""
          }
        },
        {
          "type": "media",
          "settings": {
            "image": "shopify://shop_images/collection-placeholder"
          }
        }
      ]
    }
  ]
}
{% endschema %}
