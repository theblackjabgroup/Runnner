{{ 'announcement-bar.css' | asset_url | stylesheet_tag }}
<script src="{{ 'announcement-bar.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "class": "announcement-bar-section",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "t:sections.announcement-bar.settings.announcement_text.label",
      "default": "Welcome to your Store"
    },
    {
      "type": "text",
      "id": "membership_link_text",
      "label": "t:sections.announcement-bar.settings.membership_link_text.label",
      "default": "Shop now"
    },
    {
      "type": "text",
      "id": "membership_link",
      "label": "Membership Link URL",
      "default": "/account/register"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "Typography Settings"
    },
    {
      "type": "range",
      "id": "message_font_size_mobile",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Message Font Size (Mobile)",
      "default": 12
    },
    {
      "type": "range",
      "id": "message_font_size_desktop",
      "min": 12,
      "max": 48,
      "step": 1,
      "unit": "px",
      "label": "Message Font Size (Desktop)",
      "default": 16
    },
    {
      "type": "range",
      "id": "link_font_size_mobile",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Link Font Size (Mobile)",
      "default": 12
    },
    {
      "type": "range",
      "id": "link_font_size_desktop",
      "min": 12,
      "max": 48,
      "step": 1,
      "unit": "px",
      "label": "Link Font Size (Desktop)",
      "default": 16
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Message Font Weight",
      "options": [
        {
          "value": "400",
          "label": "Regular (400)"
        },
        {
          "value": "500",
          "label": "Medium (500)"
        },
        {
          "value": "600",
          "label": "Semibold (600)"
        },
        {
          "value": "700",
          "label": "Bold (700)"
        }
      ],
      "default": "500"
    },
    {
      "type": "select",
      "id": "link_font_weight",
      "label": "Link Font Weight",
      "options": [
        {
          "value": "400",
          "label": "Regular (400)"
        },
        {
          "value": "500",
          "label": "Medium (500)"
        },
        {
          "value": "600",
          "label": "Semibold (600)"
        },
        {
          "value": "700",
          "label": "Bold (700)"
        }
      ],
      "default": "500"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "padding_horizontal_mobile",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Left/Right Padding (Mobile)",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Left/Right Padding (Desktop)",
      "default": 8
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Top Margin",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Bottom Margin",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_horizontal",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Left/Right Margin",
      "default": 0
    },
    {
      "type": "header",
      "content": "Link Settings"
    },
    {
      "type": "range",
      "id": "border_spacing",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Border Bottom Spacing",
      "default": 2
    },
    {
      "type": "checkbox",
      "id": "hide_underline_mobile",
      "label": "Hide Link Underline on Mobile",
      "default": true
    },
    {
      "type": "select",
      "id": "underline_direction",
      "label": "Underline Animation Direction",
      "options": [
        {
          "value": "left-to-right",
          "label": "Left to Right"
        },
        {
          "value": "right-to-left",
          "label": "Right to Left"
        }
      ],
      "default": "right-to-left"
    },
    {
      "type": "range",
      "id": "animation_speed",
      "min": 0,
      "max": 1500,
      "step": 50,
      "unit": "ms",
      "label": "Animation Speed",
      "default": 600,
      "info": "Controls the speed of both the underline and arrow animations (0 = instant, 1500 = very slow)"
    },
    {
      "type": "header",
      "content": "Border Settings"
    },
    {
      "type": "checkbox",
      "id": "show_border",
      "label": "Show Bottom Border",
      "default": false
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "border_style",
      "label": "Border Style",
      "options": [
        {
          "value": "solid",
          "label": "Solid"
        },
        {
          "value": "dashed",
          "label": "Dashed"
        },
        {
          "value": "dotted",
          "label": "Dotted"
        }
      ],
      "default": "solid"
    },
    {
      "type": "range",
      "id": "border_thickness",
      "min": 1,
      "max": 5,
      "step": 1,
      "unit": "px",
      "label": "Border Thickness",
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "hide_arrow_svg",
      "label": "Hide Arrow SVG",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "t:sections.announcement-bar.name"
    }
  ]
}
{% endschema %}

<div
  class="color-{{ section.settings.color_scheme }} color-{{ section.settings.color_scheme }}-text announcement-bar animate-slideDown"
  style="
    position: fixed;
    height: auto;
    top: 0;
    z-index: 999;
    padding-top: {{ section.settings.padding_vertical_mobile }}px;
    padding-bottom: {{ section.settings.padding_vertical_mobile }}px;
    padding-left: {{ section.settings.padding_horizontal }}px;
    padding-right: {{ section.settings.padding_horizontal }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    margin-left: {{ section.settings.margin_horizontal }}px;
    margin-right: {{ section.settings.margin_horizontal }}px;
    font-weight: {{ section.settings.font_weight }};
    --announcement-padding-vertical-desktop: {{ section.settings.padding_vertical }}px;
    --announcement-padding-horizontal-desktop: {{ section.settings.padding_horizontal }}px;
    --announcement-message-font-size-desktop: {{ section.settings.message_font_size_desktop }}px;
    --announcement-link-font-size-desktop: {{ section.settings.link_font_size_desktop }}px;
    {% if section.settings.show_border %}
      border-bottom: {{ section.settings.border_thickness }}px {{ section.settings.border_style }} {{ section.settings.border_color }};
    {% endif %}
  "
>
  <div
    class="announcement-content flex justify-between items-center !py-0 text-md w-[100vw]"
    style="padding-left: {{ section.settings.padding_horizontal_mobile }}px; padding-right: {{ section.settings.padding_horizontal_mobile }}px;"
  >
    <span
      class="break-words uppercase hyphens-auto pr-2 !tracking-normal md:max-w-[800px]"
      style="font-size: {{ section.settings.message_font_size_mobile }}px; color: var(--text);"
    >
      {{ section.settings.announcement_text | default: 'Welcome to your Store' | escape }}
    </span>
    <a
      href="{{ section.settings.membership_link }}"
      aria-label="{{ 'sections.announcement-bar.settings.membership_link_text.label' | t }}"
      class="uppercase membership-link relative flex items-center gap-2 !tracking-normal leading-none group before:absolute before:bottom-0 before:left-0 before:w-full {% if section.settings.underline_direction == 'left-to-right' %}before:origin-left{% else %}before:origin-right{% endif %} before:transition-transform before:ease-in-out {% if section.settings.underline_direction == 'left-to-right' %}hover:before:origin-right{% else %}hover:before:origin-left{% endif %} hover:before:scale-x-0 {% if section.settings.hide_underline_mobile %}before:hidden sm:before:block{% endif %}"
      style="padding-bottom: {{ section.settings.border_spacing }}px; font-weight: {{ section.settings.link_font_weight }}; font-size: {{ section.settings.link_font_size_mobile }}px; --animation-duration: {{ section.settings.animation_speed }}ms; color: var(--text); border-color: var(--text);"
    >
      <span class="inline max-sm:hidden" style="color: var(--text);">
        {{ section.settings.membership_link_text | default: 'Shop now' | escape }}
      </span>

      {% unless section.settings.hide_arrow_svg %}
        {% if section.settings.custom_svg != blank %}
          {{ section.settings.custom_svg }}
        {% else %}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="var(--text)"
            viewBox="0 0 16 16"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="announcement-svg"
          >
            <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
          </svg>
        {% endif %}
      {% endunless %}
    </a>
  </div>
</div>
