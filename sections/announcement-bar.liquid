<div
    class="color-{{ section.settings.color_scheme }} color-{{ section.settings.color_scheme }}-text"
    style="
      padding-top: {{ section.settings.padding_vertical }}px;
      padding-bottom: {{ section.settings.padding_vertical }}px;
      padding-left: {{ section.settings.padding_horizontal }}px;
      padding-right: {{ section.settings.padding_horizontal }}px;
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
      margin-left: {{ section.settings.margin_horizontal }}px;
      margin-right: {{ section.settings.margin_horizontal }}px;
      font-weight: {{ section.settings.font_weight }};
    "
  >
    <div class="flex justify-between items-center px-[20px] text-md">
      <span
        class="break-words hyphens-auto pr-2 !tracking-normal max-w-[300px] md:max-w-[800px] text-[var(--header_text)]"
        style="font-size: {{ section.settings.message_font_size }}px;"
      >
        {{ section.settings.free_shipping_message }}
      </span>
      <a
        href="{{ section.settings.membership_link }}"
        aria-label="{{ section.settings.membership_text }}"
        class="relative flex items-center gap-2 !tracking-normal  leading-none group text-[var(--header_text)] before:absolute before:bottom-0 before:left-0 before:w-full before:h-[2px] before:bg-[var(--header_text)] {% if section.settings.underline_direction == 'left-to-right' %}before:origin-left{% else %}before:origin-right{% endif %} before:transition-transform before:duration-{{ section.settings.animation_speed }} before:ease-in-out {% if section.settings.underline_direction == 'left-to-right' %}hover:before:origin-right{% else %}hover:before:origin-left{% endif %} hover:before:scale-x-0 {% if section.settings.hide_underline_mobile %}before:hidden sm:before:block{% endif %}"
        style="padding-bottom: {{ section.settings.border_spacing }}px; font-weight: {{ section.settings.link_font_weight }}; font-size: {{ section.settings.link_font_size }}px;"
      >
        <span class="inline max-sm:hidden text-[var(--header_text)]">{{ section.settings.membership_text }}</span>
        <svg
          class="svg-arrow-down rotate-icon !h-[11.2px] -rotate-[90deg]"
          viewBox="0 0 18 18"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path d="M13.3964 13.0312C12.1408 14.1889 10.9749 15.8451 9.89865 18L8.07175 18C6.99552 15.8504 5.8296 14.1941 4.57399 13.0312C3.96693 12.4629 3.25037 12.0168 2.46544 11.7183C1.68051 11.4199 0.842667 11.2751 1.90735e-06 11.2922V8.54366C2.07534 8.54366 3.73901 9.03094 4.99103 10.0055C6.26318 11.0123 7.17333 12.386 7.59013 13.9282L7.70045 13.9282L7.70045 -2.57632e-09L10.2834 -1.93022e-09L10.2834 13.9282L10.4368 13.9282C10.8363 12.3852 11.7386 11.0091 13.009 10.0055C14.2646 9.02919 15.9283 8.54192 18 8.54366V11.2922C17.1526 11.2725 16.3095 11.4161 15.5194 11.7146C14.7293 12.013 14.0078 12.4605 13.3964 13.0312Z" fill="currentColor"></path>
        </svg>
      </a>
    </div>
  </div>

  {% schema %}
  {
    "name": "t:sections.announcement-bar.name",
    "class": "announcement-bar-section",
    "enabled_on": {
      "groups": ["header"]
    },
    "settings": [
      {
        "type": "text",
        "id": "free_shipping_message",
        "label": "Free Shipping Message",
        "default": "FREE SHIPPING $125+, INTERNATIONAL $200+"
      },
      {
        "type": "text",
        "id": "membership_text",
        "label": "Membership Link Text",
        "default": "JOIN THE MEMBERSHIP"
      },
      {
        "type": "text",
        "id": "membership_link",
        "label": "Membership Link URL",
        "default": "/account/register"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color scheme",
        "default": "background-1"
      },
      {
        "type": "header",
        "content": "Typography Settings"
      },
      {
        "type": "range",
        "id": "message_font_size",
        "min": 12,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Message Font Size",
        "default": 16
      },
      {
        "type": "range",
        "id": "link_font_size",
        "min": 12,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Link Font Size",
        "default": 16
      },
      {
        "type": "select",
        "id": "font_weight",
        "label": "Message Font Weight",
        "options": [
          {
            "value": "400",
            "label": "Regular (400)"
          },
          {
            "value": "500",
            "label": "Medium (500)"
          },
          {
            "value": "600",
            "label": "Semibold (600)"
          },
          {
            "value": "700",
            "label": "Bold (700)"
          }
        ],
        "default": "400"
      },
      {
        "type": "select",
        "id": "link_font_weight",
        "label": "Link Font Weight",
        "options": [
          {
            "value": "400",
            "label": "Regular (400)"
          },
          {
            "value": "500",
            "label": "Medium (500)"
          },
          {
            "value": "600",
            "label": "Semibold (600)"
          },
          {
            "value": "700",
            "label": "Bold (700)"
          }
        ],
        "default": "500"
      },
      {
        "type": "header",
        "content": "Layout Settings"
      },
      {
        "type": "range",
        "id": "padding_vertical",
        "min": 0,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Top/Bottom Padding",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_horizontal",
        "min": 0,
        "max": 50,
        "step": 5,
        "unit": "px",
        "label": "Left/Right Padding",
        "default": 20
      },
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Top Margin",
        "default": 0
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Bottom Margin",
        "default": 0
      },
      {
        "type": "range",
        "id": "margin_horizontal",
        "min": 0,
        "max": 50,
        "step": 5,
        "unit": "px",
        "label": "Left/Right Margin",
        "default": 0
      },
      {
        "type": "header",
        "content": "Link Settings"
      },
      {
        "type": "range",
        "id": "border_spacing",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "Border Bottom Spacing",
        "default": 0
      },
      {
        "type": "checkbox",
        "id": "hide_underline_mobile",
        "label": "Hide Link Underline on Mobile",
        "default": true
      },
      {
        "type": "select",
        "id": "underline_direction",
        "label": "Underline Animation Direction",
        "options": [
          {
            "value": "left-to-right",
            "label": "Left to Right"
          },
          {
            "value": "right-to-left",
            "label": "Right to Left"
          }
        ],
        "default": "right-to-left"
      },
      {
        "type": "select",
        "id": "animation_speed",
        "label": "Animation Speed",
        "options": [
          {
            "value": "100",
            "label": "Very Fast (100ms)"
          },
          {
            "value": "200",
            "label": "Fast (200ms)"
          },
          {
            "value": "300",
            "label": "Medium (300ms)"
          },
          {
            "value": "500",
            "label": "Slow (500ms)"
          },
          {
            "value": "700",
            "label": "Very Slow (700ms)"
          }
        ],
        "default": "700",
        "info": "Controls the speed of both the underline and arrow animations"
      }
    ],
    "presets": [
      {
        "name": "t:sections.announcement-bar.presets.name"
      }
    ]
  }
  {% endschema %}
