    {
      "type": "range",
      "id": "title_font_weight",
      "min": 300,
      "max": 900,
      "step": 100,
      "label": "t:sections.custom_password.settings.title_font_weight",
      "default": 500
    },
    {
      "type": "header",
      "content": "Subtitle"
    },
    {
      "type": "text",
      "id": "subtitle_text",
      "label": "t:sections.custom_password.settings.subtitle_text.label",
      "default": "t:sections.custom_password.settings.subtitle_text.default"
    },
    {
      "type": "range",
      "id": "subtitle_font_size",
      "min": 12,
      "max": 36,
      "step": 1,
      "unit": "px",
      "label": "t:sections.custom_password.settings.subtitle_font_size",
      "default": 15
    },
    {
      "type": "range",
      "id": "subtitle_font_weight",
      "min": 300,
      "max": 900,
      "step": 100,
      "label": "t:sections.custom_password.settings.subtitle_font_weight",
      "default": 400
    },
    {
      "type": "header",
      "content": "Form"
    },
    {
      "type": "text",
      "id": "input_placeholder",
      "label": "t:sections.custom_password.settings.input_placeholder.label",
      "default": "t:sections.custom_password.settings.input_placeholder.default"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:sections.custom_password.settings.button_text.label",
      "default": "t:sections.custom_password.settings.button_text.deafult"
    },
    {
      "type": "range",
      "id": "form_width",
      "min": 300,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "t:sections.custom_password.settings.form_width",
      "default": 700
    },
    {
      "type": "header",
      "content": "Page Margins"
    },
    {
      "type": "range",
      "id": "page_margin_top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "t:sections.custom_password.settings.page_margin_top",
      "default": 50
    },
    {
      "type": "range",
      "id": "page_margin_bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "t:sections.custom_password.settings.page_margin_bottom",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "t:sections.custom_password.name"
    }
  ]
}
{% endschema %}