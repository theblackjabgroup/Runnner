{% schema %}
{
  "name": "Footer Links",
  "disabled_on": {
    "groups": ["header"],
    "templates": ["*"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Footer Links"
    },
    {
      "type": "text",
      "id": "link1_text",
      "label": "First Link Text",
      "default": "Privacy Policy"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Color Scheme"
    },
    {
      "type": "color",
      "id": "hover_color",
      "label": "Hover Color",
      "default": "#ffffff",
      "info": "Choose the color for links when hovered"
    },
    {
      "type": "url",
      "id": "link1_url",
      "label": "First Link URL"
    },
    {
      "type": "text",
      "id": "link2_text",
      "label": "Second Link Text",
      "default": "Terms of Service"
    },
    {
      "type": "url",
      "id": "link2_url",
      "label": "Second Link URL"
    },
    {
      "type": "text",
      "id": "link3_text",
      "label": "Third Link Text",
      "default": "Accessibility"
    },
    {
      "type": "url",
      "id": "link3_url",
      "label": "Third Link URL"
    },
    {
      "type": "text",
      "id": "link4_text",
      "label": "Fourth Link Text",
      "default": "Site Credit"
    },
    {
      "type": "url",
      "id": "link4_url",
      "label": "Fourth Link URL"
    }
  ],
  "presets": [
    {
      "name": "Sub Footer",
      "category": "Footer"
    }
  ]
}
{% endschema %}
<style>
  .footer-text {
    color: gray;
    transition: color 0.3s ease;
    /* Use Shopify's body typography variables */
    font-family: var(--font-body-family);
    font-style: var(--font-body-style);
    font-weight: var(--font-body-weight);
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }
  .footer-text:hover {
    opacity: 1; 
    color: {{ section.settings.hover_color | default: '#ffffff' }};
  }
  
  .site-credit-link {
    color: gray;
    transition: color 0.3s ease;
    position: relative;
    /* Use Shopify's body typography variables */
    font-family: var(--font-body-family);
    font-style: var(--font-body-style);
    font-weight: var(--font-body-weight);
    letter-spacing: 0.04em;
    text-transform: uppercase;
    opacity: 0.9;
        margin-right: 10px;
  }
  
  .site-credit-link:hover {
    opacity: 1; 
    color: {{ section.settings.hover_color | default: '#ffffff' }};
  }
  
  .site-credit-link .default-text {
    display: inline;
  }
  
  .site-credit-link .hover-text {
    display: none;
  }
  
  .site-credit-link:hover .default-text {
    display: none;
  }
  
  .site-credit-link:hover .hover-text {
    display: inline;
  }
  
  @media screen and (max-width: 480px) {
    .footer-container {
      flex-direction: column;
      gap: 1px;
    }
    
    .footer-links {
      flex-direction: column;
      gap: 1px;
      width: 100%;
      order: 2;
    }
    
    .site-credit {
      order: 1;
      margin-bottom: 1rem;
    }

    .footer-text {
      font-size:11px;
    }
.site-credit-link .default-text{
  font-size: 11px;
  margin-left: 10px;
}
    
.site-credit-link .hover-text{
  margin-left:10px;
  font-size: 11px;
}
  }
  
  @media screen and (max-width: 480px) {
    .site-credit {
      margin-left: 70%;
    }
    .footer-links {
      margin-top: -25px;
    }
    .footer-container {
      margin-top: -3px;
    }
  }
  
  /* Add margin-left for large screens only */
  @media screen and (min-width: 1024px) {
    .footer-links {
      margin-left: 20px;
    }
  }

  .custom-footer-style {
  padding-top: 20px;
  padding-bottom: 20px;
  line-height: normal;
}

  
</style>
<div class="w-full p-4 flex justify-between items-center bg-black footer-container color-{{ section.settings.color_scheme }} custom-footer-style">

  <div class="flex gap-8 footer-links" style="margin-left: 10px;">
    {% if section.settings.link1_text != blank %}
      <a href="{{ section.settings.link1_url | default: '#' }}" class="footer-text uppercase no-underline ml-5 max-[480px]:ml-0">{{ section.settings.link1_text }}</a>
    {% endif %}
    
    {% if section.settings.link2_text != blank %}
      <a href="{{ section.settings.link2_url | default: '#' }}" class="footer-text uppercase no-underline">{{ section.settings.link2_text }}</a>
    {% endif %}
    
    {% if section.settings.link3_text != blank %}
      <a href="{{ section.settings.link3_url | default: '#' }}" class="footer-text uppercase no-underline">{{ section.settings.link3_text }}</a>
    {% endif %}
  </div>
  
  <div class="site-credit">
    {% if section.settings.link4_text != blank %}
      <a href="{{ section.settings.link4_url | default: '#' }}" class="site-credit-link uppercase no-underline ml-5 max-[480px]:ml-0 mr-5 max-[480px]:mr-0">
        <span class="default-text">{{ section.settings.link4_text }}</span>
        <span class="hover-text">VIEW SOURCE</span>
      </a>
    {% endif %}
  </div>
</div>
