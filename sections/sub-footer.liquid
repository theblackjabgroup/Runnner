{% schema %}
{
  "name": "Footer Links",
  "settings": [
    {
      "type": "header",
      "content": "Footer Links"
    },
    {
      "type": "text",
      "id": "link1_text",
      "label": "First Link Text",
      "default": "Privacy Policy"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Color Scheme"
    },
    {
      "type": "url",
      "id": "link1_url",
      "label": "First Link URL"
    },
    {
      "type": "text",
      "id": "link2_text",
      "label": "Second Link Text",
      "default": "Terms of Service"
    },
    {
      "type": "url",
      "id": "link2_url",
      "label": "Second Link URL"
    },
    {
      "type": "text",
      "id": "link3_text",
      "label": "Third Link Text",
      "default": "Accessibility"
    },
    {
      "type": "url",
      "id": "link3_url",
      "label": "Third Link URL"
    },
    {
      "type": "header",
      "content": "Site Credit"
    },
    {
      "type": "text",
      "id": "site_credit_text",
      "label": "Site Credit Text",
      "default": "Site Credit"
    },
    {
      "type": "url",
      "id": "site_credit_url",
      "label": "Site Credit URL",
      "info": "Optional"
    }
  ],
  "presets": [
    {
      "name": "Custom Footer",
      "category": "Footer"
    }
  ]
}
{% endschema %}

<style>
  .footer-text {
    color: var(--text);
    transition: color 0.3s ease;
  }
  .footer-text:hover {
    opacity: 0.7;
  }
  
  @media screen and (max-width: 767px) {
    .footer-container {
      flex-direction: column;
      gap: 1.5rem;
    }
    
    .footer-links {
      flex-direction: column;
      gap: 1rem;
      width: 100%;
      order: 2;
    }
    
    .site-credit {
      order: 1;
      margin-bottom: 1rem;
    }
  }
  @media screen and (max-width: 767px) {
  .site-credit {
    margin-left: 70%;
  }
  .footer-links {
    margin-top: -50px;
  }
   .footer-container{
     margin-top:90px;
   }
}
  
</style>

<div class="w-full p-4 flex justify-between items-center bg-black font-sans footer-container color-{{ section.settings.color_scheme }}">
  <div class="flex gap-8 footer-links">
    {% if section.settings.link1_text != blank %}
      <a href="{{ section.settings.link1_url | default: '#' }}" class="footer-text text-xl uppercase no-underline">{{ section.settings.link1_text }}</a>
    {% endif %}
    
    {% if section.settings.link2_text != blank %}
      <a href="{{ section.settings.link2_url | default: '#' }}" class="footer-text text-xl uppercase no-underline">{{ section.settings.link2_text }}</a>
    {% endif %}
    
    {% if section.settings.link3_text != blank %}
      <a href="{{ section.settings.link3_url | default: '#' }}" class="footer-text text-xl uppercase no-underline">{{ section.settings.link3_text }}</a>
    {% endif %}
  </div>
  
  <div class="site-credit">
    {% if section.settings.site_credit_url != blank %}
      <a href="{{ section.settings.site_credit_url }}" class="footer-text no-underline">{{ section.settings.site_credit_text | default: 'Site Credit' }}</a>
    {% else %}
      <span class="footer-text">{{ section.settings.site_credit_text | default: 'Site Credit' }}</span>
    {% endif %}
  </div>
</div>
