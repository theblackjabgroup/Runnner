{% schema %}
{
  "name": "Scrolling Marquee",
  "disabled_on": {
    "groups": ["header", "aside"]
  },
  "settings": [
    {
      "type": "text",
      "id": "marquee_text",
      "label": "Marquee Text",
      "default": "SUBSCRIBE FOR EMAILSâ†’"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Color Scheme"
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "label": "Scroll Speed",
      "min": 10,
      "max": 150,
      "step": 5,
      "default": 100,
      "info": "Lower number = faster scroll"
    }
  ],
  "presets": [
    {
      "name": "Scrolling Marquee",
      "category": "Footer"
    }
  ]
}
{% endschema %}

<div class="marquee-wrapper w-full overflow-hidden color-{{ section.settings.color_scheme }} border-t border-black" {{ section.shopify_attributes }}>
  <div class="marquee-container flex whitespace-nowrap">
    {% assign marquee_text = section.settings.marquee_text | strip %}
    {% assign scroll_speed = section.settings.scroll_speed | default: 70 %}
    
    <div class="marquee-content flex flex-row font-semibold">
      {% for i in (1..10) %}
        <span class="px-2">{{ marquee_text }}</span>
      {% endfor %}
    </div>
    
    <!-- Duplicate content for seamless looping -->
    <div class="marquee-content flex flex-row font-semibold">
      {% for i in (1..10) %}
        <span class="px-2">{{ marquee_text }}</span>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .marquee-wrapper {
    padding: 0.5rem 0; /* Even padding on top and bottom */
    display: flex;
    align-items: center;
    border-top: 1px solid black; /* Added black border at the top */
  }
  
  .marquee-container {
    display: flex;
    animation: scroll-x {{ section.settings.scroll_speed | default: 70 }}s linear infinite;
    height: auto;
  }
  
  .marquee-content {
    color: var(--text);
    font-size: 25px;
    line-height: 0.2;
    font-weight: 500;
    margin-top: 8px;
    margin-bottom: 8px;
  }
  
  @keyframes scroll-x {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }
</style>
