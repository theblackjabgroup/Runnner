{{ 'blog-banner.css' | asset_url | stylesheet_tag }}

<div class="c">
  {% assign default_blog_handle = 'news' %}
  {% assign blog_handle = section.settings.selected_blog | default: default_blog_handle %}
  {% assign blog = blogs[blog_handle] %}

  {% for article in blog.articles limit: 1 %}
    {% assign article_class = 'blog-article block space-y-2 px-0 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 transition-shadow hover:shadow-lg' %}

    <a href="{{ article.url }}" class="group {{ article_class }} flex">
      <div class="zoom-trigger1">
        <div class="overflow-hidden">
          <picture>
            {% if article.image != blank %}
                <img
                  src="{{ article.image | image_url: width: 600 }}"
                  alt="{{ article.title | default: 'Blog image' | escape }}"
                  width="1120px"
                  height="1400px"
                  loading="lazy"
                  class="img11 object-cover transition-transform duration-300 ease-in-out"
                  style="width: 1120px; height: 1400px; max-height: 1400px; transform-origin: center center;" />
            {% else %}
              {{ 'collection-1' | placeholder_svg_tag: 'w-full h-full bg-gray' }}
            {% endif %}
          </picture>
        </div>
      </div>

      <div class="maindiv">
        
        <p class="text-article-date-color1" style="margin-bottom:2.7vh; font-size: var(--t-b-1-size); font-weight: var(--t-h-5-weight);">
          {{ article.published_at | date: "%m.%d.%y" }}
        </p>
        
        <div class="subclass-header1" id="article-title-{{ forloop.index0 }}" style="line-height:var(--t-h-3-line-height); font-size:var(--t-h-3-size); font-weight:var(--t-h-3-weight);">
            {% render 'icon-playback', fill: 'var(--text)', viewBox: '6 2 8 12', class: 'arrow-svgsubw-8 object-contain inline-block',
               stroke: 'var(--text)', style: 'height:22px; margin-top:-8px; margin-right:-4px;' %}                                
          {{ article.title }}
        </div>

        <span class="subclass-subheader1 font-medium tracking-tight" style="font-size: var(--t-b-1-size);">
          {% assign first_sentence = article.content | strip_html | split: '.' | first %}
          {{ first_sentence }}.
        </span>
      </div>
    </a>
  {% endfor %}
</div>

<style>
.c {
  padding: {{ settings.sections_spacing }}px {{ settings.side_space}}px;
}
</style>

{% schema %}
  {
    "name": "Blog Grid Header",
    "disabled_on": {
      "groups": ["footer", "header"]
    },
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "default": "scheme-1",
        "label": "Color Scheme"
      },
      {
        "type": "blog",
        "id": "selected_blog",
        "label": "Select Blog"
      }
    ],
    "presets": [
      {
        "name": "Blog Grid Header",
        "category": "Blog"
      }
    ]
  }
{% endschema %}