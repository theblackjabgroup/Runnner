<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }

  /* Focus styles for keyboard navigation */
  a:focus,
  button:focus,
  input:focus {
    outline: 2px solid #4d90fe;
    outline-offset: 2px;
  }
  
