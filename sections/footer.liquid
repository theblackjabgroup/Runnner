    color: black !important; 
  }

  .signup-button:hover span {
    color: black !important;
  }
  
  .arrow-hover {
    display: inline-block;
  }

  .arrow-wrapper {
    display: inline-block;
    width: 80px;
    height: 80px;
    transition: transform 0.3s ease, stroke 0.3s ease, fill 0.3s ease;
    transform: rotate(-10deg);
    margin-left: 10px;
  }

  .arrow-wrapper svg path {
    fill: {{ section.settings.menu_item_color }};
    stroke: {{ section.settings.menu_item_color }};
    transition: fill 0.3s ease, stroke 0.3s ease;
  }

  /* Fixed hover: Now triggers on entire button hover */
  .signup-button:hover .arrow-wrapper {
    transform: rotate(-45deg);
  }

  .signup-button:hover .arrow-wrapper svg path {
    fill: black;
    stroke: black;
  }

  /* Make sure the arrow rotation works on the entire button hover */
  .signup-button:hover .arrow-hover .arrow-wrapper {
    transform: rotate(-90deg);
  }

  .signup-button:hover .arrow-hover .arrow-wrapper svg path {
    fill: black;
    stroke: black;
  }
  
