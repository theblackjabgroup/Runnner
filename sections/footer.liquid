  .email-signup-section {
    padding: 20px;
    text-align: center;
    width: 100%;
    box-sizing: border-box;
  }
  
  
 
  
  /* Text span inside signup button */
  .signup-button span {
    line-height: 1;
    display: flex;
    align-items: center;
    height: 100%;
  }
  
  /* Hover effect for signup button */
  .signup-button:hover  {
    background-color: white;
    color: black; 
  }
  
 .arrow-hover {
    display: inline-block;
  }

  .arrow-wrapper {
    display: inline-block;
    width: 80px;
    height: 80px;
    transition: transform 0.3s ease, stroke 0.3s ease, fill 0.3s ease;
    transform: rotate(-10deg);
    margin-left:10px
  }

  .arrow-wrapper svg path {
    fill: white;
    stroke: white;
    stroke-width: 1.0; /* bold effect */
    transition: fill 0.3s ease, stroke 0.3s ease;
  }

  /* Fixed hover: Now triggers on entire button hover */
  .signup-button:hover .arrow-wrapper {
    transform: rotate(-45deg);
  }

  .signup-button:hover .arrow-wrapper svg path {
    fill: black;
    stroke: black;
  }

  /* Make sure the arrow rotation works on the entire button hover */
  .signup-button:hover .arrow-hover .arrow-wrapper {
    transform: rotate(-80deg);
  }

  .signup-button:hover .arrow-hover .arrow-wrapper svg path {
    fill: black;
    stroke: black;
  }

