<link rel="stylesheet" href="{{ 'main-404.css' | asset_url }}">

<style>
  /* Mobile background image */
  @media (max-width: 640px) {
    .aurelia-404-section {
      {% if section.settings.mobile_background_image != blank %}
        background-image: url('{{ section.settings.mobile_background_image | image_url: width: 800 }}');
        background-size: {{ section.settings.background_size }};
      {% elsif section.settings.background_image != blank %}
        background-image: url('{{ section.settings.background_image | image_url }}');
        background-size: {{ section.settings.background_size }};
      {% endif %}
    }
  }
</style>

<main role="main">
  <h1 class="sr-only">{{ section.settings.third_text }}</h1>

  <div
    class="aurelia-404-section color-{{ section.settings.color_scheme }}"
    style="{% if section.settings.background_image %}background-image: url({{ section.settings.background_image | image_url }}); background-size: {{ section.settings.background_size }};{% endif %}--mobile-top-padding: var(--sections-spacing-top);"
  >
    {% if section.settings.animation_mode == 'slide' %}
      <div class="slide-animation" aria-hidden="true">
        <div class="slide-text slide-left">{{ section.settings.first_text }}</div>
        <div class="slide-text slide-right">{{ section.settings.second_text }}</div>
        <div class="slide-text slide-left">{{ section.settings.third_text }}</div>
      </div>

    {% else %}
      <div class="slide-animation" aria-hidden="true">
        <div class="slide-text static-mode">{{ section.settings.first_text }}</div>
        <div class="slide-text static-mode">{{ section.settings.second_text }}</div>
        <div class="slide-text static-mode">{{ section.settings.third_text }}</div>
      </div>
    {% endif %}

    <p class="sr-only">{{ section.settings.third_text }}</p>
    {% render 'primary-button',
      button_text: section.settings.button_text,
      button_url: '/',
      button_font_size: '24px',
      font_weight: 'var(--t-b-1-weight)',
      button_line_height: 'var(--t-b-1-line-height)',
      mobile_font_size: '16px',
      mobile_font_weight: 'var(--t-b-2-weight)',
      mobile_line_height: 'var(--tm-b-2-line-height)'
    %}
  </div>

  <noscript>
    <p>Page not found</p>
  </noscript>
</main>

{% schema %}
{
  "name": "404 Page",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Color Scheme"
    },
    {
      "type": "text",
      "id": "first_text",
      "label": "t:sections.404.first_text.label",
      "default": "Lost in the "
    },
    {
      "type": "text",
      "id": "second_text",
      "label": "t:sections.404.second_text.label",
      "default": "internet?"
    },
    {
      "type": "text",
      "id": "third_text",

      "label": "t:sections.404.third_text.label",
      "default": "Don’t worry, we’ll guide you back."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:sections.404.button_text.label",
      "default": "Home"
    },
    {
      "type": "header",
      "content": "t:sections.404.animation_header.label"
    },
    {
      "type": "select",
      "id": "animation_mode",
      "label": "Animation Mode",
      "options": [
        {
          "value": "static",
          "label": "Static"
        },
        {
          "value": "slide",
          "label": "Slide Animation"
        }
      ],
      "default": "slide"
    },
    {
      "type": "range",
      "id": "animation_speed",
      "min": 0.5,
      "max": 3,
      "step": 0.1,
      "unit": "s",
      "label": "t:sections.404.animation_speed.label",
      "default": 1.5
    },
    {
      "type": "header",
      "content": "t:sections.404.background_image_header.label"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Desktop Background Image",
      "info": "Background image for desktop and tablet views"
    },
    {
      "type": "image_picker",
      "id": "mobile_background_image",
      "label": "Mobile Background Image",
      "info": "Image shown on mobile phones only (640px and below). Falls back to desktop image if not set."
    },
    {
      "type": "select",
      "id": "background_size",
      "label": "t:sections.404.background_size.label",
      "options": [
        {
          "value": "cover",
          "label": "t:sections.404.background_size.options.cover.label"
        },
        {
          "value": "contain",
          "label": "t:sections.404.background_size.options.contain.label"
        }
      ],
      "default": "cover"
    }
  ]
}
{% endschema %}
