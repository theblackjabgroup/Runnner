                {% for country in localization.available_countries %}
                  <li>
                    <a
                      href="{{ country.url }}"
                      class="w-full flex items-center justify-between px-4 py-2 text-3xl hover:bg-gray-300"
                      style="color: var(--header_text);"
                    >
                      <span class="mx-2">{{ country.name }}</span>
