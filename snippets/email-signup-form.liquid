{% comment %}
  Email Signup Form Component
  Usage: {% render 'email-signup-form',
    button_text: section.settings.button_text,
    placeholder: section.settings.modal_placeholder
  %}
{% endcomment %}
{{ 'email-signup-banner.css' | asset_url | stylesheet_tag }}

{%- form 'customer', id: 'email-signup-form-password', class: 'flex flex-col gap-4 w-full mb-[28px] max-w-[1000px] item-center' -%}
  <input type="hidden" name="contact[tags]" value="newsletter">

  <div class="form-fields-container relative">
    <div class="flex flex-col">
      <div class="flex justify-center">
        <label for="email-input-password" class="sr-only">Email address</label>
        
        <input
          type="email"
          id="email-input-password"
          placeholder="EMAIL"
          name="contact[email]"
          style="width: 324px; height: 48px; border: var(--inputs-border-width) solid var(--border); border-radius: 3px; opacity: var(--inputs-border-opacity); color:var(--button_label); padding: 0px var(--space-xl); font-size: var(--t-b-2-size); outline: none; box-sizing: border-box;"
          class="pass-input w-full px-6 py-4 text-left border mt-4 ml-2 pt-2 pb-1 h-[55px] leading-[50px] md:pt-0 md:mt-0 md:pb-0 focus:outline-none focus:ring-1 leading-none peer mb-[13px]"
          aria-label="{{ placeholder | default: 'Enter your email' }}"
          required
          pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" 
          value="{{ form.email }}"
        >
      </div>

      {%- if form.errors -%}
        <div class="text-red-500 text-sm mt-3 ml-2">
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}

      <div id="email-error-password" class="hidden text-red-500 text-sm mt-3 ml-2 peer-invalid:block">
        Please enter a valid email address
      </div>
    </div>
  </div>

  <div class="flex justify-center w-full">
    <button
      type="submit"
      id="submitButton-password"
      class="
        pass-subscribe w-full px-6 py-4 font-light flex items-center justify-between cursor-pointer h-16 ml-2 text-4xl leading-[50px] pt-2 md:h-16 md:mb-0 md:pt-0 md:pb-0
        transition-colors button-with-arrow focus:outline-none focus:ring-1
      "
      style="font-size: var(--t-b-1-size); font-weight: var(--t-b-1-weight); line-height: var(--t-b-1-line-height); font-style: var(--font-body-style);
            font-family: var(--font-body-family);"
      aria-label="Subscribe to our email list"
    >
    <span id="buttonText-password">{{ button_text }}</span>
    {% render 'icon-playback', width: '16px', height: '16px',viewBox: '4.5 1.5 8.5 13'%}
      <span id="loadingSpinner-password" class="hidden">
        <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </span>
    </button>
  </div>
{%- endform -%}

{%- if form.posted_successfully? -%}
  <div
    id="successMessage-password"
    class="text-[var(--text)] text-xl font-light mt-8 text-center w-full"
    aria-live="polite"
  >
    Thanks for subscribing!
  </div>
{%- endif -%}
