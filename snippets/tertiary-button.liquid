{% comment %}
  Tertiary Button with Sliding Text Animation

  Usage:
  {% render 'tertiary-button',
    button_text: 'Click Me',
    button_url: '/collection/all',
    button_font_size: '24px',
    font_weight: 500,
    button_line_height: 1.3,
    mobile_font_size: '16px',
    mobile_font_weight: 400,
    mobile_line_height: 1.3,
    tertiary_class: 'my-tertiary-button',
    button_type: 'button',
    data_attributes: 'data-increment="6"'
  %}

  Parameters:
  - button_text: String - The text to display on the button
  - button_url: String - The URL the button should link to (if provided, renders as <a>, otherwise as <button>)
  - button_font_size: String - Font size in pixels (default: 24)
  - font_weight: Number - Font weight (default: 500)
  - button_line_height: Number - Line height (default: 1.3)
  - mobile_font_size: String - Mobile font size in pixels (default: 16)
  - mobile_font_weight: Number - Mobile font weight (default: 400)
  - mobile_line_height: Number - Mobile line height (default: 1.3)
  - tertiary_class: String - Additional CSS class for styling
  - button_type: String - Button type when rendered as button (default: 'button')
  - data_attributes: String - Additional data attributes (e.g., 'data-increment="6" data-action="load-more"')
  - button_width: String - Custom button width (e.g., '370px')
  - button_height: String - Custom button height (e.g., '50px')
  - mobile_button_width: String - Custom mobile button width (e.g., '95vw')
{% endcomment %}

{%- assign button_text = button_text | default: 'Button' -%}
{%- assign button_url = button_url | default: '' -%}
{%- assign button_font_size = button_font_size | default: 'var(--t-b-1-size)' -%}
{%- assign font_weight = font_weight | default: 'var(--t-b-1-weight)' -%}
{%- assign button_line_height = button_line_height | default: 'var(--t-b-1-line-height)' -%}
{%- assign mobile_font_size = mobile_font_size | default: 'var(--tm-b-1-size)' -%}
{%- assign mobile_font_weight = mobile_font_weight | default: 'var(--t-b-1-weight)' -%}
{%- assign mobile_line_height = mobile_line_height | default: 'var(--tm-b-1-line-height)' -%}
{%- assign tertiary_class = tertiary_class | default: '' -%}
{%- assign button_type = button_type | default: 'button' -%}
{%- assign data_attributes = data_attributes | default: '' -%}
{%- assign button_width = button_width | default: '' -%}
{%- assign button_height = button_height | default: '' -%}
{%- assign mobile_button_width = mobile_button_width | default: '' -%}

{%- comment -%} Check if we should render as anchor or button {%- endcomment -%}
{%- assign render_as_anchor = false -%}
{%- if button_url != blank and button_url != '#' and button_url != '' -%}
  {%- assign render_as_anchor = true -%}
{%- endif -%}

<style>
  .tertiary-slide-button {
    position: relative;
    display: inline-block;
    padding: 0px;
    border: {{ settings.tertiary_button_border_thickness | default: 1 }}px solid var(--secondary_button_text_color);
    color: var(--secondary_button_text_color);
    background-color: var(--secondary_button_label);
    border-radius: {{ settings.tertiary_button_radius | default: 5 }}px;
    overflow: hidden;
    transition: background-color 0.2s ease, color 0.2s ease, border-color 0.2s ease;
    text-decoration: none;
    cursor: pointer;
    width: 360px;
    {% if button_width != blank %}width: {{ button_width }};{% endif %}
    {% if button_height != blank %}height: {{ button_height }};{% endif %}
  }

  .tertiary-slide-button:hover,
  .tertiary-slide-button:focus {
    background-color: var(--hovered_secondary_button_label);
    color: var(--hovered_secondary_button_text_color);
    border-color: var(--hovered_secondary_button_text_color);
    outline: none;
    text-decoration: none;
  }

  .tertiary-slide-button-text-container {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .tertiary-slide-button-text {
    display: flex;
    align-items: center;
    justify-content: space-between;
    line-height: 1;
    text-transform: {{ settings.tertiary_button_text_transform | default: 'uppercase' }};
    letter-spacing: 0.05em;
    transition: transform 0.6s ease-in-out;
    width: 100%;
    height: 100%;
    padding: 0 10px;
  }

  .tertiary-slide-button:hover .tertiary-slide-button-text,
  .tertiary-slide-button:focus .tertiary-slide-button-text {
    transform: translateX(-100%);
  }

  .tertiary-slide-button-text-hover {
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    line-height: 1;
    text-transform: {{ settings.tertiary_button_text_transform | default: 'uppercase' }};
    letter-spacing: 0.05em;
    transform: translateX(100%);
    transition: transform 0.6s ease-in-out;
    width: 100%;
    height: 100%;
    padding: 0 10px;
  }

  .tertiary-slide-button:hover .tertiary-slide-button-text-hover,
  .tertiary-slide-button:focus .tertiary-slide-button-text-hover {
    transform: translateX(0);
  }

  .tertiary-slide-button:not(:hover):not(:focus) .tertiary-slide-button-text,
  .tertiary-slide-button:not(:hover):not(:focus) .tertiary-slide-button-text-hover {
    transition: none;
  }

  .tertiary-slide-button-arrow {
    flex-shrink: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  {% if settings.tertiary_button_show_icon == false %}
  .tertiary-slide-button-arrow {
    display: none !important;
  }
  {% endif %}

  .tertiary-slide-button-arrow svg,
  .tertiary-slide-button-arrow img {
    width: 20px;
    height: 20px;
    min-width: 20px;
    min-height: 20px;
    max-width: 20px;
    max-height: 20px;
    transition: transform 0.2s ease;
    display: block;
    fill: currentColor;
    margin-left: 15px;
    object-fit: contain;
    flex-shrink: 0;
  }

  @media screen and (max-width: 750px) {
    .tertiary-slide-button-text,
    .tertiary-slide-button-text-hover {
      font-size: {{ mobile_font_size }} !important;
      font-weight: {{ mobile_font_weight }} !important;
      line-height: {{ mobile_line_height }} !important;
    }

    .tertiary-slide-button{
      padding: 1px 5px;
      width: 95vw !important;
      {% if mobile_button_width != blank %}width: {{ mobile_button_width }} !important;{% endif %}
    }

    .tertiary-slide-button-arrow svg,
    .tertiary-slide-button-arrow img {
      width: 18px;
      height: 18px;
      min-width: 18px;
      min-height: 18px;
      max-width: 18px;
      max-height: 18px;
    }
  }
</style>

{% if render_as_anchor %}
  <a
    href="{{ button_url }}"
    class="tertiary-slide-button {{ tertiary_class }}"
    aria-label="{{ button_text | escape }}"
    role="button"
    tabindex="0"
  >
    <div class="tertiary-slide-button-text-container">
      <div
        class="tertiary-slide-button-text"
        style="font-size: {{ button_font_size }}; font-weight: {{ font_weight }}; line-height: {{ button_line_height }}; font-style: var(--font-body-style); font-family: var(--font-body-family);"
      >
        {{ button_text | escape }}
        <span class="tertiary-slide-button-arrow" aria-hidden="true">
          {% if settings.tertiary_button_custom_icon != blank %}
            <img
              src="{{ settings.tertiary_button_custom_icon | image_url: width: 20 }}"
              alt="icon"
              width="20"
              height="20"
              style="display: block;"
            >
          {% else %}
            <svg
              width="20"
              height="20"
              viewBox="4.5 1.5 8.5 13"
              fill="currentColor"
              xmlns="http://www.w3.org/2000/svg"
              stroke="currentColor"
            >
              <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
            </svg>
          {% endif %}
        </span>
      </div>
      <div
        class="tertiary-slide-button-text-hover"
        style="font-size: {{ button_font_size }}; font-weight: {{ font_weight }}; line-height: {{ button_line_height }}; font-style: var(--font-body-style); font-family: var(--font-body-family);"
      >
        {{ button_text | escape }}
        <span class="tertiary-slide-button-arrow" aria-hidden="true">
          {% if settings.tertiary_button_custom_icon != blank %}
            <img
              src="{{ settings.tertiary_button_custom_icon | image_url: width: 20 }}"
              alt="icon"
              width="20"
              height="20"
              style="display: block;"
            >
          {% else %}
            <svg
              width="20"
              height="20"
              viewBox="4.5 1.5 8.5 13"
              fill="currentColor"
              xmlns="http://www.w3.org/2000/svg"
              stroke="currentColor"
            >
              <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
            </svg>
          {% endif %}
        </span>
      </div>
    </div>
  </a>
{% else %}
  <button
    type="{{ button_type }}"
    class="tertiary-slide-button {{ tertiary_class }}"
    aria-label="{{ button_text | escape }}"
    {{ data_attributes }}
  >
    <div class="tertiary-slide-button-text-container">
      <div
        class="tertiary-slide-button-text"
        style="font-size: {{ button_font_size }}; font-weight: {{ font_weight }}; line-height: {{ button_line_height }}; font-style: var(--font-body-style); font-family: var(--font-body-family);"
      >
        {{ button_text | escape }}
        <span class="tertiary-slide-button-arrow" aria-hidden="true">
          {% if settings.tertiary_button_custom_icon != blank %}
            <img
              src="{{ settings.tertiary_button_custom_icon | image_url: width: 20 }}"
              alt="icon"
              width="20"
              height="20"
              style="display: block;"
            >
          {% else %}
            <svg
              width="20"
              height="20"
              viewBox="4.5 1.5 8.5 13"
              fill="currentColor"
              xmlns="http://www.w3.org/2000/svg"
              stroke="currentColor"
            >
              <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
            </svg>
          {% endif %}
        </span>
      </div>
      <div
        class="tertiary-slide-button-text-hover"
        style="font-size: {{ button_font_size }}; font-weight: {{ font_weight }}; line-height: {{ button_line_height }}; font-style: var(--font-body-style); font-family: var(--font-body-family);"
      >
        {{ button_text | escape }}
        <span class="tertiary-slide-button-arrow" aria-hidden="true">
          {% if settings.tertiary_button_custom_icon != blank %}
            <img
              src="{{ settings.tertiary_button_custom_icon | image_url: width: 20 }}"
              alt="icon"
              width="20"
              height="20"
              style="display: block;"
            >
          {% else %}
            <svg
              width="20"
              height="20"
              viewBox="4.5 1.5 8.5 13"
              fill="currentColor"
              xmlns="http://www.w3.org/2000/svg"
              stroke="currentColor"
            >
              <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
            </svg>
          {% endif %}
        </span>
      </div>
    </div>
  </button>
{% endif %}
