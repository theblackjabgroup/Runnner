      <span class="sizing-text">
        {{ block.settings.item1_title | default: 'Sizing Info' }}
      </span>
    </button>
    <span id="sizing-description-1" class="sr-only">Opens {{ block.settings.item1_title }} in a drawer</span>

    <div
      id="sizing-drawer-1"
      class="sizing-drawer fixed top-0 h-full shadow-lg hidden overflow-y-auto"
      role="dialog"
      aria-modal="true"
      aria-labelledby="sizing-title-1"
      aria-hidden="true"
    >
      <div
        class="flex justify-end items-center sizing-drawer-header"
      >
        <button
          class="close-sizing-drawer underline transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 secondary-text-color"
          data-drawer-id="sizing-drawer-1"
          aria-label="Close {{ block.settings.item1_title }}"
        >
          CLOSE
        </button>
      </div>
      <div class="sizing-drawer-content">
        <h2 id="sizing-title-1" class="sr-only">{{ block.settings.item1_title }}</h2>
        {% if block.settings.item1_content_page != blank %}
          <div class="prose max-w-none p-4">
            {{ block.settings.item1_content_page.content }}
          </div>
        {% else %}
          <p class="secondary-text-color sizing-drawer-no-content">
            No content page selected for {{ block.settings.item1_title }}.
          </p>
        {% endif %}
      </div>
    </div>
    <div
      id="sizing-backdrop-1"
      class="sizing-backdrop fixed inset-0 hidden z-[999] sizing-drawer-overlay"
      data-drawer-id="sizing-drawer-1"
      aria-hidden="true"
    >
      &nbsp;
    </div>
  {%- endif -%}

