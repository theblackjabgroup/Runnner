<style>
  .drawer {
    visibility: hidden;
  }
  @media only screen and (max-width: 600px) {
    .vertical-text-cart-drawer-container {
      width: 25px !important;
    }
    .vertical-text-cart-drawer {
      font-size: 15px !important;
      padding: 0px 0 !important;
    }
  }
  .vertical-text-cart-drawer-container {
    position: fixed;
    left: 0px;
    top: 0;
    bottom: 0;
    width: 40px;
    overflow: hidden;
    display: flex;
    align-items: center;
    border: 1px solid black;
  }

  .vertical-text-cart-drawer {
    position: absolute;
    writing-mode: vertical-rl;
    text-orientation: mixed;
    transform: rotate(180deg);
    animation: scrollText 15s linear infinite !important;
    color: black !important;
    font-size: 24px;
    white-space: nowrap;
  }

  .vertical-text-cart-drawer:nth-child(2) {
    animation: scrollText2 15s linear infinite !important;
  }

  @keyframes scrollText {
    0% {
      transform: translateY(0) rotate(180deg);
    }
    100% {
      transform: translateY(-100%) rotate(180deg);
    }
  }

  @keyframes scrollText2 {
    0% {
      transform: translateY(100%) rotate(180deg);
    }
    100% {
      transform: translateY(0) rotate(180deg);
    }
  }

  /* Hide the default radio */
  .pricing-option [type='radio'] {
    -webkit-appearance: none;
    background-color: #fff;
    border: 2px solid #111;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    position: relative;
    outline: none;
    cursor: pointer;
    margin-right: 10px;
    transition: border-color 0.2s;
    vertical-align: middle;
    box-sizing: border-box;
  }

  /* Only show the black dot when checked */
  .pricing-option input[type='radio']:checked::before {
    content: '';
    display: block;
    width: 10px;
    height: 10px;
    background: #111;
    border-radius: 50%;
    position: absolute;
    top: 3px;
    left: 3px;
  }

  /* Optional: focus state */
  .pricing-option input[type='radio']:focus {
    box-shadow: 0 0 0 2px #1112;
  }
</style>

