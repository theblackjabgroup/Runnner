{% comment %}
  Primary Button with Sliding Text Animation

  Usage:
  {% render 'primary-button-slide-text',
    button_text: 'Click Me',
    button_url: '/collection/all',
    button_font_size: 24,
    font_weight: 500,
    show_arrow: true,
    primary_class: 'my-primary-button'
  %}

  Parameters:
  - button_text: String - The text to display on the button
  - button_url: String - The URL the button should link to
  - button_font_size: Number - Font size in pixels (default: 24)
  - font_weight: Number - Font weight (default: 500)
  - show_arrow: Boolean - Whether to show the arrow icon (default: false)
  - primary_class: String - Additional CSS class for styling
{% endcomment %}

{%- assign button_text = button_text | default: 'Button' -%}
{%- assign button_url = button_url | default: '#' -%}
{%- assign button_font_size = button_font_size | default: 24 -%}
{%- assign font_weight = font_weight | default: 500 -%}
{%- assign show_arrow = show_arrow | default: true -%}
{%- assign primary_class = primary_class | default: '' -%}

<style>
  .primary-slide-button {
    position: relative;
    display: inline-block;
    padding: 0px 5px;
    border: {{ settings.buttons_border_thickness | default: 1 }}px solid var(--button_label);
    color: var(--button_label);
    background-color: var(--button);
    border-radius: {{ settings.buttons_radius | default: 0 }}px;
    overflow: hidden;
    transition: background-color 0.4s ease, color 0.4s ease, border-color 0.4s ease;
    text-decoration: none;
    cursor: pointer;
  }

  .primary-slide-button:hover,
  .primary-slide-button:focus {
    background-color: var(--hovered_button_label);
    color: var(--hovered_button_text_color);
    border-color: var(--hovered_button_text_color);
    outline: none;
    text-decoration: none;
  }

  .primary-slide-button-text-container {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .primary-slide-button-text {
    display: flex;
    align-items: center;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: transform 0.7s ease;
  }

  .primary-slide-button:hover .primary-slide-button-text,
  .primary-slide-button:focus .primary-slide-button-text {
    transform: translateX(-100%);
  }

  .primary-slide-button-text-hover {
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transform: translateX(100%);
    transition: transform 0.7s ease;
  }

  .primary-slide-button:hover .primary-slide-button-text-hover,
  .primary-slide-button:focus .primary-slide-button-text-hover {
    transform: translateX(0);
  }

  .primary-slide-button:not(:hover):not(:focus) .primary-slide-button-text,
  .primary-slide-button:not(:hover):not(:focus) .primary-slide-button-text-hover {
    transition: none;
  }

  .primary-slide-button-arrow {
    margin-left: 12px;
  }

  .primary-slide-button-arrow svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  @media screen and (max-width: 750px) {
    .primary-slide-button-text,
    .primary-slide-button-text-hover {
      font-size: 16px !important;
    }

    .primary-slide-button{
      padding: 1px 5px;
    }

    .primary-slide-button-arrow svg {
      width: 12px;
      height: 12px;
    }
  }
</style>

<a
  href="{{ button_url }}"
  class="primary-slide-button {{ primary_class }}"
  aria-label="{{ button_text | escape }}"
  role="button"
  tabindex="0"
>
  <div class="primary-slide-button-text-container">
    <div
      class="primary-slide-button-text"
      style="font-size: {{ button_font_size }}px; font-weight: {{ font_weight }}; font-style: var(--font-body-style); font-family: var(--font-body-family);"
    >
      {{ button_text | escape }}
      {% if show_arrow %}
        <span class="primary-slide-button-arrow" aria-hidden="true">
          <svg
            width="18"
            height="16"
            viewBox="4.5 1.5 8.5 13"
            fill="currentColor"
            xmlns="http://www.w3.org/2000/svg"
            stroke="currentColor"
          >
            <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
          </svg>
        </span>
      {% endif %}
    </div>
    <div
      class="primary-slide-button-text-hover"
      style="font-size: {{ button_font_size }}px; font-weight: {{ font_weight }}; font-style: var(--font-body-style); font-family: var(--font-body-family);"
    >
      {{ button_text | escape }}
      {% if show_arrow %}
        <span class="primary-slide-button-arrow" aria-hidden="true">
          <svg
            width="18"
            height="16"
            viewBox="4.5 1.5 8.5 13"
            fill="currentColor"
            xmlns="http://www.w3.org/2000/svg"
            stroke="currentColor"
          >
            <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
          </svg>
        </span>
      {% endif %}
    </div>
  </div>
</a>
