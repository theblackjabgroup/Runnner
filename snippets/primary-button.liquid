{% comment %}
  Primary Button with Sliding Text Animation

  Usage:
  {% render 'primary-button',
    button_text: 'Click Me',
    button_url: '/collection/all',
    button_font_size: '24px',
    font_weight: 500,
    button_line_height: 1.3,
    mobile_font_size: '16px',
    mobile_font_weight: 400,
    mobile_line_height: 1.3,
    primary_class: 'my-primary-button',
    button_type: 'button',
    data_attributes: 'data-increment="6"'
  %}

  Parameters:
  - button_text: String - The text to display on the button
  - button_url: String - The URL the button should link to (if provided, renders as <a>, otherwise as <button>)
  - button_font_size: String - Font size in pixels (default: 24)
  - font_weight: Number - Font weight (default: 500)
  - button_line_height: Number - Line height (default: 1.3)
  - mobile_font_size: String - Mobile font size in pixels (default: 16)
  - mobile_font_weight: Number - Mobile font weight (default: 400)
  - mobile_line_height: Number - Mobile line height (default: 1.3)
  - primary_class: String - Additional CSS class for styling
  - button_type: String - Button type when rendered as button (default: 'button')
  - data_attributes: String - Additional data attributes (e.g., 'data-increment="6" data-action="load-more"')
  - button_width: String - Custom button width (e.g., '370px')
  - button_height: String - Custom button height (e.g., '50px')
  - mobile_button_width: String - Custom mobile button width (e.g., '95vw')
  - enable_border: Boolean - Enable or disable button border (default: true)
{% endcomment %}

{%- assign button_text = button_text | default: 'Button' -%}
{%- assign button_url = button_url | default: '' -%}
{%- assign button_font_size = button_font_size | default: '24px' -%}
{%- assign font_weight = font_weight | default: 500 -%}
{%- assign button_line_height = button_line_height | default: 1.3 -%}
{%- assign mobile_font_size = mobile_font_size | default: '16px' -%}
{%- assign mobile_font_weight = mobile_font_weight | default: 400 -%}
{%- assign mobile_line_height = mobile_line_height | default: 1.3 -%}
{%- assign primary_class = primary_class | default: '' -%}
{%- assign button_type = button_type | default: 'button' -%}
{%- assign data_attributes = data_attributes | default: '' -%}
{%- assign button_width = button_width | default: '' -%}
{%- assign button_height = button_height | default: '' -%}
{%- assign mobile_button_width = mobile_button_width | default: '' -%}
{%- comment -%} Handle enable_border: if explicitly set to false, disable border, otherwise enable {%- endcomment -%}
{%- assign show_border = true -%}
{%- if enable_border == false -%}
  {%- assign show_border = false -%}
{%- endif -%}

{%- comment -%} Create a unique class for borderless buttons {%- endcomment -%}
{%- assign unique_class = '' -%}
{%- if show_border == false -%}
  {%- assign unique_class = 'primary-button-no-border' -%}
{%- endif -%}

{%- comment -%} Check if we should render as anchor or button {%- endcomment -%}
{%- assign render_as_anchor = false -%}
{%- if button_url != blank and button_url != '#' and button_url != '' -%}
  {%- assign render_as_anchor = true -%}
{%- endif -%}

<style>
  .primary-slide-button {
    position: relative;
    display: inline-block;
    border: {{ settings.primary_button_border_thickness | default: 1 }}px solid var(--button_label);
    padding: 0px;
    color: var(--button_label);
    background-color: var(--button);
    border-radius: {{ settings.primary_button_radius | default: 5 }}px;
    overflow: hidden;
    transition: background-color 0.2s ease, color 0.2s ease, border-color 0.2s ease;
    text-decoration: none;
    cursor: pointer;
    {% if button_width != blank %}width: {{ button_width }};{% endif %}
    {% if button_height != blank %}height: {{ button_height }};{% endif %}
  }

  .primary-slide-button:hover,
  .primary-slide-button:focus {
    background-color: var(--hovered_button_label);
    color: var(--hovered_button_text_color);
    border-color: var(--hovered_button_text_color);
    outline: none;
    text-decoration: none;
  }

  /* Specific style for buttons without borders */
  .primary-button-no-border.primary-slide-button {
    border: none !important;
  }

  .primary-button-no-border.primary-slide-button:hover,
  .primary-button-no-border.primary-slide-button:focus {
    border: none !important;
  }

  .primary-slide-button-text-container {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .primary-slide-button-text {
    display: flex;
    align-items: center;
    justify-content: space-between;
    line-height: 1;
    text-transform: {{ settings.primary_button_text_transform | default: 'uppercase' }};
    letter-spacing: 0;
    transition: transform 0.6s ease-in-out;
    width: 100%;
    height: 26px;
    padding: 0 5px;
  }

  .primary-slide-button:hover .primary-slide-button-text,
  .primary-slide-button:focus .primary-slide-button-text {
    transform: translateX(-100%);
  }

  .primary-slide-button-text-hover {
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    line-height: 1;
    text-transform: {{ settings.primary_button_text_transform | default: 'uppercase' }};
    letter-spacing: 0;
    transform: translateX(100%);
    transition: transform 0.6s ease-in-out;
    width: 100%;
    height: 26px;
    padding: 0 5px;
  }

  .primary-slide-button:hover .primary-slide-button-text-hover,
  .primary-slide-button:focus .primary-slide-button-text-hover {
    transform: translateX(0);
  }

  .primary-slide-button:not(:hover):not(:focus) .primary-slide-button-text,
  .primary-slide-button:not(:hover):not(:focus) .primary-slide-button-text-hover {
    transition: none;
  }

  .primary-slide-button-arrow {
    flex-shrink: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  {% if settings.primary_button_show_icon == false %}
  .primary-slide-button-arrow {
    display: none !important;
  }
  {% endif %}

  .primary-slide-button-arrow svg,
  .primary-slide-button-arrow img {
    width: 16px;
    height: 16px;
    min-width: 16px;
    min-height: 16px;
    max-width: 16px;
    max-height: 16px;
    transition: transform 0.2s ease;
    display: block;
    fill: currentColor;
    margin-left: 10px;
    object-fit: contain;
    flex-shrink: 0;
  }

  @media screen and (max-width: 750px) {
    .primary-slide-button-text,
    .primary-slide-button-text-hover {
      font-size: {{ mobile_font_size }} !important;
      font-weight: {{ mobile_font_weight }} !important;
      line-height: {{ mobile_line_height }} !important;
      height: 20px;
    }

    .primary-slide-button {
      padding: 0;
      {% if mobile_button_width != blank %}width: {{ mobile_button_width }} !important;{% endif %}
    }

    .primary-slide-button-arrow svg,
    .primary-slide-button-arrow img {
      width: 14px;
      height: 14px;
      min-width: 14px;
      min-height: 14px;
      max-width: 14px;
      max-height: 14px;
    }
  }
</style>

{% if render_as_anchor %}
  <a
    href="{{ button_url }}"
    class="primary-slide-button {{ unique_class }} {{ primary_class }}"
    aria-label="{{ button_text | escape }}"
    role="button"
    tabindex="0"
  >
    <div class="primary-slide-button-text-container">
      <div
        class="primary-slide-button-text"
        style="font-size: {{ button_font_size }}; font-weight: {{ font_weight }}; line-height: {{ button_line_height }}; font-style: var(--font-body-style); font-family: var(--font-body-family);"
      >
        {{ button_text | escape }}
        <span class="primary-slide-button-arrow" aria-hidden="true">
          {% if settings.primary_button_custom_icon != blank %}
            <img
              src="{{ settings.primary_button_custom_icon | image_url: width: 16 }}"
              alt="icon"
              width="16"
              height="16"
              style="display: block;"
            >
          {% else %}
            {% render 'icon-playback', width: '16', height: '16', viewBox: '4.5 1.5 8.5 13', stoke: 'currentColor' %}
          {% endif %}
        </span>
      </div>
      <div
        class="primary-slide-button-text-hover"
        style="font-size: {{ button_font_size }}; font-weight: {{ font_weight }}; line-height: {{ button_line_height }}; font-style: var(--font-body-style); font-family: var(--font-body-family);"
      >
        {{ button_text | escape }}
        <span class="primary-slide-button-arrow" aria-hidden="true">
          {% if settings.primary_button_custom_icon_hover != blank %}
            <img
              src="{{ settings.primary_button_custom_icon_hover | image_url: width: 16 }}"
              alt="icon"
              width="16"
              height="16"
              style="display: block;"
            >
          {% elsif settings.primary_button_custom_icon != blank %}
            <img
              src="{{ settings.primary_button_custom_icon | image_url: width: 16 }}"
              alt="icon"
              width="16"
              height="16"
              style="display: block;"
            >
          {% else %}
            {% render 'icon-playback',
              width: '16',
              height: '16',
              viewBox: '4.5 1.5 8.5 13',
              stoke: 'currentColor',
              fill: 'currentColor'
            %}
          {% endif %}
        </span>
      </div>
    </div>
  </a>
{% else %}
  <button
    type="{{ button_type }}"
    class="primary-slide-button {{ unique_class }} {{ primary_class }}"
    aria-label="{{ button_text | escape }}"
    {{ data_attributes }}
  >
    <div class="primary-slide-button-text-container">
      <div
        class="primary-slide-button-text"
        style="font-size: {{ button_font_size }}; font-weight: {{ font_weight }}; line-height: {{ button_line_height }}; font-style: var(--font-body-style); font-family: var(--font-body-family);"
      >
        {{ button_text | escape }}
        <span class="primary-slide-button-arrow" aria-hidden="true">
          {% if settings.primary_button_custom_icon != blank %}
            <img
              src="{{ settings.primary_button_custom_icon | image_url: width: 16 }}"
              alt="icon"
              width="16"
              height="16"
              style="display: block;"
            >
          {% else %}
            {% render 'icon-playback',
              width: '16',
              height: '16',
              viewBox: '4.5 1.5 8.5 13',
              stoke: 'currentColor',
              fill: 'currentColor'
            %}
          {% endif %}
        </span>
      </div>
      <div
        class="primary-slide-button-text-hover"
        style="font-size: {{ button_font_size }}; font-weight: {{ font_weight }}; line-height: {{ button_line_height }}; font-style: var(--font-body-style); font-family: var(--font-body-family);"
      >
        {{ button_text | escape }}
        <span class="primary-slide-button-arrow" aria-hidden="true">
          {% if settings.primary_button_custom_icon_hover != blank %}
            <img
              src="{{ settings.primary_button_custom_icon_hover | image_url: width: 16 }}"
              alt="icon"
              width="16"
              height="16"
              style="display: block;"
            >
          {% elsif settings.primary_button_custom_icon != blank %}
            <img
              src="{{ settings.primary_button_custom_icon | image_url: width: 16 }}"
              alt="icon"
              width="16"
              height="16"
              style="display: block;"
            >
          {% else %}
            {% render 'icon-playback',
              width: '16',
              height: '16',
              viewBox: '4.5 1.5 8.5 13',
              stoke: 'currentColor',
              fill: 'currentColor'
            %}
          {% endif %}
        </span>
      </div>
    </div>
  </button>
{% endif %}
